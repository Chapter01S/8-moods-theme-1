{%- liquid
  assign heading = section.settings.heading | escape
  assign blocks_count = section.blocks.size
  assign desktop_cols = section.settings.desktop_columns
  if blocks_count < desktop_cols
    assign desktop_cols = blocks_count
  endif
-%}

<style>
  .section-{{ section.id }} {
    background-color: {{ section.settings.section_background_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  /* Desktop margins */
  @media (min-width: {{ section.settings.mobile_breakpoint | plus: 1 }}px) {
    .section-{{ section.id }} {
      margin-top: {{ section.settings.desktop_margin_top }}px;
      margin-bottom: {{ section.settings.desktop_margin_bottom }}px;
    }
  }

  /* Mobile margins */
  @media (max-width: {{ section.settings.mobile_breakpoint }}px) {
    .section-{{ section.id }} {
      margin-top: {{ section.settings.mobile_margin_top }}px;
      margin-bottom: {{ section.settings.mobile_margin_bottom }}px;
    }
  }

  .section-{{ section.id }} .container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding-top: {{ section.settings.container_padding_top }}px;
    padding-bottom: {{ section.settings.container_padding_bottom }}px;
    padding-left: {{ section.settings.container_padding_left }}px;
    padding-right: {{ section.settings.container_padding_right}}px;
    border-radius: {{ section.settings.border_radius }}px;
    {% if section.settings.enable_container_border %}
      border: {{ section.settings.container_border_width }}px {{ section.settings.container_border_style }} {{ section.settings.container_border_color }};
    {% endif %}
  }

  {% if section.settings.container_background_type == 'color' %}
    @media screen and (max-width: 749px) {
      .section-{{ section.id }} .container {
        background: {{ section.settings.container_background_color_mobile }};
      }
    }
    @media screen and (min-width: 750px) {
      .section-{{ section.id }} .container {
        background: {{ section.settings.container_background_color_desktop }};
      }
    }
  {% else %}
    @media screen and (max-width: 749px) {
      .section-{{ section.id }} .container {
        {% if section.settings.container_background_image_mobile %}
          background-image: url('{{ section.settings.container_background_image_mobile | image_url }}');
          background-size: cover;
          background-position: center;
        {% else %}
          background: {{ section.settings.container_background_color_mobile }};
        {% endif %}
      }
    }
    @media screen and (min-width: 750px) {
      .section-{{ section.id }} .container {
        {% if section.settings.container_background_image_desktop %}
          background-image: url('{{ section.settings.container_background_image_desktop | image_url }}');
          background-size: cover;
          background-position: center;
        {% else %}
          background: {{ section.settings.container_background_color_desktop }};
        {% endif %}
      }
    }
  {% endif %}

  .section-{{ section.id }} .layout-wrapper {
    display: flex;
    align-items: stretch; /* stretch children to equal row height */
    flex-wrap: nowrap; /* keep heading and grid on the same row */
  }

  /* Desktop layout gap */
  @media (min-width: {{ section.settings.mobile_breakpoint | plus: 1 }}px) {
    .section-{{ section.id }} .layout-wrapper {
      gap: {{ section.settings.desktop_layout_gap }}px;
    }
  }

  /* Mobile layout gap */
  @media (max-width: {{ section.settings.mobile_breakpoint }}px) {
    .section-{{ section.id }} .layout-wrapper {
      gap: {{ section.settings.mobile_layout_gap }}px;
    }
  }

  .section-{{ section.id }} .heading {
    flex: 0 0 25%; /* keep heading as a column in the same row */
    display: flex; /* center heading inside its column */
    {% if section.settings.heading_alignment == 'left' %}
      justify-content: flex-start;
    {% elsif section.settings.heading_alignment == 'center' %}
      justify-content: center;
    {% elsif section.settings.heading_alignment == 'right' %}
      justify-content: flex-end;
    {% endif %}
    align-items: center; /* vertical center within row height */
    font-weight: 700;
    font-size: {{ section.settings.heading_size_desktop }}px;
    line-height: {{ section.settings.heading_line_height }};
    letter-spacing: var(--letter-spacing-heading);
    color: {{ section.settings.heading_color }} !important;
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: 0;
  }

  .section-{{ section.id }} .features-grid {
    flex: 1;
    display: grid;
    grid-template-columns: repeat({{ desktop_cols }}, 1fr);
    gap: {{ section.settings.gap }}px !important;
  }

  .section-{{ section.id }} .feature-item {
    text-align: {{ section.settings.text_alignment }};
    display: flex;
    flex-direction: column;
    min-height: fit-content;
    position: relative;
  }

  .section-{{ section.id }} .feature-item > * {
    position: static;
    z-index: auto;
  }

  .section-{{ section.id }} .feature-icon {
    flex-shrink: 0;
    margin-bottom: {{ section.settings.desktop_icon_margin_bottom | default: 12 }}px;
    {% if section.settings.icon_alignment == 'left' %}
      align-self: flex-start;
    {% elsif section.settings.icon_alignment == 'center' %}
      align-self: center;
    {% elsif section.settings.icon_alignment == 'right' %}
      align-self: flex-end;
    {% endif %}
    min-height: {{ section.settings.icon_size }}px; /* reserve space on desktop */
    line-height: {{ section.settings.icon_size }}px;
  }

  .section-{{ section.id }} .feature-icon img {
    display: block;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    max-width: {{ section.settings.icon_size }}px;
    max-height: {{ section.settings.icon_size }}px;
    object-fit: contain;
    margin: 0;
  }

  .section-{{ section.id }} .feature-icon svg {
    display: block;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    max-width: {{ section.settings.icon_size }}px;
    max-height: {{ section.settings.icon_size }}px;
  }
  .section-{{ section.id }} .feature-icon svg * {
    position: static !important;
  }

  .section-{{ section.id }} .feature-title {
    font-weight: 700;
    font-size: {{ section.settings.feature_title_size_desktop | default: section.settings.feature_title_size | default: 18 }}px;
    line-height: {{ section.settings.sub_line_height }};
    letter-spacing: var(--letter-spacing-body);
    color: {{ section.settings.title_color }} !important;
    margin-bottom: 5px;
    margin-top: 6px; /* ensure space below icon on desktop */
  }

  .section-{{ section.id }} .feature-desc {
    font-weight: 400;
    font-size: {{ section.settings.feature_desc_size_desktop | default: section.settings.feature_desc_size | default: 13 }}px;
    line-height: {{ section.settings.body_line_height }};
    letter-spacing: var(--letter-spacing-body);
    color: {{ section.settings.desc_color }} !important;
  }

  @media (max-width: {{ section.settings.tablet_breakpoint }}px) {
    .section-{{ section.id }} .features-grid {
      grid-template-columns: repeat({{ section.settings.tablet_columns }}, 1fr);
      gap: {{ section.settings.gap }}px !important;
    }
  }

  @media (max-width: {{ section.settings.mobile_breakpoint }}px) {
    .section-{{ section.id }} {
      padding-left: {{ section.settings.mobile_section_padding_left }}px;
      padding-right: {{ section.settings.mobile_section_padding_right }}px;
    }
    .section-{{ section.id }} .layout-wrapper {
      flex-direction: column; /* stack on mobile */
      flex-wrap: wrap;
    }
    .section-{{ section.id }} .heading {
      flex: none;
      width: 100%;
      font-size: {{ section.settings.heading_size_mobile }}px;
    }
    .section-{{ section.id }} .features-grid {
      grid-template-columns: repeat({{ section.settings.mobile_columns }}, 1fr);
      gap: {{ section.settings.gap | times: 1.2 | round }}px !important;
    }
    .section-{{ section.id }} .feature-item {
      min-height: auto;
      height: auto;
      display: flex !important;
      flex-direction: column !important;
      align-items: flex-start !important;
    }
    .section-{{ section.id }} .feature-item > * {
      position: static !important;
      z-index: auto !important;
    }
    .section-{{ section.id }} .feature-item {
      row-gap: 10px !important;
    }
    .section-{{ section.id }} .feature-icon {
      margin-bottom: {{ section.settings.mobile_icon_gap | default: 24 }}px;
      position: static !important;
      width: 100%;
      display: block;
      {% if section.settings.icon_alignment == 'left' %}
        align-self: flex-start !important;
      {% elsif section.settings.icon_alignment == 'center' %}
        align-self: center !important;
      {% elsif section.settings.icon_alignment == 'right' %}
        align-self: flex-end !important;
      {% endif %}
      height: {{ section.settings.mobile_icon_size | default: section.settings.icon_size }}px !important; /* reserve vertical space for icon */
      line-height: {{ section.settings.mobile_icon_size | default: section.settings.icon_size }}px !important;
    }
    .section-{{ section.id }} .feature-icon img {
      position: static !important;
      display: block !important;
      float: none !important;
      clear: both !important;
      width: {{ section.settings.mobile_icon_size | default: section.settings.icon_size }}px !important;
      height: {{ section.settings.mobile_icon_size | default: section.settings.icon_size }}px !important;
      max-width: {{ section.settings.mobile_icon_size | default: section.settings.icon_size }}px !important;
      max-height: {{ section.settings.mobile_icon_size | default: section.settings.icon_size }}px !important;
      object-fit: contain !important;
      {% if section.settings.icon_alignment == 'left' %}
        margin: 0 !important;
      {% elsif section.settings.icon_alignment == 'center' %}
        margin: 0 auto !important;
      {% elsif section.settings.icon_alignment == 'right' %}
        margin: 0 0 0 auto !important;
      {% endif %}
    }
    .section-{{ section.id }} .feature-icon svg {
      position: static !important;
      display: block !important;
      float: none !important;
      clear: both !important;
      width: {{ section.settings.mobile_icon_size | default: section.settings.icon_size }}px !important;
      height: {{ section.settings.mobile_icon_size | default: section.settings.icon_size }}px !important;
      max-width: {{ section.settings.mobile_icon_size | default: section.settings.icon_size }}px !important;
      max-height: {{ section.settings.mobile_icon_size | default: section.settings.icon_size }}px !important;
      {% if section.settings.icon_alignment == 'left' %}
        margin: 0 !important;
      {% elsif section.settings.icon_alignment == 'center' %}
        margin: 0 auto !important;
      {% elsif section.settings.icon_alignment == 'right' %}
        margin: 0 0 0 auto !important;
      {% endif %}
    }
    .section-{{ section.id }} .feature-icon svg * {
      position: static !important;
    }
    .section-{{ section.id }} .feature-title {
      margin-top: 6px !important;
      position: static !important;
      width: 100% !important;
      clear: both !important;
      float: none !important;
      padding-top: 4px !important; /* small fallback spacing in case icon overlaps */
      font-size: {{ section.settings.feature_title_size_mobile | default: section.settings.feature_title_size | default: 16 }}px !important;
    }
    .section-{{ section.id }} .feature-desc {
      position: static !important;
      width: 100% !important;
      clear: both !important;
      float: none !important;
      margin-top: 5px !important;
      font-size: {{ section.settings.feature_desc_size_mobile | default: section.settings.feature_desc_size | default: 12 }}px !important;
    }
  }
  </style>
  
  <section class="section-{{ section.id }}">
    <div class="container">
      <div class="layout-wrapper">
        {%- if heading != blank -%}
          <h2 class="heading">{{ heading }}</h2>
        {%- endif -%}
        {%- if section.blocks.size > 0 -%}
          <div class="features-grid">
            {%- for block in section.blocks -%}
              <div class="feature-item" {{ block.shopify_attributes }}>
                {%- if block.settings.icon != blank -%}
                  <div class="feature-icon">
                    <img 
                      src="{{ block.settings.icon | image_url: width: section.settings.icon_size }}" 
                      alt="{{ block.settings.title | escape }}" 
                      loading="lazy"
                    >
                  </div>
                {%- endif -%}
                {%- if block.settings.title != blank -%}
                  <h3 class="feature-title">{{ block.settings.title | escape }}</h3>
                {%- endif -%}
                {%- if block.settings.description != blank -%}
                  <p class="feature-desc">{{ block.settings.description | escape }}</p>
                {%- endif -%}
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </section>
  
