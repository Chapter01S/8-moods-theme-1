<style>
  .cart-image-banner-{{ block.id }} {
    display: block;
    width: 100%;
    height: {{ block.settings.banner_height | default: 150 }}px;
    margin-top: 0 !important;
    margin-bottom: {{ block.settings.margin_bottom | default: 0 }}px;
    overflow: hidden;
    position: relative;
    z-index: 1;
    flex-shrink: 0 !important;
  }

  .cart-image-banner-{{ block.id }} .banner-wrapper {
    position: relative;
    width: 100%;
    height: {{ block.settings.banner_height | default: 150 }}px;
    overflow: hidden;
    {% if block.settings.banner_link != blank %}
      cursor: pointer;
    {% endif %}
  }

  .cart-image-banner-{{ block.id }} .banner-image {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit | default: 'cover' }};
    display: block;
  }

  {% if block.settings.banner_link != blank %}
    .cart-image-banner-{{ block.id }} .banner-wrapper:hover {
      opacity: 0.9;
      transition: opacity 0.3s ease;
    }
  {% endif %}
</style>

{% if block.settings.banner_image != blank %}
  <div class="cart-image-banner-{{ block.id }}">
    {% if block.settings.banner_link != blank %}
      <a href="{{ block.settings.banner_link }}" class="banner-wrapper" target="_blank" rel="noopener noreferrer">
        <img
          src="{{ block.settings.banner_image | image_url: width: 800 }}"
          alt="Cart banner"
          class="banner-image"
          loading="lazy"
        >
      </a>
    {% else %}
      <div class="banner-wrapper">
        <img
          src="{{ block.settings.banner_image | image_url: width: 800 }}"
          alt="Cart banner"
          class="banner-image"
          loading="lazy"
        >
      </div>
    {% endif %}
  </div>
{% endif %}

