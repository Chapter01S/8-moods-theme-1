{%- comment -%}
  Block-level custom icon sizing overrides
  These MUST come after the section styles to win in cascade order
{%- endcomment -%}
{% for block in section.blocks %}
  {% if block.settings.use_custom_icon_size %}
    <style>
      /* Block {{ block.id }} custom icon sizing */
      #benefits-{{ section.id }} .benefits-grid__items .benefit-item[data-block-id="{{ block.id }}"] .benefit-item__icon-image,
      #benefits-{{ section.id }} .benefits-grid__items .benefit-item[data-block-id="{{ block.id }}"] .benefit-item__icon-svg {
        width: {{ block.settings.icon_size_mobile | default: 30 }}px !important;
        height: {{ block.settings.icon_size_mobile | default: 30 }}px !important;
      }
      @media screen and (min-width: 768px) {
        #benefits-{{ section.id }} .benefits-grid__items .benefit-item[data-block-id="{{ block.id }}"] .benefit-item__icon-image,
        #benefits-{{ section.id }} .benefits-grid__items .benefit-item[data-block-id="{{ block.id }}"] .benefit-item__icon-svg {
          width: {{ block.settings.icon_size_desktop | default: 30 }}px !important;
          height: {{ block.settings.icon_size_desktop | default: 30 }}px !important;
        }
      }
    </style>
  {% endif %}
{% endfor %}

{% schema %}
{
  "name": "4 Benefits",
  "class": "shopify-section--four-benefits-new", 
  "disabled_on": {
    "groups": ["header", "footer", "aside"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading_regular",
      "label": "Heading Text",
      "default": "Your main heading"
    },
    {
      "type": "text",
      "id": "heading_accent",
      "label": "Heading Accent Text",
      "default": "goes here"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "select",
      "id": "desktop_layout",
      "label": "Desktop Layout",
      "options": [
        { "value": "grid", "label": "2x2 Grid" },
        { "value": "row", "label": "Single Row" }
      ],
      "default": "grid"
    },
    {
      "type": "checkbox",
      "id": "use_theme_colors",
      "label": "Apply Theme Colors",
      "default": true
    },
    {
      "type": "header",
      "content": "Alignment"
    },
    {
      "type": "select",
      "id": "heading_alignment_mobile",
      "label": "Heading Alignment (Mobile)",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"}
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "heading_alignment_desktop",
      "label": "Heading Alignment (Desktop)",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"}
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "benefit_content_alignment_mobile",
      "label": "Benefit Content Alignment (Mobile)",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"}
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "benefit_content_alignment_desktop",
      "label": "Benefit Content Alignment (Desktop)",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"}
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "min": 18,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading Size (Mobile)",
      "default": 28
    },
    {
      "type": "range",
      "id": "heading_size_desktop",
      "min": 24,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Heading Size (Desktop)",
      "default": 42
