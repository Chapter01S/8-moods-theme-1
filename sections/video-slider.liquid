       margin-left: auto;
       margin-right: 0;
     {% else %}
       margin-left: 0;
       margin-right: auto;
     {% endif %}
   }

   .video-section-{{ section.id }} .video-slider-social-badge::before {
     content: '' !important;
     position: absolute !important;
     top: -1px !important;
     right: -1px !important;
     bottom: -1px !important;
     left: -1px !important;
     z-index: -1 !important;
     border-radius: {{ section.settings.badge_border_radius | default: 50 }}px !important;
     {% if section.settings.social_platform == 'tiktok' %}
       background: linear-gradient(45deg, #00f2ea, #ff0050) !important;
     {% elsif section.settings.social_platform == 'instagram' %}
       background: linear-gradient(45deg, #833ab4, #fd1d1d, #fcb045) !important;
     {% elsif section.settings.social_platform == 'facebook' %}
       background: #1877F2 !important;
     {% endif %}
   }

   .video-section-{{ section.id }} .video-slider-social-icon {
     width: {{ section.settings.badge_icon_size | default: 12 }}px !important;
     height: {{ section.settings.badge_icon_size | default: 12 }}px !important;
     flex-shrink: 0 !important;
     display: block !important;
   }

   .video-section-{{ section.id }} .video-slider-social-text {
     font-weight: 500 !important;
     {% if section.settings.use_gradient_text %}
       {% if section.settings.social_platform == 'tiktok' %}
         background: linear-gradient(45deg, #00f2ea, #ff0050) !important;
       {% elsif section.settings.social_platform == 'instagram' %}
         background: linear-gradient(45deg, #833ab4, #fd1d1d, #fcb045) !important;
       {% elsif section.settings.social_platform == 'facebook' %}
         background: linear-gradient(45deg, #1877F2, #4267B2) !important;
       {% endif %}
       -webkit-background-clip: text !important;
       -webkit-text-fill-color: transparent !important;
       background-clip: text !important;
     {% endif %}
   }

   @media (max-width: 768px) {
     .video-section-{{ section.id }} .video-slider-social-badge {
       font-size: {{ section.settings.badge_font_size_mobile | default: section.settings.badge_font_size | default: 11 }}px !important;
       padding: {{ section.settings.badge_padding_vertical_mobile | default: section.settings.badge_padding_vertical | default: 4 }}px {{ section.settings.badge_padding_horizontal_mobile | default: section.settings.badge_padding_horizontal | default: 12 }}px !important;
     }

     .video-section-{{ section.id }} .video-slider-social-icon {
       width: {{ section.settings.badge_icon_size_mobile | default: section.settings.badge_icon_size | default: 12 }}px !important;
       height: {{ section.settings.badge_icon_size_mobile | default: section.settings.badge_icon_size | default: 12 }}px !important;
     }
   }

  .video-section-{{ section.id }} .cards-grid {
    margin-top: {{ section.settings.grid_margin_top }}px;
    position: relative;
	width: 100%;
    height: {{ section.settings.desktop_container_height }}px;
  }

   {% if section.settings.enable_gradient_mask %}
   @media screen and (min-width: 390px) {
     .video-section-{{ section.id }} .cards-grid {
       -webkit-mask: linear-gradient(to right,
         transparent 0%,
         black {{ section.settings.mask_fade_distance }}px,
         black calc(100% - {{ section.settings.mask_fade_distance }}px),
         transparent 100%);
       mask: linear-gradient(to right,
         transparent 0%,
         black {{ section.settings.mask_fade_distance }}px,
         black calc(100% - {{ section.settings.mask_fade_distance }}px),
         transparent 100%);
     }
   }
   {% endif %}

  .video-section-{{ section.id }} .cards-container {
	display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 20px;
    transition: transform 0.3s ease;
    width: fit-content;
    margin: 0 auto;
  }

     /* Navigation buttons styling */
   .video-section-{{ section.id }} .video-navigation-container {
  	width: 100%;
     margin-top: 45px;
     display: flex;
     justify-content: center;
  }

   .video-section-{{ section.id }} .video-navigation {
  	display: flex;
     justify-content: center;
     gap: 12px;
     margin-top: 20px;
   }

  /* Navigation buttons now use global-nav-button snippet */

   {% if section.settings.hide_navigation_desktop %}
   @media screen and (min-width: 1025px) {
     .video-section-{{ section.id }} .video-navigation-container {
  	display: none;
  }
   }
   {% endif %}

  @media screen and (max-width: 768px) {
    .video-section-{{ section.id }} .video-navigation-container {
margin-top: 20px;
    }
  }

   .video-section-{{ section.id }} .card {
     border-radius: {{ section.settings.card_border_radius }}px !important;
     width: {{ section.settings.desktop_card_width }}px;
     height: {{ section.settings.desktop_container_height }}px !important;
     max-height: {{ section.settings.desktop_container_height }}px !important;
     position: relative;
     overflow: hidden;
     display: flex;
     flex-direction: column;
     justify-content: flex-end;
     padding: {{ section.settings.card_padding }}px !important;
     transition: all {{ section.settings.transition_duration }}s ease;
     flex-shrink: 0;
     {% if section.settings.enable_video_border %}
       border: {{ section.settings.video_border_width }}px {{ section.settings.video_border_style }} {{ section.settings.video_border_color }};
     {% endif %}
     {% if section.settings.enable_shadows %}
       box-shadow: {{ section.settings.card_shadow }};
     {% endif %}
   }





    .video-section-{{ section.id }} .card-video {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
    object-fit: cover;
    z-index: 1;
    border: none;
    outline: none;
    border-radius: {{ section.settings.card_border_radius }}px;
  }

   /* Hide video controls completely */
   .video-section-{{ section.id }} .card-video::-webkit-media-controls {
     display: none !important;
   }

   .video-section-{{ section.id }} .card-video::-webkit-media-controls-panel {
     display: none !important;
   }

   .video-section-{{ section.id }} .card-video::-webkit-media-controls-enclosure {
     display: none !important;
   }

   /* Video shows first frame as thumbnail */
   .video-section-{{ section.id }} .card-video {
     object-fit: cover;
     cursor: pointer;
     opacity: 1;
   }

  /* Fallback image styling */
  .video-section-{{ section.id }} .card-image {
    position: absolute;
    top: 0;
    left: 0;
		width: 100%;
		height: 100%;
    object-fit: cover;
    z-index: 1;
    border-radius: {{ section.settings.card_border_radius }}px;
  }

  /* Card styling */
  .video-section-{{ section.id }} .card {
    background-size: cover;
    background-position: center;
    min-height: 300px;
    border-radius: {{ section.settings.card_border_radius }}px !important;
  }

   /* Play button overlay */
   .video-section-{{ section.id }} .card::before {
     content: '';
     position: absolute;
     top: 50%;
     left: 50%;
     transform: translate(-50%, -50%);
     width: 60px;
     height: 60px;
     background: {{section.settings.play_btn_background}};
     border-radius: 50%;
     z-index: 3;
     pointer-events: none;
     transition: opacity 0.3s ease;
   }

  .video-section-{{ section.id }} .card::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 51%;
    transform: translate(-50%, -50%);
    width: 0;
    height: 0;
    border-left: 20px solid {{section.settings.play_btn}};
    border-top: 12px solid transparent;
    border-bottom: 12px solid transparent;
    z-index: 4;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

   .video-section-{{ section.id }} .card:hover::before,
   .video-section-{{ section.id }} .card:hover::after {
     opacity: 0.8;
   }

   /* Hide play button when video is playing */
   .video-section-{{ section.id }} .card.playing::before,
   .video-section-{{ section.id }} .card.playing::after {
     opacity: 0;
   }

   .video-section-{{ section.id }} .card-video.paused {
     filter: brightness(0.9);
   }

   .video-section-{{ section.id }} .card-video:not(.paused) {
     filter: brightness(1);
   }



  .video-section-{{ section.id }} .card-image {
    position: absolute;
