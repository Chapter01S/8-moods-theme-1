    line-height: {{ section.settings.heading_line_height_mobile | default: 1.2 }} !important;
    text-align: {{ section.settings.heading_alignment_mobile }} !important;
    margin-bottom: {{ section.settings.heading_bottom_margin | default: 16 }}px !important;
  }
  
  #benefits-{{ section.id }} .benefits-grid__heading-accent {
    padding: 2px 4px !important;
    margin: -2px -4px !important;
    display: inline-block !important;
    margin-left: {{ section.settings.accent_text_margin_left }}px !important;
    
