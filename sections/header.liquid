{%- style -%}
    {%- liquid
      assign header_background = ''
      assign header_text_color = ''
      assign header_gradient = ''

      if section.settings.use_theme_colors
        assign header_background = settings.global_section_background_color
        assign header_text_color = settings.global_section_text_color

        if section.settings.use_global_gradient
          if settings.global_section_use_gradient_background
  assign header_gradient = 'var(--gradient-background)'
          elsif settings.global_section_gradient != blank
            assign header_gradient = settings.global_section_gradient
          else
            assign header_gradient = ''
          endif
        else
          assign header_gradient = ''
        endif
      endif
    -%}

    .header-wrapper { /* Targeting .header-wrapper directly */
        /* Fallback or default background if nothing is set and you want one */

      {%- if header_text_color != blank and header_text_color != '' -%}
        color: {{ header_text_color }};
        /* Set CSS variable for child elements if needed */
        --color-header-foreground: {{ header_text_color }};
      {%- else -%}
        /* Fallback or default text color */
        /* color: #000000; */
        /* --color-header-foreground: #000000; */
      {%- endif -%}

      {% if settings.header_border_thickness > 0 %}
        border-bottom: {{ settings.header_border_thickness }}px solid {{ settings.header_border_color }};
      {% endif %}

      {% if section.settings.margin_bottom != 0 %}
        margin-bottom: {{ section.settings.margin_bottom }}px;
      {% endif %}
    }

    /* Apply text color to links and icons within the header when use_theme_colors is true */
    {% if section.settings.use_theme_colors and header_text_color != blank and header_text_color != '' %}
    .header-wrapper .header__heading-link,
    .header-wrapper .header__icon,
    .header-wrapper .list-menu__item,
    .header-wrapper .list-menu__item--link,
    .header-wrapper summary.list-menu__item,
    .header-wrapper .header__active-menu-item {
      color: rgb(var(--color-drawer-text)) !important;
    }

    .header-wrapper .header__icon svg,
    .header-wrapper .list-menu__item svg {
      fill: {{ header_text_color }};
    }
    {% endif %}

    /* Specific styling for cart bag icon */
    .cart-bag-icon {
      fill: none !important;
      height: 27px !important;
      width: 27px !important;
      stroke: rgb(var(--color-drawer-text)) !important;
    }

    .cart-bag-icon path,
    .cart-bag-icon line {
      fill: none !important;
      stroke: rgb(var(--color-drawer-text)) !important;
    }

    /* Override any icon classes that might interfere */
    svg.cart-bag-icon.icon,
    svg.cart-bag-icon.icon-cart-empty,
    svg.cart-bag-icon.icon-cart-empty-custom {
      fill: none !important;
      height: 27px !important;
      width: 27px !important;
      stroke: rgb(var(--color-drawer-text)) !important;
    }

    svg.cart-bag-icon.icon path,
    svg.cart-bag-icon.icon-cart-empty path,
    svg.cart-bag-icon.icon-cart-empty-custom path,
    svg.cart-bag-icon.icon line,
    svg.cart-bag-icon.icon-cart-empty line,
    svg.cart-bag-icon.icon-cart-empty-custom line {
      fill: none !important;
      stroke: rgb(var(--color-drawer-text)) !important;
    }

    /* Account icon sizing */
    .header__icon--account .svg-wrapper svg,
    .header__icon--account account-icon svg,
    .menu-drawer__account .svg-wrapper svg,
    .menu-drawer__account account-icon svg {
      width: 40px !important;
      height: 40px !important;
      fill: currentColor !important;
    }

    .header__icon--account .svg-wrapper,
    .header__icon--account account-icon,
    .menu-drawer__account .svg-wrapper,
    .menu-drawer__account account-icon {
      display: inline-flex !important;
      align-items: center !important;
      justify-content: center !important;
