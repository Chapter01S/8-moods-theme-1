    .video-section-{{ section.id }} .card-overlay {
      position: absolute !important;
      bottom: 0 !important;
      left: 0 !important;
      width: 100% !important;
      height: {{ section.settings.gradient_overlay_height | default: 60 }}% !important;
  	{%- liquid
  		assign overlay_color = section.settings.overlay_color | color_to_rgb
