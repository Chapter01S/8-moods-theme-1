   width: {{ section.settings.card_width }}px;
   border-radius: {{ section.settings.card_border_radius }}px;
   border: 1px solid {% if section.settings.use_theme_colors %}#e0e0e0{% else %}{{ section.settings.card_border_color }}{% endif %};
   background: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.card_background }}{% endif %} !important;
   margin: {{ section.settings.card_margin_top }}px {{ section.settings.card_margin_right }}px {{ section.settings.card_margin_bottom }}px {{ section.settings.card_margin_left }}px;
 }

 /* Review Image Container */
 .reviews-transformation-section .review-image-container {
   border-top-left-radius: {{ section.settings.card_border_radius }}px;
   border-top-right-radius: {{ section.settings.card_border_radius }}px;
 }

 .reviews-transformation-section .empty-image {
   background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color | color_lighten: 10 }}{% else %}#f0f0f0{% endif %} !important;
 }

 /* Review Text */
 .reviews-transformation-section .review-text {
   color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.review_text_color }}{% endif %} !important;
   font-size: {{ section.settings.review_text_size }}px !important;
 }

 /* Reviewer Info */
 .reviews-transformation-section .reviewer-info {
   color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.reviewer_info_color }}{% endif %} !important;
   background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.reviewer_info_bg_color }}{% endif %} !important;
   font-size: {{ section.settings.reviewer_info_font_size }}px !important;
   {% if section.settings.enable_reviewer_info_border %}
     border: {{ section.settings.reviewer_info_border_width }}px {{ section.settings.reviewer_info_border_style }} {{ section.settings.reviewer_info_border_color }} !important;
     border-radius: {{ section.settings.reviewer_info_border_radius }}px !important;
   {% endif %}
 }

 .reviews-transformation-section .carousel-reviewer-name,
 .reviews-transformation-section .reviewer-age {
   font-size: {{ section.settings.reviewer_info_font_size }}px !important;
 }

 .reviews-transformation-section .verified-badge {
   color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.verified_badge_color }}{% endif %} !important;
   font-size: {{ section.settings.verified_badge_font_size }}px !important;
 }

 .reviews-transformation-section .verified-icon {
   width: {{ section.settings.verified_badge_font_size | times: 1.2 }}px !important;
   height: {{ section.settings.verified_badge_font_size | times: 1.2 }}px !important;
   margin-right: 3px !important;
   vertical-align: middle !important;
 }

 /* Product Purchased */
 .reviews-transformation-section .product-purchased {
   border-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_lighten: 70 }}{% else %}{{ section.settings.product_border_color }}{% endif %} !important;
   background-color: {{ section.settings.product_bg_color }} !important;
 }

 .reviews-transformation-section .product-info {
   flex: 1 !important;
   overflow: visible !important;
   display: flex !important;
   flex-direction: column !important;
   height: auto !important;
   min-height: 60px !important;
   justify-content: center !important;
 }

 .reviews-transformation-section .product-purchased-container {
   width: 100% !important;
   overflow: visible !important;
 }

 .reviews-transformation-section .review-product-title {
   color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.product_title_color }}{% endif %} !important;
   font-size: {{ section.settings.product_title_font_size }}px !important;
   word-wrap: break-word !important;
   overflow-wrap: break-word !important;
   white-space: normal !important;
   line-height: 1.3 !important;
   display: block !important;
   visibility: visible !important;
   -webkit-line-clamp: unset !important;
   line-clamp: unset !important;
   -webkit-box-orient: unset !important;
   overflow: visible !important;
 }

 .reviews-transformation-section .product-price {
   color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.product_price_color }}{% endif %} !important;
   font-size: {{ section.settings.product_price_font_size }}px !important;
   letter-spacing: var(--letter-spacing-body);
 }

 .reviews-transformation-section .product-compare-price {
   font-size: {{ section.settings.product_compare_price_font_size }}px !important;
   letter-spacing: var(--letter-spacing-body);
 }

 .reviews-transformation-section .product-purchase-date {
   color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_lighten: 20 }}{% else %}{{ section.settings.purchase_date_color }}{% endif %} !important;
   font-size: {{ section.settings.purchase_date_font_size }}px !important;
 }

 .reviews-transformation-section .purchase-date-icon {
   stroke: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_lighten: 20 }}{% else %}{{ section.settings.purchase_date_icon_color }}{% endif %} !important;
 }

 /* Rating Summary */
 .reviews-transformation-section .reviews-rating-summary {
   {% if section.settings.enable_rating_summary_gradient %}
     background: linear-gradient({{ section.settings.rating_summary_gradient_direction }}, {{ section.settings.rating_summary_gradient_start }}, {{ section.settings.rating_summary_gradient_end }}) !important;
   {% else %}
     background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_2_color }}{% else %}{{ section.settings.rating_summary_bg_color }}{% endif %} !important;
   {% endif %}
   {% if section.settings.enable_rating_summary_border %}
     border: {{ section.settings.rating_summary_border_width }}px {{ section.settings.rating_summary_border_style }} {{ section.settings.rating_summary_border_color }};
   {% endif %}
   border-radius: {{ section.settings.rating_summary_border_radius | default: 50 }}px;
 }

 .reviews-transformation-section .rating-text {
   color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.summary_text_color }}{% endif %} !important;
   font-size: {{ section.settings.rating_summary_font_size | default: 13 }}px !important;
 }

 .reviews-transformation-section .rating-text p {
   margin: 0 !important;
   color: inherit !important;
   font-size: inherit !important;
 }

 .reviews-transformation-section .rating-text strong {
   font-weight: bold !important;
 }

 /* Responsive overrides */
 @media (max-width: 768px) {
   .reviews-transformation-section .review-card {
     width: calc({{ section.settings.card_width }}px * 0.9);
   }
   
   .reviews-transformation-section .review-text {
     font-size: {{ section.settings.review_text_size }}px !important;
   }
   
   .reviews-transformation-section .rating-text {
     font-size: {{ section.settings.rating_summary_font_size | default: 13 }}px !important;
   }
   
   .reviews-transformation-section .reviews-subtitle,
   .reviews-transformation-section .reviews-subtitle.section-title,
   .reviews-transformation-section .reviews-subtitle.heading,
   .reviews-transformation-section .reviews-subtitle.h1 {
    {% if section.settings.custom_heading_styling %}
      font-size: {{ section.settings.heading_font_size_mobile | default: 48 }}px !important;
      line-height: {{ section.settings.heading_line_height | default: 1.2 }} !important;
     {% else %}
      font-size: 3.4rem !important;
    {% endif %}
   }
 }

 @media (max-width: 480px) {
   .reviews-transformation-section .review-card {
     width: calc(({{ section.settings.card_width }}px * 0.6) + 50px);
   }
   
   .reviews-transformation-section .review-text {
     font-size: {{ section.settings.review_text_size_mobile | default: section.settings.review_text_size | minus: 2 }}px !important;
   }
   
   .reviews-transformation-section .rating-text {
     font-size: {{ section.settings.rating_summary_font_size | default: 13 }}px !important;
   }
  
  .reviews-transformation-section .reviews-subtitle,
  .reviews-transformation-section .reviews-subtitle.section-title,
  .reviews-transformation-section .reviews-subtitle.heading,
  .reviews-transformation-section .reviews-subtitle.h1 {
    {% if section.settings.custom_heading_styling %}
      font-size: {{ section.settings.heading_font_size_mobile | default: 48 }}px !important;
      line-height: {{ section.settings.heading_line_height | default: 1.2 }} !important;
    {% else %}
      font-size: 3.4rem !important;
    {% endif %}
  }
 }

 /* New CSS rules for wrapping images */
 .reviews-transformation-section .image-wrapped {
   height: auto;
 }
{%- endstyle -%}

