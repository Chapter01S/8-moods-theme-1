    {
      "type": "range",
      "id": "heading_line_height_desktop",
      "min": 1.0,
      "max": 2.0,
      "step": 0.1,
      "label": "Heading Line Height (Desktop)",
      "default": 1.2,
      "info": "Line height for heading on desktop"
    },
    {
      "type": "range",
      "id": "heading_bottom_margin",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Heading Bottom Margin",
      "default": 16,
      "info": "Space below the heading"
    },
    {
      "type": "range",
      "id": "subtitle_size_mobile",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Subtitle Size (Mobile)",
      "default": 14
    },
    {
      "type": "range",
      "id": "subtitle_size_desktop",
      "min": 14,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Subtitle Size (Desktop)",
      "default": 16
    },
    {
      "type": "range",
      "id": "benefit_title_size_mobile",
      "min": 14,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Benefit Title Size (Mobile)",
      "default": 18
    },
    {
      "type": "range",
      "id": "benefit_title_size_desktop",
      "min": 16,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Benefit Title Size (Desktop)",
      "default": 20
    },
    {
      "type": "range",
      "id": "benefit_description_size_mobile",
      "min": 12,
