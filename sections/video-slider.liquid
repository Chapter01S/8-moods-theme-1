   .video-section-{{ section.id }} .video-slider-social-badge {
     display: inline-flex !important;
     align-items: center !important;
     padding: {{ section.settings.badge_padding_vertical | default: 4 }}px {{ section.settings.badge_padding_horizontal | default: 12 }}px !important;
