  <div class="product-tabs-{{ block.id }}" {{ block.shopify_attributes }} style="background-color: {{ block_background }}; padding-top: {{ padding_top }}px; padding-bottom: {{ padding_bottom }}px; margin-top: {{ block_margin_top | default: 0 }}px; margin-bottom: {{ block_margin_bottom | default: 0 }}px;">
          {% if block_heading != blank %}
              <h2 class="product-tabs-main-heading" style="color: {{ block_heading_color | default: '#000000' }} !important;">{{ block_heading }}</h2>
          {% endif %}
          <div class="product-tabs-container-{{ block.id }}" >
              
            <!-- Tab Navigation -->
            <div class="product-tabs-nav">
              <button 
                class="product-tab-btn active" 
                data-tab="tab1-{{ block.id }}"
              >
                 <span>{{ tab1_title }} </span>
              </button>
              <button 
                class="product-tab-btn" 
                data-tab="tab2-{{ block.id }}"
              >
                <span>{{ tab2_title }}</span>
              </button>
              <button 
                class="product-tab-btn" 
                data-tab="tab3-{{ block.id }}"
              >
                 <span>{{ tab3_title }} </span>
              </button>
              <button 
                class="product-tab-btn" 
                data-tab="tab4-{{ block.id }}"
              >
                 <span style="border-right:none;">{{ tab4_title }} </span>
              </button>
            </div>
  
            <!-- Tab Content -->
            <div class="product-tabs-content">
              
              <!-- Tab 1 Content -->
              <div class="product-tab-panel active" id="tab1-{{ block.id }}">
                <div class="tab-content-inner">
                  {% if tab1_star_rating and tab1_star_rating > 0 %}
                    <div class="tab1-star-rating" style="margin-bottom: 1rem;">
                      {% for i in (1..5) %}
                        {% if i <= tab1_star_rating %}
                          <svg class="star-icon star-filled" width="{{ tab1_star_size }}" height="{{ tab1_star_size }}" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg" style="display: inline-block; vertical-align: middle;">
                            <path d="M16 4.588l2.833 8.719H28l-7.416 5.387 2.832 8.719L16 22.023l-7.417 5.389 2.833-8.719L4 13.307h9.167L16 4.588z" fill="{{ tab1_star_color }}"/>
                          </svg>
                        {% else %}
                          <svg class="star-icon star-empty" width="{{ tab1_star_size }}" height="{{ tab1_star_size }}" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg" style="display: inline-block; vertical-align: middle;">
                            <path d="M16 4.588l2.833 8.719H28l-7.416 5.387 2.832 8.719L16 22.023l-7.417 5.389 2.833-8.719L4 13.307h9.167L16 4.588z" fill="#e0e0e0"/>
                          </svg>
                        {% endif %}
                      {% endfor %}
                    </div>
                  {% endif %}
                  
                  {% if tab1_quote != blank %}
                    <blockquote class="tab-quote" style="color: {{ content_text_color }}; font-size: {{ content_text_size }}px; letter-spacing: var(--letter-spacing-body);">
                      "{{ tab1_quote }}"
                    </blockquote>
                  {% endif %}
                  
                  <div class="tab-author">
                    {% if tab1_author_image != blank %}
                      <img src="{{ tab1_author_image | image_url }}" width="80px" height="80px" alt="Reviewer" class="author-image">
                    {% endif %}
                    <div class="author-info">
                      {% if tab1_author_name != blank %}
                        <div class="author-name">
                          {{ tab1_author_name }}
                        </div>
                      {% endif %}
                      {% if tab1_author_title != blank %}
                        <div class="author-title">
                          {{ tab1_author_title }}
                        </div>
                      {% endif %}
                      {% if tab1_author_date != blank %}
                        <div class="author-date">
                          {{ tab1_author_date }}
                        </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
  
              <!-- Tab 2 Content -->
              <div class="product-tab-panel" id="tab2-{{ block.id }}">
                <div class="tab-content-inner">
                  <div class="comparison-table">
                    
                    <!-- Header Row -->
                    <div class="comparison-header-row">
                      <div class="comparison-col-name"></div>
                      <div class="comparison-col-brand" style="padding:0 8px; height:50px;border-radius:10px 10px 0 0;background: {{ tab2_brand_background }};">
                        {% if tab2_brand_logo != blank %}
                          <img src="{{ tab2_brand_logo | image_url }}" width="100px" height="100px" alt="{{ tab2_brand_name }}" class="brand-logo">
                        {% else %}
                          <span style="color: {% if tab2_brand_header_color != blank %}{{ tab2_brand_header_color }}{% else %}#fff{% endif %} !important; font-size: {{ tab2_column_header_font_size | default: 14 }}px !important; font-weight: 600; letter-spacing: var(--letter-spacing-body);">{{ tab2_brand_name }}</span>
                        {% endif %}
                      </div>
                      <div class="comparison-col-others">
                        <span style="color: {% if tab2_others_header_color != blank %}{{ tab2_others_header_color }}{% else %}{{ content_text_color }}{% endif %} !important; font-size: {{ tab2_column_header_font_size | default: 14 }}px !important; font-weight: 600; letter-spacing: var(--letter-spacing-body);">{{ tab2_others_label }}</span>
                      </div>
                    </div>
  
                    <!-- Comparison Rows -->
                    {% assign items = 'tab2_item_1_name,tab2_item_2_name,tab2_item_3_name,tab2_item_4_name' | split: ',' %}
                    {% for item_key in items %}
                      {% assign index = forloop.index %}
                      {% case index %}
                        {% when 1 %}
                          {% assign item_name = tab2_item_1_name %}
                          {% assign item_desc = tab2_item_1_description %}
                          {% assign item_brand = tab2_item_1_brand_has %}
                          {% assign item_others = tab2_item_1_others_has %}
                        {% when 2 %}
                          {% assign item_name = tab2_item_2_name %}
                          {% assign item_desc = tab2_item_2_description %}
                          {% assign item_brand = tab2_item_2_brand_has %}
                          {% assign item_others = tab2_item_2_others_has %}
                        {% when 3 %}
                          {% assign item_name = tab2_item_3_name %}
                          {% assign item_desc = tab2_item_3_description %}
                          {% assign item_brand = tab2_item_3_brand_has %}
                          {% assign item_others = tab2_item_3_others_has %}
                        {% when 4 %}
                          {% assign item_name = tab2_item_4_name %}
                          {% assign item_desc = tab2_item_4_description %}
                          {% assign item_brand = tab2_item_4_brand_has %}
                          {% assign item_others = tab2_item_4_others_has %}
                      {% endcase %}
  
                      {% if item_name != blank %}
                        <div class="comparison-row">
                          <div class="comparison-col-name">
                            <div class="comparison-text">
                              <div class="comparison-item-name" style="color: {% if tab2_item_name_color != blank %}{{ tab2_item_name_color }}{% else %}{{ content_text_color }}{% endif %} !important; font-size: {{ tab2_item_name_font_size | default: 16 }}px !important; font-weight: 600; letter-spacing: var(--letter-spacing-body);">
                                {{ item_name }}
                              </div>
                              {% if item_desc != blank %}
                                <div class="comparison-description" style="color: {{ tab2_description_color }} !important; font-size: {{ tab2_description_font_size }}px !important; letter-spacing: var(--letter-spacing-body);">
                                  {{ item_desc }}
                                </div>
                              {% endif %}
                            </div>
                          </div>
                          <div class="comparison-col-brand">
                            {% if item_brand %}
                              <svg class="check-icon" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <path d="M20 6L9 17L4 12" stroke="#4CAF50" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                              </svg>
                            {% else %}
                              <svg class="x-icon" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <path d="M18 6L6 18M6 6L18 18" stroke="#F44336" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                              </svg>
                            {% endif %}
                          </div>
                          <div class="comparison-col-others">
                            {% if item_others %}
                              <svg class="check-icon" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <path d="M20 6L9 17L4 12" stroke="#4CAF50" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                              </svg>
                            {% else %}
                              <svg class="x-icon" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <path d="M18 6L6 18M6 6L18 18" stroke="#F44336" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                              </svg>
                            {% endif %}
                          </div>
                        </div>
                      {% endif %}
                    {% endfor %}
  
                  </div>
                </div>
              </div>
  
              <!-- Tab 3 Content -->
              <div class="product-tab-panel" id="tab3-{{ block.id }}">
                <div class="tab-content-inner">
                  <div class="directions-table">
                    
                    <!-- Header Row -->
                    <div class="directions-header-row" style="background-color: {{ tab3_header_background | default: '#f5f5f5' }} !important;">
                      <div class="directions-col-size" style="color: {% if tab3_header_text_color != blank %}{{ tab3_header_text_color }}{% else %}{{ content_text_color }}{% endif %} !important; font-size: {{ tab3_header_font_size | default: 16 }}px !important; font-weight: 600 !important; letter-spacing: var(--letter-spacing-body);">
                        {{ tab3_column1_header }}
                      </div>
                      <div class="directions-col-dosage" style="color: {% if tab3_header_text_color != blank %}{{ tab3_header_text_color }}{% else %}{{ content_text_color }}{% endif %} !important; font-size: {{ tab3_header_font_size | default: 16 }}px !important; font-weight: 600 !important; letter-spacing: var(--letter-spacing-body);">
                        {{ tab3_column2_header }}
                      </div>
                    </div>
  
                    <!-- Direction Rows -->
                    {% assign rows = 'row_1,row_2,row_3,row_4,row_5,row_6' | split: ',' %}
                    {% for row_key in rows %}
                      {% assign index = forloop.index %}
                      {% case index %}
                        {% when 1 %}
                          {% assign row_image = tab3_row_1_image %}
                          {% assign row_label = tab3_row_1_label %}
                          {% assign row_sublabel = tab3_row_1_sublabel %}
                          {% assign row_value = tab3_row_1_value %}
                        {% when 2 %}
                          {% assign row_image = tab3_row_2_image %}
                          {% assign row_label = tab3_row_2_label %}
                          {% assign row_sublabel = tab3_row_2_sublabel %}
                          {% assign row_value = tab3_row_2_value %}
                        {% when 3 %}
                          {% assign row_image = tab3_row_3_image %}
                          {% assign row_label = tab3_row_3_label %}
                          {% assign row_sublabel = tab3_row_3_sublabel %}
                          {% assign row_value = tab3_row_3_value %}
                        {% when 4 %}
                          {% assign row_image = tab3_row_4_image %}
                          {% assign row_label = tab3_row_4_label %}
                          {% assign row_sublabel = tab3_row_4_sublabel %}
                          {% assign row_value = tab3_row_4_value %}
                        {% when 5 %}
                          {% assign row_image = tab3_row_5_image %}
                          {% assign row_label = tab3_row_5_label %}
                          {% assign row_sublabel = tab3_row_5_sublabel %}
                          {% assign row_value = tab3_row_5_value %}
                        {% when 6 %}
                          {% assign row_image = tab3_row_6_image %}
                          {% assign row_label = tab3_row_6_label %}
                          {% assign row_sublabel = tab3_row_6_sublabel %}
                          {% assign row_value = tab3_row_6_value %}
                      {% endcase %}
  
                      {% if row_label != blank %}
                        <div class="directions-row">
                          <div class="directions-col-image">
                            {% if row_image != blank %}
                              <img src="{{ row_image | image_url: width: 80 }}" alt="{{ row_label }}" width="60" height="60" class="directions-image" style="width: 60px; height: 60px; object-fit: contain; border-radius: 8px;">
                            {% endif %}
                          </div>
                          <div class="directions-col-size">
                            <div class="directions-label" style="color: {% if tab3_label_color != blank %}{{ tab3_label_color }}{% else %}{{ content_text_color }}{% endif %} !important; font-size: {{ tab3_label_font_size | default: 16 }}px !important; font-weight: 600; letter-spacing: var(--letter-spacing-body);">
                              {{ row_label }}
                            </div>
                            {% if row_sublabel != blank %}
                              <div class="directions-sublabel" style="color: {% if tab3_sublabel_color != blank %}{{ tab3_sublabel_color }}{% else %}{{ content_text_color }}{% endif %} !important; font-size: {{ tab3_sublabel_font_size | default: 14 }}px !important; letter-spacing: var(--letter-spacing-body);">
                                {{ row_sublabel }}
                              </div>
                            {% endif %}
                          </div>
                          <div class="directions-col-dosage" style="color: {% if tab3_value_color != blank %}{{ tab3_value_color }}{% else %}{{ content_text_color }}{% endif %} !important; font-size: {{ tab3_value_font_size | default: 16 }}px !important; letter-spacing: var(--letter-spacing-body);">
                            {{ row_value }}
                          </div>
                        </div>
                      {% endif %}
                    {% endfor %}
                    
                    <!-- Disclaimer Text -->
                    {% if tab3_disclaimer_text != blank %}
                      <div class="directions-disclaimer" style="margin-top: 0.5rem; padding-top: 1rem;">
                        <div class="disclaimer-content" style="color: {% if tab3_disclaimer_color != blank %}{{ tab3_disclaimer_color }}{% else %}{{ content_text_color }}{% endif %} !important; font-size: {{ tab3_disclaimer_font_size | default: 15 }}px !important; line-height: 1.6; letter-spacing: var(--letter-spacing-body);">
                          {{ tab3_disclaimer_text }}
                        </div>
                      </div>
                    {% endif %}
  
                  </div>
                </div>
              </div>
  
              <!-- Tab 4 Content -->
              <div class="product-tab-panel" id="tab4-{{ block.id }}">
                <div class="tab-content-inner">
                  {% if tab4_heading != blank %}
                    <h3 class="tab4-heading" style="color: {% if tab4_heading_color != blank %}{{ tab4_heading_color }}{% else %}{{ content_text_color }}{% endif %} !important; font-size: {{ tab4_heading_font_size | default: 20 }}px !important; font-weight: 700; margin-bottom: 2rem; letter-spacing: var(--letter-spacing-body);">
                      {{ tab4_heading }}
                    </h3>
                  {% endif %}
                  
                  <div class="benefits-list">
                    {% assign benefits = 'benefit_1,benefit_2,benefit_3,benefit_4,benefit_5,benefit_6,benefit_7,benefit_8' | split: ',' %}
                    {% for benefit_key in benefits %}
                      {% assign index = forloop.index %}
                      {% case index %}
                        {% when 1 %}
                          {% assign benefit_icon = tab4_benefit_1_icon %}
                          {% assign benefit = tab4_benefit_1 %}
                        {% when 2 %}
                          {% assign benefit_icon = tab4_benefit_2_icon %}
                          {% assign benefit = tab4_benefit_2 %}
                        {% when 3 %}
                          {% assign benefit_icon = tab4_benefit_3_icon %}
                          {% assign benefit = tab4_benefit_3 %}
                        {% when 4 %}
                          {% assign benefit_icon = tab4_benefit_4_icon %}
                          {% assign benefit = tab4_benefit_4 %}
                        {% when 5 %}
                          {% assign benefit_icon = tab4_benefit_5_icon %}
                          {% assign benefit = tab4_benefit_5 %}
                        {% when 6 %}
                          {% assign benefit_icon = tab4_benefit_6_icon %}
                          {% assign benefit = tab4_benefit_6 %}
                        {% when 7 %}
                          {% assign benefit_icon = tab4_benefit_7_icon %}
                          {% assign benefit = tab4_benefit_7 %}
                        {% when 8 %}
                          {% assign benefit_icon = tab4_benefit_8_icon %}
                          {% assign benefit = tab4_benefit_8 %}
                      {% endcase %}
  
                      {% if benefit != blank %}
                        {%- liquid
                          assign icon_size = tab4_icon_size | default: 24
                          assign icon_bg = tab4_icon_bg_color | default: '#000000'
                          assign icon_check = tab4_icon_check_color | default: '#ffffff'
                          assign benefit_color = tab4_benefit_text_color
                          if benefit_color == blank
                            assign benefit_color = content_text_color
                          endif
                        -%}
                        <div class="benefit-item">
                          {% if benefit_icon != blank %}
                            <img src="{{ benefit_icon | image_url: width: 96 }}" alt="{{ benefit }}" width="{{ icon_size }}" height="{{ icon_size }}" class="benefit-custom-icon" style="width: {{ icon_size }}px; height: {{ icon_size }}px; object-fit: contain; flex-shrink: 0;">
                          {% else %}
                            <svg class="benefit-check-icon" width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 24 24" fill="none" style="width: {{ icon_size }}px; height: {{ icon_size }}px; flex-shrink: 0;">
                              <circle cx="12" cy="12" r="11" fill="{{ icon_bg }}"/>
                              <path d="M17 8.5L10 15.5L7 12.5" stroke="{{ icon_check }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
