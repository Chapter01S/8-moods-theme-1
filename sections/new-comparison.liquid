{% comment %} comparison.liquid {% endcomment %}

{% comment %} Google Fonts for accent text customization {% endcomment %}
{% if section.settings.override_global_accent %}
  {% if section.settings.accent_font_family != 'inherit' and section.settings.accent_font_family != 'serif' %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    {% case section.settings.accent_font_family %}
      {% when 'Georgia Pro' %}
        <link
          href="https://fonts.googleapis.com/css2?family=Georgia+Pro:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet"
        >
      {% when 'Bodoni Moda' %}
        <link
          href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,opsz,wght@0,6..96,400;0,6..96,500;0,6..96,600;0,6..96,700;0,6..96,800;1,6..96,400;1,6..96,500;1,6..96,600;1,6..96,700;1,6..96,800&display=swap"
          rel="stylesheet"
        >
      {% when 'Instrument Serif' %}
        <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&display=swap" rel="stylesheet">
      {% when 'DM Serif Text' %}
        <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&display=swap" rel="stylesheet">
      {% when 'Nothing You Could Do' %}
        <link href="https://fonts.googleapis.com/css2?family=Nothing+You+Could+Do&display=swap" rel="stylesheet">
    {% endcase %}
  {% endif %}
{% endif %}

<section class="comparison-section section-{{ section.id }}{% if section.settings.section_bg_image != blank %} comparison-section--has-bg{% endif %}">
  <div class="parent-div">
    {% if section.settings.section_bg_image != blank and section.settings.bg_image_position == 'fill' %}
      <img
        class="left-fill-image"
        src="{{ section.settings.section_bg_image | image_url: width: 1200 }}"
        alt=""
        width="1200"
        height="600"
      >
    {% endif %}
    <div class="left-div">
      <div class="left-top">
        {% if section.settings.title != blank %}
          <h2 class="main-title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
      {% if section.settings.section_bg_image != blank and section.settings.bg_image_position == 'center_small' %}
        <div class="left-bg-image"></div>
      {% endif %}
      <div class="left-middle"></div>
      <div class="left-bottom"></div>
    </div>

    <div class="right-div">
      <div class="brand-header">
        <div class="table-col"></div>
        <div class="brand-name" style="grid-column: 2;">
          <h3>{{ section.settings.brand_name | default: 'Quasi' }}</h3>
        </div>
        <div class="table-col"></div>
      </div>

      <div class="comparison-table">
        <div class="table-head">
          <div class="table-row">
            <div class="table-col"></div>
            <div
              class="table-col brand-col"
              {% if section.settings.brand_column_gradient %}
                style="grid-column: 2; background: {{ section.settings.brand_column_background }}; border-top-left-radius: 14px; border-top-right-radius: 14px; overflow: visible;"
              {% else %}
                style="grid-column: 2; border-top-left-radius: 14px; border-top-right-radius: 14px; overflow: visible;"
              {% endif %}
            ></div>

            <div class="table-col" style="grid-column: 3;">
              <p>{{ section.settings.other_brand_name | default: 'Other Brands' }}</p>
            </div>
            {% if section.settings.enable_third_column %}
              <div class="table-col" style="grid-column: 4;">
                <p>{{ section.settings.third_column_name | default: 'Other Brands' }}</p>
              </div>
            {% endif %}
          </div>
        </div>

        <div class="table-body">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'comparison_row' %}
                <div class="table-row" {{ block.shopify_attributes }}>
                  <div class="table-col description-col">
                    {% if block.settings.feature_title != blank %}
                      <div
                        class="feature-title"
                        style="color: {{ block.settings.feature_title_color | default: 'inherit' }}; display: flex; align-items: center; gap: 8px;"
                      >
                        {% if block.settings.feature_icon != blank %}
                          {%- assign icon_size = block.settings.feature_icon_size | default: 20 -%}
                          <img
                            src="{{ block.settings.feature_icon | image_url: width: icon_size }}"
                            alt=""
                            class="feature-icon"
                            width="{{ icon_size }}"
                            height="{{ icon_size }}"
                            style="flex-shrink: 0;"
                          >
                        {% endif %}
                        <span style="flex: 1;">{{ block.settings.feature_title }}</span>
