<style>
    /* Ensure consistent box-sizing */
    * {
      box-sizing: border-box;
    }

    /* Dynamic styles for section {{ section.id }} */
    .section-{{ section.id }} {
      background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.background_color }}{% endif %};
      padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px 0;
      position: relative;
      width: 100vw;
      margin-left: calc(50% - 50vw);
    }

    .section-{{ section.id }} .parent-div {
      display: flex;
      gap: {{ section.settings.layout_gap }}px;
      padding: 0 clamp(10px, 4vw, 50px);
      align-items: flex-start;
      width: 100%;
      max-width: min({{ section.settings.container_max_width }}px, 92vw);
      margin: 0 auto;
      position: relative;
      z-index: 1;
    }

  .section-{{ section.id }} .left-fill-image {
    position: absolute;
    top: 0;
    left: calc(50% - 50vw);
    width: calc(50vw - {{ section.settings.layout_gap | divided_by: 2 }}px);
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: {{ section.settings.bg_image_opacity | divided_by: 100.0 }};
    z-index: 0;
  }

    .section-{{ section.id }} .left-div, .section-{{ section.id }} .right-div {
      flex: 1 1 0;
    }

    .section-{{ section.id }} .left-div {
      display: grid;
      grid-template-rows: auto auto 1fr;
      height: 100%;
      position: relative;
      min-height: {% if section.settings.bg_image_position == 'fill' %}400px{% else %}auto{% endif %};
    }

    .section-{{ section.id }} .left-top {
      display: flex;
      flex-direction: column;
      align-items: center;
      {% if section.settings.section_bg_image != blank and section.settings.bg_image_position == 'fill' %}
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          width: 100%;
          margin-top: 0;
      {% else %}
          position: relative;
          margin-top: {{ section.settings.left_content_margin_top }}px;
      {% endif %}

      margin-top: {{ section.settings.left_content_margin_top }}px;
      z-index: 2;
      position: relative;
    }

    .section-{{ section.id }} .subheading {
      font-size: {{ section.settings.subheading_font_size }}px;
      color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.subheading_color }}{% endif %};
      font-weight: {{ section.settings.subheading_font_weight }};
      margin-top: {{ section.settings.subheading_margin_top }}px;
      margin-bottom: {{ section.settings.subheading_margin_bottom }}px;
      text-align: center;
      line-height: 1.4;
    }

    .section-{{ section.id }} .left-bg-image {
      {% if section.settings.section_bg_image != blank and section.settings.bg_image_position == 'center_small' %}
        display: block;
        width: {{ section.settings.bg_image_width }}%;
        height: {{ section.settings.bg_image_height }}px;
