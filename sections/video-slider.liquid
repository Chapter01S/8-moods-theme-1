     letter-spacing: var(--letter-spacing-body);
     line-height: {{ section.settings.subtitle_line_height }};
     text-align: {{ section.settings.subtitle_alignment }};
     margin: 0 auto 20px auto;
     display: block;
  	width: 100%;
  }

