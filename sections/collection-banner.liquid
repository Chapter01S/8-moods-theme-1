{% comment %}
  Refactor:
  - Variables centralisées (alt / loading)
  - Suppression de la duplication du bloc image desktop
  - Rendu conditionnel de l’image mobile uniquement si activé
  - Structure plus courte tout en conservant le comportement initial
{% endcomment %}

{%- liquid
  assign heading_translation = section.settings.heading | default: 'Discover Our Collection'

  assign image_loading = 'lazy'
  if section.settings.above_the_fold
    assign image_loading = 'eager'
  endif

  # Alt text
  assign image_alt = section.settings.banner_image_alt | default: heading_translation | escape
  assign mobile_image_alt = section.settings.mobile_banner_image_alt | default: image_alt
-%}

{{ 'collection-banner.css' | asset_url | stylesheet_tag }}

<style>
  /* Dynamic styles for section {{ section.id }} */
  .section-{{ section.id }} {
    /* Background */
    {% if section.settings.use_theme_colors %}
      {% if settings.global_section_use_gradient_background %}
        background: var(--gradient-background);
      {% else %}
        background-color: {{ settings.global_section_background_color }};
      {% endif %}
    {% elsif section.settings.enable_gradient %}
      background: linear-gradient({{ section.settings.gradient_direction }}, {{ section.settings.gradient_color_1 }}, {{ section.settings.gradient_color_2 }});
    {% else %}
      background-color: {{ section.settings.section_bg }};
    {% endif %}
    
    /* Padding */
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  /* Content sizing */
  .section-{{ section.id }} .collection-banner__content {
    max-width: calc(100% - {{ section.settings.image_max_width }}%);
  }

  .section-{{ section.id }} .collection-banner__image-wrapper {
    max-width: {{ section.settings.image_max_width }}%;
    {% if section.settings.full_width_layout %}
      max-width: 100%;
    {% endif %}
  }
  /* Image styling */
  .section-{{ section.id }} .collection-banner__image {
    object-fit: {{ section.settings.image_sizing }};
    object-position: {{ section.settings.image_focal_point }};
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .section-{{ section.id }} {
    --h1-font-size: calc({{ section.settings.heading_size }}px * 1.2);
    --h2-font-size: {{ section.settings.heading_size }}px;
    --h3-font-size: calc({{ section.settings.heading_size }}px * 0.85);
  }

  .section-{{ section.id }} h1.collection-banner__title {
    margin: 0 !important;
    padding: 0 !important;
    color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.heading_color }}{% endif %} !important;
    font-size: var(--h1-font-size) !important;
    line-height: {{ section.settings.heading_line_height }} !important;
    margin-bottom: {{ section.settings.title_margin_bottom }}px !important;
    font-family: inherit !important;
  }

  .section-{{ section.id }} h2.collection-banner__title {
    margin: 0 !important;
    padding: 0 !important;
    color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.heading_color }}{% endif %} !important;
    font-size: var(--h2-font-size) !important;
    line-height: {{ section.settings.heading_line_height }} !important;
    margin-bottom: {{ section.settings.title_margin_bottom }}px !important;
    font-family: inherit !important;
  }

  .section-{{ section.id }} h3.collection-banner__title {
    margin: 0 !important;
    padding: 0 !important;
    color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.heading_color }}{% endif %} !important;
    font-size: var(--h3-font-size) !important;
    line-height: {{ section.settings.heading_line_height }} !important;
    margin-bottom: {{ section.settings.title_margin_bottom }}px !important;
    font-family: inherit !important;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      --h1-font-size: calc({{ section.settings.heading_size }}px * 1.2);
      --h2-font-size: {{ section.settings.heading_size }}px;
      --h3-font-size: calc({{ section.settings.heading_size }}px * 0.85);
    }

    .section-{{ section.id }} h1.collection-banner__title {
      font-size: var(--h1-font-size) !important;
      line-height: {{ section.settings.heading_line_height }} !important;
    }

    .section-{{ section.id }} h2.collection-banner__title {
      font-size: var(--h2-font-size) !important;
      line-height: {{ section.settings.heading_line_height }} !important;
    }

    .section-{{ section.id }} h3.collection-banner__title {
      font-size: var(--h3-font-size) !important;
      line-height: {{ section.settings.heading_line_height }} !important;
    }
  }

  .section-{{ section.id }} .collection-banner__text {
    color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.text_color }}{% endif %} !important;
    font-size: {{ section.settings.text_size }}px !important;
    line-height: {{ section.settings.text_line_height }} !important;
  }

  /* Force le bold dans la description */
  .section-{{ section.id }} .collection-banner__text strong,
  .section-{{ section.id }} .collection-banner__text b {
    font-weight: 700 !important;
  }

  .section-{{ section.id }} .collection-banner__text em,
  .section-{{ section.id }} .collection-banner__text i {
    font-style: italic !important;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .section-{{ section.id }} .collection-banner__flex {
      {% if section.settings.mobile_stack_vertically %}
        flex-direction: column;
      {% endif %}
      text-align: {{ section.settings.mobile_content_alignment }};
    }

    .section-{{ section.id }} .collection-banner__content {
      max-width: 100%;
      text-align: {{ section.settings.mobile_content_alignment }};
      padding: {{ section.settings.mobile_content_padding_top }}px {{ section.settings.mobile_content_padding_right }}px {{ section.settings.mobile_content_padding_bottom }}px {{ section.settings.mobile_content_padding_left }}px;
      {% if section.settings.mobile_content_background != blank %}
        background-color: {{ section.settings.mobile_content_background }};
      {% endif %}
      border-radius: {{ section.settings.mobile_content_border_radius }}px;
      {% if section.settings.content_above_image_mobile %}
        order: -1;
      {% endif %}
    }

    .section-{{ section.id }} .collection-banner__image-wrapper {
      max-height: {{ section.settings.mobile_image_max_height }}px;
    }

    .section-{{ section.id }} {
      --h1-font-size: calc({{ section.settings.heading_size_mobile }}px * 1.2);
      --h2-font-size: {{ section.settings.heading_size_mobile }}px;
      --h3-font-size: calc({{ section.settings.heading_size_mobile }}px * 0.85);
    }

    .section-{{ section.id }} h1.collection-banner__title {
      font-size: var(--h1-font-size) !important;
      line-height: {{ section.settings.heading_line_height_mobile }} !important;
      margin-bottom: {{ section.settings.mobile_title_margin_bottom }}px !important;
    }

    .section-{{ section.id }} h2.collection-banner__title {
      font-size: var(--h2-font-size) !important;
      line-height: {{ section.settings.heading_line_height_mobile }} !important;
      margin-bottom: {{ section.settings.mobile_title_margin_bottom }}px !important;
    }

    .section-{{ section.id }} h3.collection-banner__title {
      font-size: var(--h3-font-size) !important;
      line-height: {{ section.settings.heading_line_height_mobile }} !important;
      margin-bottom: {{ section.settings.mobile_title_margin_bottom }}px !important;
    }

    .section-{{ section.id }} .collection-banner__text {
      font-size: {{ section.settings.text_size_mobile }}px !important;
      line-height: {{ section.settings.text_line_height_mobile }} !important;
    }

    {% if section.settings.mobile_content_full_width %}
      .section-{{ section.id }} .collection-banner__container {
        padding: 0;
      }
    {% endif %}
  }

  /* Full width layout */
  {% if section.settings.full_width_layout %}
    .section-{{ section.id }}.collection-banner--full .collection-banner__container {
      max-width: 100%;
      padding: 0;
    }

    .section-{{ section.id }}.collection-banner--full .collection-banner__flex {
      gap: 0;
    }

    .section-{{ section.id }}.collection-banner--full .collection-banner__image {
      height: {{ section.settings.full_width_image_height }}px;
      object-fit: {{ section.settings.image_sizing }};
    }

    @media (max-width: 768px) {
      .section-{{ section.id }}.collection-banner--full .collection-banner__image {
        height: auto;
        min-height: 200px;
        max-height: 300px;
      }

      .section-{{ section.id }}.collection-banner--full .collection-banner__content {
        padding: 30px 16px;
        text-align: center;
      }
    }
  {% endif %}
</style>

<section class="collection-banner section-{{ section.id }} {% if section.settings.full_width_layout %}collection-banner--full{% endif %}" data-component="collection-banner">
  <div class="collection-banner__container">
    <div class="collection-banner__flex collection-banner__flex--image-{{ section.settings.image_position }}">
      <!-- Content -->
      <div class="collection-banner__content">
        {%- if section.settings.heading != blank -%}
          <{{ section.settings.heading_level | default: 'h2' }} class="collection-banner__title">
            {{- section.settings.heading -}}
          </{{ section.settings.heading_level | default: 'h2' }}>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="collection-banner__text">
            {{ section.settings.text }}
          </div>
        {%- endif -%}
      </div>

      <!-- Image -->
      <div class="collection-banner__image-wrapper {% if section.settings.full_width_layout %}collection-banner__image-wrapper--full{% endif %}">
        <div class="collection-banner__image-desktop">
          {%- if section.settings.banner_image != blank -%}
            {{
              section.settings.banner_image
              | image_url: width: 1600
              | image_tag:
                class: 'collection-banner__image',
                loading: image_loading,
                alt: image_alt,
                widths: '400, 600, 800, 1000, 1200, 1400, 1600',
                sizes: '(max-width: 768px) 100vw, 60vw'
            }}
          {%- else -%}
            {{ 'collection-1' | placeholder_svg_tag: 'collection-banner__image placeholder' }}
          {%- endif -%}
        </div>

        {%- if section.settings.show_image_on_mobile -%}
          <div class="collection-banner__image-mobile">
            {%- if section.settings.mobile_banner_image != blank -%}
              {{
                section.settings.mobile_banner_image
                | image_url: width: 800
                | image_tag:
                  class: 'collection-banner__image',
                  loading: 'lazy',
                  alt: mobile_image_alt,
                  widths: '400, 600, 800',
                  sizes: '100vw'
              }}
            {%- elsif section.settings.banner_image != blank -%}
              {{
                section.settings.banner_image
                | image_url: width: 800
                | image_tag:
                  class: 'collection-banner__image',
                  loading: 'lazy',
                  alt: image_alt,
                  widths: '400, 600, 800',
                  sizes: '100vw'
              }}
            {%- else -%}
              {{ 'collection-1' | placeholder_svg_tag: 'collection-banner__image placeholder' }}
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

