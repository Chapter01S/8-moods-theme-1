<script>
  (function () {
    'use strict';

    function initFAQ() {
      const root = document.querySelector('#store-faq-{{ section.id }}');
      if (!root) {
        setTimeout(initFAQ, 100);
        return;
      }

      if (!root.__faqDelegatedListener) {
        root.addEventListener('click', function (e) {
          const questionEl = e.target.closest('.faq-question');
          if (!questionEl || !root.contains(questionEl)) return;
          
          e.preventDefault();
          e.stopPropagation();

          const item = questionEl.closest('.faq-item');
          if (!item) return;
          
          const columnContainer = questionEl.closest('.faq-container');
          if (!columnContainer) return;
          
          const scopeIsAccordion = columnContainer.getAttribute('data-accordion') === 'true';

          if (scopeIsAccordion && !item.classList.contains('active')) {
            // Close other active items in this column
            const activeItems = columnContainer.querySelectorAll('.faq-item.active');
            activeItems.forEach((other) => {
              if (other !== item && !other.classList.contains('mobile-only-item')) {
                other.classList.remove('active');
              }
            });
          }
          
          item.classList.toggle('active');
        }, true);
        root.__faqDelegatedListener = true;
      }

      updateResponsiveFontSizes();
    }

    // Observe DOM changes inside the section to keep bindings after dynamic updates
    function observeFAQMutations() {
      const root = document.querySelector('#store-faq-{{ section.id }}');
      if (!root || root.__faqObserver) return;

      const observer = new MutationObserver((mutations) => {
        for (const m of mutations) {
          if (m.type === 'childList' && (m.addedNodes.length || m.removedNodes.length)) {
            initFAQ();
            break;
          }
        }
      });
      observer.observe(root, { childList: true, subtree: true });
      root.__faqObserver = observer;
    }

    function updateResponsiveFontSizes() {
      const root = document.querySelector('#store-faq-{{ section.id }}');
      if (!root) return;

      const isMobile = window.innerWidth < 750;
      if (isMobile) {
        document.documentElement.classList.add('faq-mobile-view');
      } else {
        document.documentElement.classList.remove('faq-mobile-view');
      }
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function(){ initFAQ(); observeFAQMutations(); });
    } else {
      initFAQ();
      observeFAQMutations();
    }

    document.addEventListener('shopify:section:load', function (evt) {
      if (!evt.detail || evt.detail.sectionId !== '{{ section.id }}') return;
      initFAQ();
      observeFAQMutations();
    });

    document.addEventListener('shopify:section:select', function (evt) {
      if (!evt.detail || evt.detail.sectionId !== '{{ section.id }}') return;
      initFAQ();
    });

    document.addEventListener('shopify:section:reorder', function (evt) {
      if (!evt.detail || evt.detail.sectionId !== '{{ section.id }}') return;
      initFAQ();
    });

    window.addEventListener('resize', updateResponsiveFontSizes);
    window.addEventListener('load', function(){ initFAQ(); observeFAQMutations(); });
  })();
</script>

