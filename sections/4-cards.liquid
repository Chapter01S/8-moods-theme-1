{% comment %} Google Fonts for accent text customization {% endcomment %}
{% if section.settings.override_global_accent %}
  {% if section.settings.accent_font_family != 'inherit' and section.settings.accent_font_family != 'serif' %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    {% case section.settings.accent_font_family %}
      {% when 'Georgia Pro' %}
        <link href="https://fonts.googleapis.com/css2?family=Georgia+Pro:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
      {% when 'Bodoni Moda' %}
        <link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,opsz,wght@0,6..96,400;0,6..96,500;0,6..96,600;0,6..96,700;0,6..96,800;1,6..96,400;1,6..96,500;1,6..96,600;1,6..96,700;1,6..96,800&display=swap" rel="stylesheet">
      {% when 'Instrument Serif' %}
        <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&display=swap" rel="stylesheet">
      {% when 'DM Serif Text' %}
        <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&display=swap" rel="stylesheet">
      {% when 'Nothing You Could Do' %}
        <link href="https://fonts.googleapis.com/css2?family=Nothing+You+Could+Do&display=swap" rel="stylesheet">
    {% endcase %}
  {% endif %}
{% endif %}

{%- liquid
  assign layout = 'grid'
  if section.settings.horizontal_layout
    assign layout = 'horizontal'
  elsif section.settings.pyramid_layout  
    assign layout = 'pyramid'
  endif
-%}

{% render 'component-cards-grid',
   cards: section.blocks,
   heading: section.settings.heading,
   subtitle: section.settings.subtitle,
   accent_text: section.settings.accent_text,
   layout: layout,
   hide_description: section.settings.hide_description,
   section_id: section.id,
   override_global_accent: section.settings.override_global_accent %}

<style>
  /* Section-specific customizations */
  #cards-{{ section.id }} {
    background: {{ section.settings.section_background_gradient | default: '#FFFFFF' }};
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_left }}px 
             {{ section.settings.padding_bottom }}px {{ section.settings.padding_right }}px;
             
    /* CSS Variables for card styling */
    --card-background: {{ section.settings.card_background_gradient | default: '#ffffff' }};
    --card-border-color: {{ section.settings.card_border_color | default: '#f0f0f0' }};
    --card-border-width: {{ section.settings.card_border_width | default: 1 }}px;
    --card-border-style: {{ section.settings.card_border_style | default: 'solid' }};
    --card-border-radius: {{ section.settings.card_border_radius | default: 12 }}px;
    --card-image-object-fit: {{ section.settings.card_image_object_fit | default: 'cover' }};
  }
  
  /* Apply card image height for vertical layout - Desktop */
  #cards-{{ section.id }} .card-item__image {
    padding-bottom: 0 !important;
    height: {{ section.settings.card_image_height_desktop | default: section.settings.card_image_height | default: 240 }}px !important;
  }
  
  /* Apply card image size for horizontal layout - Desktop */
  #cards-{{ section.id }} .cards-grid__items[data-layout="horizontal"] .card-item__image {
    width: {{ section.settings.card_image_height_horizontal_desktop | default: section.settings.card_image_height_horizontal | default: 150 }}px !important;
    min-width: {{ section.settings.card_image_height_horizontal_desktop | default: section.settings.card_image_height_horizontal | default: 150 }}px !important;
    height: {{ section.settings.card_image_height_horizontal_desktop | default: section.settings.card_image_height_horizontal | default: 150 }}px !important;
    max-width: {{ section.settings.card_image_height_horizontal_desktop | default: section.settings.card_image_height_horizontal | default: 150 }}px !important;
    max-height: {{ section.settings.card_image_height_horizontal_desktop | default: section.settings.card_image_height_horizontal | default: 150 }}px !important;
  }
  
  /* Apply card image height for vertical layout - Mobile */
  @media (max-width: 768px) {
    #cards-{{ section.id }} .card-item__image {
      height: {{ section.settings.card_image_height_mobile | default: 180 }}px !important;
    }
    
    /* Apply card image size for horizontal layout - Mobile */
    #cards-{{ section.id }} .cards-grid__items[data-layout="horizontal"] .card-item__image {
      width: {{ section.settings.card_image_height_horizontal_mobile | default: 100 }}px !important;
      min-width: {{ section.settings.card_image_height_horizontal_mobile | default: 100 }}px !important;
      height: {{ section.settings.card_image_height_horizontal_mobile | default: 100 }}px !important;
      max-width: {{ section.settings.card_image_height_horizontal_mobile | default: 100 }}px !important;
      max-height: {{ section.settings.card_image_height_horizontal_mobile | default: 100 }}px !important;
    }
  }
  
  @media (min-width: 1023px) {
    #cards-{{ section.id }} .card-item {
      {% if section.settings.card_min_height_desktop and section.settings.card_min_height_desktop > 0 %}
        min-height: {{ section.settings.card_min_height_desktop }}px !important;
      {% endif %}
    }
  }
  
  #cards-{{ section.id }} .cards-grid__heading {
    color: {{ section.settings.heading_color | default: '#000000' }} !important;
    font-size: {{ section.settings.heading_size | default: 32 }}px;
    text-align: {{ section.settings.heading_alignment | default: 'center' }};
  }
  
  @media screen and (max-width: 768px) {
    #cards-{{ section.id }} .cards-grid__heading {
      font-size: {{ section.settings.heading_size_mobile | default: 24 }}px;
    }
  }
  
  #cards-{{ section.id }} .cards-grid__subtitle {
    color: {{ section.settings.subtitle_color | default: '#666666' }} !important;
    text-align: {{ section.settings.heading_alignment | default: 'center' }};
  }
  
  /* Override default cards-grid__accent styling when using global/custom accent */
  #cards-{{ section.id }} .cards-grid__accent.global-accent-text,
  #cards-{{ section.id }} .cards-grid__accent.custom-accent-text {
    color: inherit !important;
    margin-left: 0 !important;
  }

  /* Accent text styling */
  #cards-{{ section.id }} .cards-grid__heading .global-accent-text,
  #cards-{{ section.id }} .cards-grid__heading .custom-accent-text,
  #cards-{{ section.id }} .cards-grid__accent.global-accent-text,
  #cards-{{ section.id }} .cards-grid__accent.custom-accent-text {
    padding: 2px 4px !important;
    margin: -2px -4px !important;
    display: inline-block !important;
    margin-left: {{ section.settings.accent_left_margin | default: 0 }}px !important;
    line-height: 1.3 !important;
  }

  /* Global accent text - uses theme settings */
  #cards-{{ section.id }} .cards-grid__container .cards-grid__header .cards-grid__heading .global-accent-text,
  #cards-{{ section.id }} .cards-grid__heading .global-accent-text,
  #cards-{{ section.id }} .cards-grid__accent.global-accent-text {
    {% if section.settings.use_accent_gradient and section.settings.accent_text_gradient != blank %}
      background: {{ section.settings.accent_text_gradient }} !important;
      -webkit-background-clip: text !important;
      -webkit-text-fill-color: transparent !important;
      background-clip: text !important;
      color: transparent !important;
    {% else %}
      color: {{ section.settings.accent_color | default: '#EF4A65' }} !important;
    {% endif %}
    font-family: var(--font-accent-family) !important;
    font-style: var(--font-accent-style) !important;
    font-weight: var(--font-accent-weight) !important;
    letter-spacing: var(--font-accent-letter-spacing) !important;
    text-transform: var(--font-accent-text-transform) !important;
  }
  
  /* Override any body font on global/custom accent children */
  #cards-{{ section.id }} .global-accent-text *,
  #cards-{{ section.id }} .cards-grid__accent.global-accent-text *,
  #cards-{{ section.id }} .custom-accent-text *,
  #cards-{{ section.id }} .cards-grid__accent.custom-accent-text * {
    font-family: inherit !important;
    font-style: inherit !important;
    font-weight: inherit !important;
  }

  /* Custom accent text - uses section-specific settings */
  #cards-{{ section.id }} .cards-grid__heading .custom-accent-text,
  #cards-{{ section.id }} .cards-grid__accent.custom-accent-text {
    {% if section.settings.use_accent_gradient and section.settings.accent_text_gradient != blank %}
      background: {{ section.settings.accent_text_gradient }} !important;
      -webkit-background-clip: text !important;
      -webkit-text-fill-color: transparent !important;
      background-clip: text !important;
      color: transparent !important;
    {% else %}
      color: {{ section.settings.accent_color | default: '#EF4A65' }} !important;
    {% endif %}

    {% if section.settings.accent_font_family == 'Georgia Pro' %}
      font-family: 'Georgia Pro', Georgia, serif !important;
    {% elsif section.settings.accent_font_family == 'Bodoni Moda' %}
      font-family: 'Bodoni Moda', Georgia, serif !important;
    {% elsif section.settings.accent_font_family == 'Instrument Serif' %}
      font-family: 'Instrument Serif', Georgia, serif !important;
    {% elsif section.settings.accent_font_family == 'DM Serif Text' %}
      font-family: 'DM Serif Text', Georgia, serif !important;
    {% elsif section.settings.accent_font_family == 'Nothing You Could Do' %}
      font-family: 'Nothing You Could Do', cursive, serif !important;
    {% elsif section.settings.accent_font_family == 'serif' %}
      font-family: Georgia, serif !important;
    {% endif %}

    {% if section.settings.accent_font_style == 'italic' %}
      font-style: italic !important;
    {% endif %}

    {% if section.settings.accent_font_weight != 'inherit' %}
      font-weight: {{ section.settings.accent_font_weight }} !important;
    {% endif %}
  }
  
  #cards-{{ section.id }} .card-item__title {
    color: {{ section.settings.title_color | default: '#000000' }} !important;
  }
  
  #cards-{{ section.id }} .card-item__description {
    color: {{ section.settings.description_color | default: '#666666' }} !important;
  }
  
  #cards-{{ section.id }} .card-item__image-element {
    object-fit: var(--card-image-object-fit, cover) !important;
  }
  
  /* Font sizes responsive */
  #cards-{{ section.id }} .card-item__title {
    font-size: {{ section.settings.title_size_mobile | default: 14 }}px;
  }
  
  #cards-{{ section.id }} .card-item__description {
    font-size: {{ section.settings.description_size_mobile | default: 10 }}px;
  }
  
  #cards-{{ section.id }} .card-item__bullet-text {
    font-size: {{ section.settings.bullet_size_mobile | default: 9 }}px;
  }
  
  @media (min-width: 767px) {
    #cards-{{ section.id }} .card-item__title {
      font-size: {{ section.settings.title_size | default: 18 }}px;
    }
    
    #cards-{{ section.id }} .card-item__description {
      font-size: {{ section.settings.description_size | default: 14 }}px;
    }
    
    #cards-{{ section.id }} .card-item__bullet-text {
      font-size: {{ section.settings.bullet_size | default: 13 }}px;
    }
  }
  
  /* Bullet styling per card */
  {% for card in section.blocks %}
    #cards-{{ section.id }} .card-item[data-block-id="{{ card.id }}"] .card-item__bullet-icon {
      color: {{ card.settings.bullet_icon_color | default: '#333333' }} !important;
    }
    
    #cards-{{ section.id }} .card-item[data-block-id="{{ card.id }}"] .card-item__bullet-text {
      color: {{ card.settings.bullet_text_color | default: '#666666' }} !important;
    }
    
    {% if card.settings.bullet_container %}
      #cards-{{ section.id }} .card-item[data-block-id="{{ card.id }}"] .card-item__bullet--container {
        background-color: {{ card.settings.bullet_container_bg | default: '#f8f9fa' }} !important;
        border: {{ card.settings.bullet_container_border_width | default: 1 }}px 
                {{ card.settings.bullet_container_border_style | default: 'solid' }} 
                {{ card.settings.bullet_container_border_color | default: '#e9ecef' }} !important;
        border-radius: {{ card.settings.bullet_container_border_radius | default: 4 }}px;
      }
    {% endif %}
  {% endfor %}
</style>

