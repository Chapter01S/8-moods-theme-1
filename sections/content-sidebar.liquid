{%- liquid 
	assign path = request.path
	assign is_product_page = false
	assign title = ''

	if path contains 'pages'
		assign path = path | replace: '/pages', ''
		assign title = page.title
	endif

	if path contains 'products'
		assign is_product_page = true
		assign product_collection = product.collections.first
		assign title = product.title
	endif
-%}

{%- style -%}
	#shopify-section-{{ section.id }} {
		padding-top: 50px;
		padding-bottom: 50px;
		background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.section_background_color }}{% endif %};
	}

	/* Global Button Color Override */
	{%- liquid
		if section.settings.use_theme_colors
			assign button_color = settings.global_section_accent_1_color
		else
			assign button_color = section.settings.global_button_color
		endif
		assign darker_color = button_color | color_darken: 15
	-%}
	{%- if button_color != "#19bdff" -%}
		#shopify-section-{{ section.id }} .sidebar-product-link,
		#shopify-section-{{ section.id }} .content-button {
			background-color: {{ button_color }} !important;
			border-bottom-color: {{ darker_color }} !important;
		}
	{%- endif -%}

	#shopify-section-{{ section.id }} .heading-block h1,
	#shopify-section-{{ section.id }} .heading-block h2,
	#shopify-section-{{ section.id }} .heading-block h3,
	#shopify-section-{{ section.id }} .heading-block h4,
	#shopify-section-{{ section.id }} .heading-block h5,
	#shopify-section-{{ section.id }} .heading-block h6 {
		margin: 0;
		letter-spacing: var(--letter-spacing-heading);
	}

	#shopify-section-{{ section.id }} .breadcrumbs {
		margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 7px;
		color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.breadcrumb_color }}{% endif %};
		letter-spacing: var(--letter-spacing-body);
	}

	#shopify-section-{{ section.id }} .breadcrumbs a {
		text-decoration: none;
		color: inherit;
	}

	#shopify-section-{{ section.id }} .section-main {
		display: grid;
		grid-template-columns: minmax(0, calc(100% - var(--side-bar-width) - 125px)) minmax(0, calc(var(--side-bar-width) + 25px));
		gap: 10px;
		max-width: calc(100% - 50px);
		margin: 0 auto;
	}

	#shopify-section-{{ section.id }} .section-main:not([style*="--side-bar-width"]) {
		grid-template-columns: 1fr;
		max-width: calc(100% - 100px);
	}

	#shopify-section-{{ section.id }} .section-content {
		width: 100%;
	}

	#shopify-section-{{ section.id }} .section-sidebar {
		background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.sidebar_background_color }}{% endif %};
		padding: 20px;
		border-radius: 8px;
		position: sticky;
		top: 20px;
		align-self: flex-start;
		max-height: calc(100vh - 40px);
		overflow-y: auto;
	}

	#shopify-section-{{ section.id }} .sidebar-featured-product {
		margin-bottom: 30px;
	}

	#shopify-section-{{ section.id }} .sidebar-featured-product h3 {
		font-size: 20px;
    line-height: 24px;
    text-align: center;
    margin-bottom: 10px;
		letter-spacing: var(--letter-spacing-heading);
	}

	#shopify-section-{{ section.id }} .sidebar-featured-product .image-container {
		margin-bottom: 15px;
	}

	  #shopify-section-{{ section.id }} .sidebar-product-link {
    display: block;
    text-align: center;
    padding: 10px 20px;
    background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.sidebar_button_bg_color }}{% endif %};
    color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.sidebar_button_text_color }}{% endif %};
    text-decoration: none;
    border-radius: 10px;
    font-size: 19px;
    font-weight: 700;
    border-bottom: 4px solid #0b94cb;
		letter-spacing: var(--letter-spacing-body);
	}

	#shopify-section-{{ section.id }} .sidebar-rating {
		background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.rating_background_color }}{% endif %};
	}

	#shopify-section-{{ section.id }} .sidebar-rating h4 {
		padding: 12px 0;
    text-align: center;
    margin: 0;
    color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.sidebar_title_color }}{% endif %};
    border-bottom: 1px solid #dfdfdf;
    font-size: 20px;
		letter-spacing: var(--letter-spacing-heading);
	}

	#shopify-section-{{ section.id }} .ratings-by-star {
		padding: 10px;
    margin-bottom: 20px;
	}

	#shopify-section-{{ section.id }} .total-rating {
		display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 17px;
    padding: 12px 0;
		letter-spacing: var(--letter-spacing-body);
	}

	#shopify-section-{{ section.id }} .ratings-by-star .stars-wrapper {
		display: flex;
    gap: 3px;
	}

	#shopify-section-{{ section.id }} .ratings-by-star .stars-wrapper > svg {
		width: 16px;
    height: auto;
	}

	#shopify-section-{{ section.id }} .ratings-by-star .ratings {
		display: flex;
    flex-direction: column-reverse;
    gap: 10px;
	}

	#shopify-section-{{ section.id }} .star-bar {
		display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, 3fr) minmax(0, 35px);
    gap: 5px;
    justify-content: space-between;
		letter-spacing: var(--letter-spacing-body);
	}

	#shopify-section-{{ section.id }} .star-bar > div:last-child {
		font-weight: 700 !important;
	}

	#shopify-section-{{ section.id }} .review-rating-text {
		font-weight: 700 !important;
	}

	#shopify-section-{{ section.id }} .rating-bar {
		position: relative;
    flex: 1;
    height: 25px;
    border: 1px solid #dedede;
	}

	#shopify-section-{{ section.id }} .rating-progress {
		display: block;
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.rating_bar_color }}{% endif %};
    width: var(--bar-progress);
	}

	#shopify-section-{{ section.id }} .features {
		display: flex;
    flex-direction: column;
    gap: 0;
		padding: 15px;
		border: 1px solid #e0e0e0;
		border-radius: 0px;
		background-color: {{ section.settings.rating_background_color }};
	}

	#shopify-section-{{ section.id }} .feature {
		display: flex;
		align-items: center;
    justify-content: space-between;
    gap: 10px;
		letter-spacing: var(--letter-spacing-body);
		padding: 12px 0;
		border-bottom: 1px solid #f0f0f0;
	}

	#shopify-section-{{ section.id }} .feature:last-child {
		border-bottom: none;
	}

	#shopify-section-{{ section.id }} .feature-title {
		font-weight: var(--font-weight-semibold);
		letter-spacing: var(--letter-spacing-body);
	}

	#shopify-section-{{ section.id }} .feature-rating {
		display: flex;
    align-items: center;
    gap: 10px;
	}

	#shopify-section-{{ section.id }} .feature-rating .stars-wrapper {
		display: flex;
		gap: 3px;
	}

	#shopify-section-{{ section.id }} .feature-rating .stars-wrapper > svg {
		width: 16px;
		height: auto;
	}

	#shopify-section-{{ section.id }} .section-block {
		margin-bottom: 20px;
	}

	#shopify-section-{{ section.id }} .section-block:last-child {
		margin-bottom: 0;
	}

	#shopify-section-{{ section.id }} .text-block {
		letter-spacing: var(--letter-spacing-body);
	}

	#shopify-section-{{ section.id }} .text-block > *:first-child {
		margin-top: 0;
	}

	#shopify-section-{{ section.id }} .text-block > *:last-child {
		margin-bottom: 0;
	}

	#shopify-section-{{ section.id }} .rating-block {
		display: flex;
		align-items: center;
		gap: 10px;
	}

	#shopify-section-{{ section.id }} .rating-block .stars-wrapper {
		display: flex;
		align-items: center;
		gap: 2px;
	}

	#shopify-section-{{ section.id }} .image-block {
		display: flex;
	}

	#shopify-section-{{ section.id }} .image-container {
		display: flex;
	}

	#shopify-section-{{ section.id }} .image-container img {
		width: 100%;
		height: auto;
	}

	.author-block {
		display: flex;
    align-items: center;
    gap: 10px;
		letter-spacing: var(--letter-spacing-body);
	}

	.author-image-container {
		display: flex;
    border-radius: 99999px;
    overflow: hidden;
    width: 50px;
    height: 50px;
	}

	.author-image-container img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.author-meta {
		display: flex;
    flex-direction: column;
    gap: 5px;
	}

	.author-info {
		display: flex;
    align-items: center;
	}

	.author-date-container {
		padding-top: 3px;
		border-top: 1px solid #e0e0e0;
	}

	.author-name {
		display: flex;
    align-items: center;
    white-space: nowrap;
    gap: 7px;
	}

	.author-name > svg {
		width: 16px;
	}

	#shopify-section-{{ section.id }} .basic-text-block {
		width: 100%;
	}

	#shopify-section-{{ section.id }} .basic-text-content {
		letter-spacing: var(--letter-spacing-body);
	}

	#shopify-section-{{ section.id }} .basic-text-content h1,
	#shopify-section-{{ section.id }} .basic-text-content h2,
	#shopify-section-{{ section.id }} .basic-text-content h3,
	#shopify-section-{{ section.id }} .basic-text-content h4,
	#shopify-section-{{ section.id }} .basic-text-content h5,
	#shopify-section-{{ section.id }} .basic-text-content h6 {
		letter-spacing: var(--letter-spacing-heading);
	}

	#shopify-section-{{ section.id }} .basic-text-img {
		width: 100%;
		height: auto;
		border-radius: 8px;
	}

	#shopify-section-{{ section.id }} .basic-text-image {
		text-align: center;
	}

	#shopify-section-{{ section.id }} .button-block {
		display: flex;
		width: 100%;
	}

	#shopify-section-{{ section.id }} .content-button-link {
		display: block;
    text-align: center;
    padding: 10px 20px;
    background-color: {{ section.settings.sidebar_button_bg_color }};
    color: {{ section.settings.sidebar_button_text_color }};
    text-decoration: none;
    border-radius: 10px;
    font-size: 19px;
    font-weight: 700;
    border-bottom: 4px solid #0b94cb;
		letter-spacing: var(--letter-spacing-body);
		transition: all 0.3s ease;
	}

	#shopify-section-{{ section.id }} .content-button-link:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 8px rgba(0,0,0,0.1);
	}

	#shopify-section-{{ section.id }} .button-block-full-width {
		display: block;
		width: 100%;
	}

	#shopify-section-{{ section.id }} .content-button-full-width {
		width: 100%;
		display: block;
	}

	@media screen and (max-width: 1105px) {
		#shopify-section-{{ section.id }} .section-main {
			grid-template-columns: minmax(0, 1fr);
			gap: 30px;
		}

		#shopify-section-{{ section.id }} .section-sidebar {
			position: static;
			max-height: none;
			overflow-y: visible;
		}
	}

	@media screen and (max-width: 768px) {
		#shopify-section-{{ section.id }} .section-main {
			max-width: none;
		}
		
		{% if section.settings.hide_sidebar_mobile %}
		/* Hide sidebar on mobile when setting is enabled */
		#shopify-section-{{ section.id }} .section-sidebar {
			display: none !important;
		}
		
		/* Make content full width when sidebar is hidden */
		#shopify-section-{{ section.id }} .section-main {
			grid-template-columns: 1fr !important;
		}
		{% endif %}
		
		/* Responsive text sizing for fixed elements */
		#shopify-section-{{ section.id }} .sidebar-featured-product h3 {
			font-size: 18px;
		}
		
		#shopify-section-{{ section.id }} .sidebar-product-link {
			font-size: 17px;
		}
		
		#shopify-section-{{ section.id }} .sidebar-rating h4 {
			font-size: 18px;
		}
		
		#shopify-section-{{ section.id }} .star-bar {
			font-size: 15px;
		}
				
		#shopify-section-{{ section.id }} .content-button {
			font-size: 17px;
		}
	}

	/* Sidebar Color Customization */
	{%- assign sidebar_block = section.blocks | where: 'type', 'sidebar' | first -%}
	{%- if sidebar_block -%}
		{%- liquid
			assign has_custom_colors = false
			if sidebar_block.settings.sidebar_background_color != "#ffffff" or sidebar_block.settings.sidebar_text_color != "#000000" or sidebar_block.settings.sidebar_title_color != "#000000" or sidebar_block.settings.rating_bar_color != "#19bdff" or sidebar_block.settings.rating_bar_background != "#f0f0f0" or sidebar_block.settings.feature_border_color != "#f0f0f0" or sidebar_block.settings.use_progress_gradient or sidebar_block.settings.rating_star_color != "#F1C40F" or sidebar_block.settings.rating_empty_star_color != "#e0e0e0" or sidebar_block.settings.feature_star_color != "#F1C40F"
				assign has_custom_colors = true
			endif
		-%}
		
		{%- if has_custom_colors -%}
			#sidebar-{{ sidebar_block.id }} {
				{%- if sidebar_block.settings.sidebar_background_color != "#ffffff" -%}
					background-color: {{ sidebar_block.settings.sidebar_background_color }};
				{%- endif -%}
				{%- if sidebar_block.settings.sidebar_text_color != "#000000" -%}
					color: {{ sidebar_block.settings.sidebar_text_color }};
				{%- endif -%}
			}
			
			{%- if sidebar_block.settings.sidebar_title_color != "#000000" -%}
				#sidebar-{{ sidebar_block.id }} .sidebar-rating h4 {
					color: {{ sidebar_block.settings.sidebar_title_color }};
				}
			{%- endif -%}
			
			{%- if sidebar_block.settings.use_progress_gradient -%}
				#sidebar-{{ sidebar_block.id }} .rating-progress {
					background: linear-gradient(90deg, {{ sidebar_block.settings.progress_gradient_start }} 0%, {{ sidebar_block.settings.progress_gradient_end }} 100%);
				}
			{%- elsif sidebar_block.settings.rating_bar_color != "#19bdff" -%}
				#sidebar-{{ sidebar_block.id }} .rating-progress {
					background-color: {{ sidebar_block.settings.rating_bar_color }};
				}
			{%- endif -%}
			
			{%- if sidebar_block.settings.rating_bar_background != "#f0f0f0" -%}
				#sidebar-{{ sidebar_block.id }} .rating-bar {
					background-color: {{ sidebar_block.settings.rating_bar_background }};
				}
			{%- endif -%}
			

			
			{%- if sidebar_block.settings.feature_border_color != "#f0f0f0" -%}
				#sidebar-{{ sidebar_block.id }} .features {
					border-color: {{ sidebar_block.settings.feature_border_color }};
				}
				#sidebar-{{ sidebar_block.id }} .feature {
					border-bottom-color: {{ sidebar_block.settings.feature_border_color }};
				}
			{%- endif -%}
		{%- endif -%}
	{%- endif -%}
{%- endstyle -%}

<div class="inner-con page-width">
	{%- assign has_sidebar = section.blocks | where: 'type', 'sidebar' | first -%}
	<div class="section-main" {% if has_sidebar %}style="--side-bar-width: {{ section.settings.sidebar_width }}%;"{% endif %} >
		<div class="section-content">
			{%- if section.settings.show_breadcrumb -%}
				<div class="breadcrumbs">
					<a href="{{ routes.root_url }}" class="breadcrumb-link">
						{{ section.settings.breadcrumb_home_text }}
					</a>
					
					{%- if section.settings.breadcrumb_second_text != blank -%}
						<span class="breadcrumb-separator">{{ section.settings.breadcrumb_separator }}</span>
						{%- if section.settings.breadcrumb_second_url != blank -%}
							<a href="{{ section.settings.breadcrumb_second_url }}" class="breadcrumb-link">
								{{ section.settings.breadcrumb_second_text }}
							</a>
						{%- else -%}
							<span class="breadcrumb-link">{{ section.settings.breadcrumb_second_text }}</span>
						{%- endif -%}
					{%- endif -%}
					
					{%- if section.settings.breadcrumb_current_text != blank -%}
						<span class="breadcrumb-separator">{{ section.settings.breadcrumb_separator }}</span>
						<span class="breadcrumb-link last-link">{{ section.settings.breadcrumb_current_text }}</span>
					{%- endif -%}
				</div>
		{%- endif -%}
		
		{%- if section.blocks.size == 0 -%}
			<div style="padding: 60px 20px; text-align: center; background: #f9f9f9; border: 2px dashed #ddd; border-radius: 8px; margin: 20px 0;">
				<p style="font-size: 18px; color: #666; margin: 0 0 10px 0;">ðŸ‘‹ This section is empty!</p>
				<p style="font-size: 14px; color: #999; margin: 0;">Click "Add block" below to add content (headings, text, images, buttons, etc.) to your Content Sidebar section.</p>
			</div>
		{%- endif -%}
		
		{%- for block in section.blocks -%}
			{%- liquid
				assign this = block.settings
				assign custom_styled = false

				if this.padding_top > 0 or this.padding_bottom > 0 or this.padding_left > 0 or this.padding_right > 0
					assign custom_styled = true
				endif
			-%}

				{%- if custom_styled -%}
					{%- style -%}
						#{{ block.id }} {
							padding: {{ this.padding_top }}px {{ this.padding_right }}px {{ this.padding_bottom }}px {{ this.padding_left }}px;
						}
					{%- endstyle -%}
				{%- endif -%}

				{%- case block.type -%}

					{%- when 'heading' -%}
						{%- liquid 
							if this.custom_size or this.text_color != blank
								assign custom_styled = true
							endif
						-%}

						{%- if custom_styled -%}
							{%- style -%}
								#{{ block.id }} {{ this.tag }} {
									{%- if this.custom_size -%}
										font-size: {{ this.text_size }}px;
									{%- endif -%}
									{% if this.text_color != blank %}
										color: {{ this.text_color }} !important;
									{% endif %}
								}
								{%- if this.custom_size -%}
									@media screen and (max-width: 768px) {
										#{{ block.id }} {{ this.tag }} {
											font-size: {{ this.text_size | times: 0.85 | round }}px;
										}
									}
								{%- endif -%}
							{%- endstyle -%}
						{%- endif -%}
						
						<div 
							{% if custom_styled %}id="{{ block.id }}"{% endif %} 
							class="section-block heading-block" 
							{{ block.shopify_attributes }}
						>
							<{{ this.tag }} class="{{ this.tag }}">
								{{ this.heading }}
							</{{ this.tag }}>
						</div>

					{%- when 'text' -%}
						{%- liquid 
							assign text = this.text
							assign highlighted_texts = this.highlighted_texts | split: '|'

							if this.custom_size or this.text_color != blank or this.highlighted_texts != blank
								assign custom_styled = true
							endif
						-%}

						{%- if this.highlighted_texts != blank -%}
							{%- for highlighted_text in highlighted_texts -%}
								{%- assign trimmed_text = highlighted_text | strip -%}
								{%- if trimmed_text != blank -%}
									{%- capture highlighted -%}
										<span class="highlighted-text">{{ trimmed_text }}</span>
									{%- endcapture -%}

									{%- assign text = text | replace: highlighted_text, highlighted -%}
								{%- endif -%}
							{%- endfor -%}
						{%- endif -%}

						{%- if custom_styled -%}
							{%- style -%}
								#{{ block.id }} {
									{%- if this.custom_size -%}
										font-size: {{ this.text_size }}px;
									{%- endif -%}
									{%- if this.text_color != blank -%}
										color: {{ this.text_color }} !important;
									{%- endif -%}
								}
								{%- if this.custom_size -%}
									@media screen and (max-width: 768px) {
										#{{ block.id }} {
											font-size: {{ this.text_size | times: 0.9 | round }}px;
										}
									}
								{%- endif -%}

								{%- if this.highlighted_texts != blank -%}
									#{{ block.id }} .highlighted-text {
										background-color: {{ this.hightlight_texts_color }};
									}
								{%- endif -%}
							{%- endstyle -%}
						{%- endif -%}
						<div 
							{% if custom_styled %}id="{{ block.id }}"{% endif %} 
							class="section-block text-block" 
							{{ block.shopify_attributes }}
						>
							{{ text }}
						</div>
					
					{%- when 'rating' -%}
						{%- liquid 
							if this.star_size > 0 or this.custom_size or this.text_color != blank or this.star_color != "#F1C40F" or this.empty_star_color != "#e0e0e0"
								assign custom_styled = true
							endif
						-%}

						{%- if custom_styled -%}
							{%- style -%}
								#{{ block.id }} .stars-wrapper > svg {
									width: {{ this.star_size }}px;
									height: auto;
								}
								#{{ block.id }} .rating-block-text {
									{%- if this.custom_size -%}
										font-size: {{ this.text_size }}px;
									{%- endif -%}
									{%- if this.text_color != blank -%}
										color: {{ this.text_color }} !important;
									{%- endif -%}
								}
								{%- if this.custom_size -%}
									@media screen and (max-width: 768px) {
										#{{ block.id }} .rating-block-text {
											font-size: {{ this.text_size | times: 0.9 | round }}px;
											letter-spacing: var(--letter-spacing-body);
										}
									}
								{%- endif -%}
								{%- if this.star_color != "#F1C40F" -%}
									#{{ block.id }} .stars-wrapper svg g rect {
										fill: {{ this.star_color }};
									}
								{%- endif -%}
								{%- if this.empty_star_color != "#e0e0e0" -%}
									#{{ block.id }} .stars-wrapper svg path[stroke] {
										stroke: {{ this.empty_star_color }};
									}
								{%- endif -%}
