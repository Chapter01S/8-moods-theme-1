{{ 'testimonials.css' | asset_url | stylesheet_tag }}

{% if section.settings.override_global_accent %}
  {% if section.settings.accent_font_family != 'inherit' and section.settings.accent_font_family != 'serif' %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    {% case section.settings.accent_font_family %}
      {% when 'Georgia Pro' %}
        <link
          href="https://fonts.googleapis.com/css2?family=Georgia+Pro:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet"
        >
      {% when 'Bodoni Moda' %}
        <link
          href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,opsz,wght@0,6..96,400;0,6..96,500;0,6..96,600;0,6..96,700;0,6..96,800;1,6..96,400;1,6..96,500;1,6..96,600;1,6..96,700;1,6..96,800&display=swap"
          rel="stylesheet"
        >
      {% when 'Instrument Serif' %}
        <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&display=swap" rel="stylesheet">
      {% when 'DM Serif Text' %}
        <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Text:ital@0;1&display=swap" rel="stylesheet">
      {% when 'Nothing You Could Do' %}
        <link href="https://fonts.googleapis.com/css2?family=Nothing+You+Could+Do&display=swap" rel="stylesheet">
    {% endcase %}
  {% endif %}
{% endif %}

<div
  class="testimonials-section section-{{ section.id }} page-fade-in"
  data-use-theme-colors="{{ section.settings.use_theme_colors }}"
  {% if section.settings.anchor_id != blank %}
    id="{{ section.settings.anchor_id }}"
  {% endif %}
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    {% if section.settings.use_theme_colors %}
      {% if settings.global_section_use_gradient_background %}
        background: var(--gradient-background) !important;
      {% else %}
        background-color: {{ settings.global_section_background_color }} !important;
      {% endif %}
    {% else %}
      background: {{ section.settings.section_background }} !important;
    {% endif %}
  "
>
  <div class="testimonials-container">
    {% if section.settings.heading != blank
      or section.settings.heading_accent != blank
      or section.settings.subtitle != blank
      or section.settings.show_rating
    %}
      <div class="testimonials-header">
        {% if section.settings.heading != blank or section.settings.heading_accent != blank %}
          <h2
            class="testimonials-heading testimonials-custom-heading"
            style="
              color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.heading_color }}{% endif %} !important;
              font-size: {{ section.settings.heading_size }}px;
              letter-spacing: var(--letter-spacing-heading);
              font-weight: var(--font-weight-bold) !important;
              --heading-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.heading_color }}{% endif %};
            "
          >
            {% if section.settings.heading != blank %}{{ section.settings.heading }}{% endif %}
            {% if section.settings.heading_accent != blank %}
              <span class="{% if section.settings.override_global_accent %}testimonials-custom-accent-text{% else %}testimonials-global-accent-text{% endif %}">
                {{ section.settings.heading_accent }}
              </span>
            {% endif %}
          </h2>
        {% endif %}

        {% if section.settings.subtitle != blank %}
          <div
            class="testimonials-subtitle testimonials-custom-subtitle"
            style="
              color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.subtitle_color }}{% endif %} !important;
              font-size: {{ section.settings.subtitle_size }}px;
              margin-bottom: 20px;
              font-weight: var(--font-weight-regular);
              letter-spacing: var(--letter-spacing-body);
              text-align: center;
              line-height: 1.4;
              --subtitle-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.subtitle_color }}{% endif %};
            "
          >
            {{ section.settings.subtitle }}
          </div>
        {% endif %}

        {% if section.settings.show_rating %}
          <div class="testimonials-rating-summary-wrapper">
            <div
              class="testimonials-rating-summary"
              style="
                background: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.rating_summary_background }}{% endif %};
                {% if section.settings.enable_rating_summary_border %}
                  border: {{ section.settings.rating_summary_border_width }}px {{ section.settings.rating_summary_border_style }} {{ section.settings.rating_summary_border_color }};
                {% endif %}
                border-radius: {{ section.settings.rating_summary_border_radius | default: 50 }}px;
              "
            >
              <span class="testimonials-rating-stars">
                <div class="testimonials-stars">
                  {% if section.settings.use_trustpilot_stars %}
                    {% for i in (1..section.settings.rating_max) %}
                      <svg
                        class="testimonials-star testimonials-summary-star trustpilot-star"
                        viewBox="0 0 96 96"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <rect width="96" height="96" fill="{% if i <= section.settings.rating_value %}{% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.summary_star_color }}{% endif %}{% else %}{% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color | color_modify: 'alpha', 0.5 }}{% else %}{{ section.settings.summary_star_empty_color }}{% endif %}{% endif %}"/>
                        <path d="M48 64.7L62.6 61l6.1 18.8zm33.6-24.3H55.9L48 16.2l-7.9 24.2H14.4l20.8 15-7.9 24.2 20.8-15 12.8-9.2z" fill="#fff"/>
                      </svg>
                    {% endfor %}
                  {% else %}
                    {% for i in (1..section.settings.rating_max) %}
                      <svg
                        class="testimonials-star testimonials-summary-star"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path d="M11.5245 3.46353C11.6741 3.00287 12.3259 3.00287 12.4755 3.46353L14.1329 8.56434C14.1998 8.77035 14.3918 8.90983 14.6084 8.90983H19.9717C20.4561 8.90983 20.6575 9.52964 20.2656 9.81434L15.9266 12.9668C15.7514 13.0941 15.678 13.3198 15.745 13.5258L17.4023 18.6266C17.552 19.0873 17.0248 19.4704 16.6329 19.1857L12.2939 16.0332C12.1186 15.9059 11.8814 15.9059 11.7061 16.0332L7.3671 19.1857C6.97524 19.4704 6.448 19.0873 6.59768 18.6266L8.25503 13.5258C8.32197 13.3198 8.24864 13.0941 8.07339 12.9668L3.73438 9.81434C3.34253 9.52964 3.54392 8.90983 4.02828 8.90983H9.39159C9.6082 8.90983 9.80018 8.77035 9.86712 8.56434L11.5245 3.46353Z" fill="{% if i <= section.settings.rating_value %}{% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.summary_star_color }}{% endif %}{% else %}{% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color | color_modify: 'alpha', 0.5 }}{% else %}{{ section.settings.summary_star_empty_color }}{% endif %}{% endif %}"/>
                      </svg>
                    {% endfor %}
                  {% endif %}
                </div>
              </span>
              <div class="testimonials-rating-text">
                {{ section.settings.rating_summary_text }}
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="testimonials-carousel" id="testimonials-{{ section.id }}">
        <div class="testimonials-track">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'testimonial' %}
                <div
                  class="testimonial-card"
                  {{ block.shopify_attributes }}
                  style="
                    background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.card_background }}{% endif %};
                    border-radius: {{ section.settings.card_border_radius }}px;
                    {% if section.settings.enable_card_border %}
                      border: {{ section.settings.card_border_width }}px {{ section.settings.card_border_style }} {{ section.settings.card_border_color }};
                    {% endif %}
                  "
                >
                  <!-- Stars at the top -->
                  {% if block.settings.show_stars %}
                    <div class="testimonials-card-rating">
                      <div class="testimonials-card-stars">
                        <div class="testimonials-stars">
                          {% if section.settings.use_trustpilot_stars %}
                            {% for i in (1..5) %}
                              <svg
                                class="testimonials-star testimonials-card-star trustpilot-star"
                                viewBox="0 0 96 96"
                                xmlns="http://www.w3.org/2000/svg"
                              >
<rect
  width="96"
  height="96"
  fill="
    {% if i <= block.settings.rating %}
      {% if section.settings.use_trustpilot_stars %}
        {{ section.settings.trustpilot_star_color | default: '#00B67A' }}
      {% elsif section.settings.use_theme_colors %}
        {{ settings.global_section_accent_1_color }}
      {% else %}
        {{ section.settings.star_color }}
      {% endif %}
    {% else %}
      {% if section.settings.use_theme_colors %}
        {{ settings.global_section_text_color | color_lighten: 40 }}
      {% else %}
        {{ section.settings.star_empty_color }}
      {% endif %}
    {% endif %}
  "
/>
                                <path d="M48 64.7L62.6 61l6.1 18.8zm33.6-24.3H55.9L48 16.2l-7.9 24.2H14.4l20.8 15-7.9 24.2 20.8-15 12.8-9.2z" fill="#fff"/>
                              </svg>
                            {% endfor %}
                          {% else %}
                            {% for i in (1..5) %}
                              <svg
                                class="testimonials-star testimonials-card-star"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                              >
                                <path d="M11.5245 3.46353C11.6741 3.00287 12.3259 3.00287 12.4755 3.46353L14.1329 8.56434C14.1998 8.77035 14.3918 8.90983 14.6084 8.90983H19.9717C20.4561 8.90983 20.6575 9.52964 20.2656 9.81434L15.9266 12.9668C15.7514 13.0941 15.678 13.3198 15.745 13.5258L17.4023 18.6266C17.552 19.0873 17.0248 19.4704 16.6329 19.1857L12.2939 16.0332C12.1186 15.9059 11.8814 15.9059 11.7061 16.0332L7.3671 19.1857C6.97524 19.4704 6.448 19.0873 6.59768 18.6266L8.25503 13.5258C8.32197 13.3198 8.24864 13.0941 8.07339 12.9668L3.73438 9.81434C3.34253 9.52964 3.54392 8.90983 4.02828 8.90983H9.39159C9.6082 8.90983 9.80018 8.77035 9.86712 8.56434L11.5245 3.46353Z" fill="{% if i <= block.settings.rating %}{% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.star_color }}{% endif %}{% else %}{% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_lighten: 40 }}{% else %}{{ section.settings.star_empty_color }}{% endif %}{% endif %}"/>
                              </svg>
                            {% endfor %}
                          {% endif %}
                        </div>
                      </div>
                    </div>
                  {% endif %}

                  <!-- Title below stars -->
                  {% if block.settings.title != blank %}
                    <h3
                      class="testimonial-title"
                      style="
                        color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.testimonial_title_color }}{% endif %} !important;
                        font-weight: var(--font-weight-bold);
                        letter-spacing: var(--letter-spacing-heading);
                      "
                    >
                      {{ block.settings.title }}
                    </h3>
                  {% endif %}

                  <!-- Content below title -->
                  {% if block.settings.content != blank %}
                    <div
                      class="testimonial-content"
                      style="
                        color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.card_text_color }}{% endif %};
                        font-weight: var(--font-weight-regular);
                        letter-spacing: var(--letter-spacing-body);
                      "
                    >
                      {{ block.settings.content }}
                    </div>
                  {% endif %}

                  {% if block.settings.author_name != blank %}
                    <div class="testimonial-author-container">
                      <div class="testimonial-author">
                        <div
                          class="author-avatar"
                          style="
                            background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.avatar_color }}{% endif %};
                            color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.avatar_text_color }}{% endif %};
                            font-weight: var(--font-weight-bold);
                          "
                        >
                          {% if block.settings.avatar_image != blank %}
                            <img src="{{ block.settings.avatar_image | image_url: width: 200 }}" alt="{{ block.settings.author_name }}" loading="lazy" width="" height="">
                          {% else %}
                            {{ block.settings.author_name | slice: 0 }}
                          {% endif %}
                        </div>
                        <div class="author-info">
                          <div class="author-info-container">
                            <div class="author-info-details">
                              <span
                                class="author-name"
                                style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.card_text_color }}{% endif %};"
                              >
                                {{- block.settings.author_name -}}
                              </span>
                              {% if block.settings.verified %}
                                <span
                                  class="testimonials-verified-badge"
                                  style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.verified_color }}{% endif %};"
                                >
                                  <svg
                                    class="verified-icon"
                                    width="16"
                                    height="16"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    xmlns="http://www.w3.org/2000/svg"
                                  >
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M9.5924 3.20027C9.34888 3.4078 9.22711 3.51158 9.09706 3.59874C8.79896 3.79854 8.46417 3.93721 8.1121 4.00672C7.95851 4.03705 7.79903 4.04977 7.48008 4.07522C6.6787 4.13918 6.278 4.17115 5.94371 4.28923C5.17051 4.56233 4.56233 5.17051 4.28923 5.94371C4.17115 6.278 4.13918 6.6787 4.07522 7.48008C4.04977 7.79903 4.03705 7.95851 4.00672 8.1121C3.93721 8.46417 3.79854 8.79896 3.59874 9.09706C3.51158 9.22711 3.40781 9.34887 3.20027 9.5924C2.67883 10.2043 2.4181 10.5102 2.26522 10.8301C1.91159 11.57 1.91159 12.43 2.26522 13.1699C2.41811 13.4898 2.67883 13.7957 3.20027 14.4076C3.40778 14.6511 3.51158 14.7729 3.59874 14.9029C3.79854 15.201 3.93721 15.5358 4.00672 15.8879C4.03705 16.0415 4.04977 16.201 4.07522 16.5199C4.13918 17.3213 4.17115 17.722 4.28923 18.0563C4.56233 18.8295 5.17051 19.4377 5.94371 19.7108C6.278 19.8288 6.6787 19.8608 7.48008 19.9248C7.79903 19.9502 7.95851 19.963 8.1121 19.9933C8.46417 20.0628 8.79896 20.2015 9.09706 20.4013C9.22711 20.4884 9.34887 20.5922 9.5924 20.7997C10.2043 21.3212 10.5102 21.5819 10.8301 21.7348C11.57 22.0884 12.43 22.0884 13.1699 21.7348C13.4898 21.5819 13.7957 21.3212 14.4076 20.7997C14.6511 20.5922 14.7729 20.4884 14.9029 20.4013C15.201 20.2015 15.5358 20.0628 15.8879 19.9933C16.0415 19.963 16.201 19.9502 16.5199 19.9248C17.3213 19.8608 17.722 19.8288 18.0563 19.7108C18.8295 19.4377 19.4377 18.8295 19.7108 18.0563C19.8288 17.722 19.8608 17.3213 19.9248 16.5199C19.9502 16.201 19.963 16.0415 19.9933 15.8879C20.0628 15.5358 20.2015 15.201 20.4013 14.9029C20.4884 14.7729 20.5922 14.6511 20.7997 14.4076C21.3212 13.7957 21.5819 13.4898 21.7348 13.1699C22.0884 12.43 22.0884 11.57 21.7348 10.8301C21.5819 10.5102 21.3212 10.2043 20.7997 9.5924C20.5922 9.34887 20.4884 9.22711 20.4013 9.09706C20.2015 8.79896 20.0628 8.46417 19.9933 8.1121C19.963 7.95851 19.9502 7.79903 19.9248 7.48008C19.8608 6.6787 19.8288 6.278 19.7108 5.94371C19.4377 5.17051 18.8295 4.56233 18.0563 4.28923C17.722 4.17115 17.3213 4.13918 16.5199 4.07522C16.201 4.04977 16.0415 4.03705 15.8879 4.00672C15.5358 3.93721 15.201 3.79854 14.9029 3.59874C14.7729 3.51158 14.6511 3.40781 14.4076 3.20027C13.7957 2.67883 13.4898 2.41811 13.1699 2.26522C12.43 1.91159 11.57 1.91159 10.8301 2.26522C10.5102 2.4181 10.2043 2.67883 9.5924 3.20027ZM16.3735 9.86314C16.6913 9.5453 16.6913 9.03 16.3735 8.71216C16.0557 8.39433 15.5403 8.39433 15.2225 8.71216L10.3723 13.5624L8.77746 11.9676C8.45963 11.6498 7.94432 11.6498 7.62649 11.9676C7.30866 12.2854 7.30866 12.8007 7.62649 13.1186L9.79678 15.2889C10.1146 15.6067 10.6299 15.6067 10.9478 15.2889L16.3735 9.86314Z" fill="{% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.verified_color }}{% endif %}"/>
                                  </svg>
                                  {{ section.settings.verified_text }}
                                </span>
                              {% endif %}
                            </div>
                          </div>
                          {% if block.settings.show_purchase_date and block.settings.purchase_date != blank %}
                            <p
                              class="testimonials-product-purchase-date"
                              style="
                                color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_lighten: 20 }}{% else %}{{ section.settings.purchase_date_color }}{% endif %};
                                background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_bg_color }}{% else %}{{ section.settings.author_info_bg_color }}{% endif %};
                                {% if section.settings.enable_author_info_border %}
                                  border: {{ section.settings.author_info_border_width }}px {{ section.settings.author_info_border_style }} {{ section.settings.author_info_border_color }};
                                  border-radius: {{ section.settings.author_info_border_radius }}px;
                                {% endif %}
                              "
                            >
                              <svg
                                class="testimonials-purchase-date-icon"
                                xmlns="http://www.w3.org/2000/svg"
                                width="11"
                                height="11"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="{% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_lighten: 20 }}{% else %}{{ section.settings.purchase_date_icon_color }}{% endif %}"
                                stroke-width="2.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                style="display: block;"
                              >
                                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                                <line x1="3" y1="6" x2="21" y2="6"></line>
                                <path d="M16 10a4 4 0 0 1-8 0"></path>
                              </svg>
                              {{ section.settings.purchase_date_prefix | default: 'Purchased on' | escape }}
                              {{ block.settings.purchase_date }}
                            </p>
                          {% endif %}
                        </div>
                      </div>
                    </div>
                  {% endif %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>

        {% if section.settings.show_navigation %}
          <div class="testimonials-navigation">
            {% render 'global-nav-button', 
              direction: 'prev', 
              aria_label: 'Previous testimonials',
              section_settings: section.settings
            %}
            {% render 'global-nav-button', 
              direction: 'next', 
              aria_label: 'Next testimonials',
              section_settings: section.settings
            %}
          </div>
        {% endif %}

        {% if section.settings.show_dots %}
          <div class="testimonials-dots" id="dots-{{ section.id }}">
            {% for block in section.blocks %}
              <button
                class="dot {% if forloop.first %}active{% endif %}"
                data-slide="{{ forloop.index0 }}"
                style="
                                  background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_modify: 'alpha', 0.3 }}{% else %}{{ section.settings.dot_color }}{% endif %};
                "
              ></button>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

<style>

  
  .testimonials-section.section-{{ section.id }} {
    --testimonials-gap: {{ section.settings.card_gap }}px;
    --card-width-mobile: {{ section.settings.card_width_mobile }}%;
    --card-width-desktop: {{ section.settings.card_width_desktop }}px;
  }

  .testimonials-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .testimonials-heading {
    margin-bottom: 20px;
    font-size: {{ section.settings.heading_size }}px;
  }

  .testimonials-subtitle {
    margin-bottom: 20px;
    font-size: {{ section.settings.subtitle_size }}px;
    line-height: 1.4;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Enhanced accent text styling with global and local customization options */
  .testimonials-section .testimonials-global-accent-text,
  .testimonials-section .testimonials-custom-accent-text {
    {% comment %} Always apply core accent text styling {% endcomment %}
    padding: 2px 4px !important;
    margin: -2px -4px !important;
    display: inline-block !important;
    margin-left: {{ section.settings.accent_text_margin_left }}px !important;

    {% comment %} Apply color or gradient based on theme colors and settings {% endcomment %}
    {% if section.settings.use_theme_colors %}
      {% comment %} Use global dark gradient when theme colors are enabled {% endcomment %}
      background: {{ settings.global_accent_text_gradient_dark }} !important;
      -webkit-background-clip: text !important;
      -webkit-text-fill-color: transparent !important;
      background-clip: text !important;
      color: transparent !important;
    {% elsif section.settings.use_accent_gradient %}
      background: {{ section.settings.accent_text_gradient }} !important;
      -webkit-background-clip: text !important;
      -webkit-text-fill-color: transparent !important;
      background-clip: text !important;
      color: transparent !important;
    {% else %}
      {% comment %} Apply solid color based on global or local settings {% endcomment %}
      color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.accent_color }}{% endif %} !important;
    {% endif %}

    {% if section.settings.override_global_accent %}
