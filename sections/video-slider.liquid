<script>
function toggleVideoPlayback(video) {
  const card = video.closest('.card');
  
  if (video.paused) {
    if (video.readyState < 2) {
      video.load();
    }
    
    video.play().then(() => {
      video.classList.remove('paused');
      card.classList.add('playing');
    }).catch(error => {
      console.warn('Video play failed:', error);
    });
  } else {
    video.pause();
    video.classList.add('paused');
    card.classList.remove('playing');
  }
}

document.addEventListener('DOMContentLoaded', function() {
  // Video initialization
  const videos = document.querySelectorAll('.video-section-{{ section.id }} .card-video');
  const autoplayEnabled = {{ section.settings.autoplay_videos | default: false }};
  
  videos.forEach(video => {
    const card = video.closest('.card');
    
    // Only initialize as paused if autoplay is NOT enabled
    if (!autoplayEnabled) {
      video.classList.add('paused');
      card.classList.remove('playing');
      
      if (video.readyState < 1) {
        video.load();
      }
      
      video.currentTime = 0;
    } else {
      // For autoplay videos, mark as playing
      video.classList.remove('paused');
      card.classList.add('playing');
    }
    
    video.addEventListener('ended', function() {
      if (!video.loop) {
        video.classList.add('paused');
        card.classList.remove('playing');
      }
    });
    
    {% unless section.settings.autoplay_videos %}
    video.addEventListener('loadedmetadata', function() {
      video.currentTime = 0;
    });
    {% endunless %}
  });

  // Infinite carousel with 7 sets (3 left + 1 original + 3 right)
  const container = document.querySelector('.video-section-{{ section.id }} .cards-grid');
  const slider = document.getElementById('video-slider-{{ section.id }}');
  const prevButton = document.querySelector('.video-section-{{ section.id }} .nav-button.prev');
  const nextButton = document.querySelector('.video-section-{{ section.id }} .nav-button.next');
  
  if (!slider || !prevButton || !nextButton || !container) return;
  
  const originalCards = Array.from(slider.querySelectorAll('.card'));
  if (originalCards.length === 0) return;
  
  const totalOriginalCards = originalCards.length;
  let isTransitioning = false;
  
  // Clone 3 sets to the LEFT (prepend in reverse order)
  for (let set = 3; set >= 1; set--) {
    for (let i = totalOriginalCards - 1; i >= 0; i--) {
      const clone = originalCards[i].cloneNode(true);
      clone.classList.add('clone');
      clone.setAttribute('data-set', `left-${set}`);
      slider.insertBefore(clone, slider.firstChild);
    }
  }
  
  // Mark original cards as the center set
  originalCards.forEach(card => {
    card.setAttribute('data-set', 'original');
  });
  
  // Clone 3 sets to the RIGHT (append)
  for (let set = 1; set <= 3; set++) {
    for (let i = 0; i < totalOriginalCards; i++) {
      const clone = originalCards[i].cloneNode(true);
      clone.classList.add('clone');
      clone.setAttribute('data-set', `right-${set}`);
      slider.appendChild(clone);
    }
  }
  
  // Get all cards including clones (should be 7 * totalOriginalCards)
  const allCards = Array.from(slider.querySelectorAll('.card'));
  
  // Start at the first card of the original set (middle)
  let currentCardIndex = totalOriginalCards * 3; // Skip the 3 left sets
  
  function getCardCenterPosition(cardIndex) {
    const containerWidth = container.offsetWidth;
    const gap = 20;
    
    let offset = 0;
    for (let i = 0; i < cardIndex; i++) {
