<style>
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
  .amazon-reviews-section-{{ section.id }} {
    padding:0;
    letter-spacing: var(--letter-spacing-body);
    }
  .amazon-reviews-section-{{ section.id }} .amazon-reviews-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.horizontal_padding }}px;
  }

  .amazon-reviews-section-{{ section.id }} .amazon-reviews-header {
    text-align: {{ section.settings.header_alignment }};
    margin-bottom: {{ section.settings.header_spacing }}px;
  }

  .amazon-reviews-section-{{ section.id }} .amazon-reviews-heading {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    font-weight: {{ section.settings.heading_weight }};
    margin-bottom: {{ section.settings.heading_margin }}px;
    letter-spacing: var(--letter-spacing-body);
  }

  .amazon-reviews-section-{{ section.id }} .amazon-reviews-subheading {
    font-size: {{ section.settings.subheading_size }}px;
    color: {{ section.settings.subheading_color }};
    font-weight: {{ section.settings.subheading_weight }};
    margin-top:0;
    letter-spacing: var(--letter-spacing-body);
  }

  .amazon-reviews-section-{{ section.id }} .amazon-review-item {
    background-color: {{ section.settings.review_background }};
    border: {{ section.settings.review_border_width }}px solid {{ section.settings.review_border_color }};
    border-radius: {{ section.settings.review_border_radius }}px;
    padding: {{ section.settings.review_padding }}px;
    margin-bottom: {{ section.settings.review_spacing }}px;
    box-shadow: {{ section.settings.review_shadow }};
  }

  .amazon-reviews-section-{{ section.id }} .review-header {
    display: flex;
    align-items: center;
    margin-bottom: {{ section.settings.review_header_spacing }}px;
  }

  .amazon-reviews-section-{{ section.id }} .reviewer-avatar {
    width: {{ section.settings.avatar_size }}px;
    height: {{ section.settings.avatar_size }}px;
    border-radius: 50%;
    margin-right: {{ section.settings.avatar_spacing }}px;
    object-fit: cover;
  }

  .amazon-reviews-section-{{ section.id }} .reviewer-info {
    flex: 1;
  }

  .amazon-reviews-section-{{ section.id }} .reviewer-name {
    font-size: {{ section.settings.name_size }}px;
    color: {{ section.settings.name_color }};
    font-weight: 700 !important;
    margin-bottom: 4px;
    display:inline;
    letter-spacing: var(--letter-spacing-body);
  }

  .amazon-reviews-section-{{ section.id }} .review-title {
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    font-weight: {{ section.settings.title_weight }};
    margin:0;
    letter-spacing: var(--letter-spacing-body);
  }

  .amazon-reviews-section-{{ section.id }} .review-meta {
    display: flex;
    align-items: center;
    gap: {{ section.settings.meta_spacing }}px;
    margin-bottom: {{ section.settings.meta_margin }}px;
    flex-wrap: wrap;
  }

  .amazon-reviews-section-{{ section.id }} .review-stars {
    display: flex;
    gap: -2px;
  }

  .amazon-reviews-section-{{ section.id }} .amazon-review-star {
    width: {{ section.settings.star_size }}px;
    height: {{ section.settings.star_size }}px;
    color: {{ section.settings.star_color }};
  }

  .amazon-reviews-section-{{ section.id }} .amazon-review-star.empty {
    color: {{ section.settings.star_empty_color }};
  }

  .amazon-reviews-section-{{ section.id }} .verified-badge {
    background-color: {{ section.settings.badge_background }};
    padding: {{ section.settings.badge_padding }};
    border-radius: {{ section.settings.badge_radius }}px;
    font-size: {{ section.settings.badge_size }}px;
    font-weight: {{ section.settings.badge_weight }};
    color: {{ section.settings.badge_color }} !important;
    letter-spacing: var(--letter-spacing-body);
  }

  .amazon-reviews-section-{{ section.id }} .verified-badge p {
    margin: 0 !important;
    padding: 0 !important;
    display: inline !important;
    /* Removed color: inherit !important to allow span inline styles to work */
  }

  .amazon-reviews-section-{{ section.id }} .verified-badge .highlight-word {
    /* Let inline styles take precedence - no CSS color override */
  }

  .amazon-reviews-section-{{ section.id }} .review-date {
    color: {{ section.settings.date_color }};
    font-size: {{ section.settings.date_size }}px;
    display:inline;
    letter-spacing: var(--letter-spacing-body);
  }

  .amazon-reviews-section-{{ section.id }} .review-content {
    font-size: {{ section.settings.content_size }}px;
    color: {{ section.settings.content_color }};
    line-height: {{ section.settings.content_line_height }};
    margin-bottom: {{ section.settings.content_margin }}px;
    letter-spacing: var(--letter-spacing-body);
  }

  .amazon-reviews-section-{{ section.id }} .review-images {
    display: flex;
    gap: {{ section.settings.image_gap }}px;
    margin-bottom: {{ section.settings.image_margin }}px;
    flex-wrap: wrap;
  }

  .amazon-reviews-section-{{ section.id }} .review-image {
    width: auto;
    height: {{ section.settings.review_image_height }}px;
    object-fit: cover;
    border-radius: {{ section.settings.image_border_radius }}px;
    cursor: pointer;
    transition: transform 0.2s;
  }

  .amazon-reviews-section-{{ section.id }} .review-image.aspect-ratio-square {
    aspect-ratio: 1/1;
    width: {{ section.settings.review_image_height }}px;
    height: {{ section.settings.review_image_height }}px;
  }

  .amazon-reviews-section-{{ section.id }} .review-image.aspect-ratio-portrait {
    aspect-ratio: 9/16;
    width: auto;
    height: {{ section.settings.review_image_height }}px;
  }

  .amazon-reviews-section-{{ section.id }} .review-image:hover {
    transform: scale(1.05);
  }

  .amazon-reviews-section-{{ section.id }} .review-helpful {
    color: {{ section.settings.helpful_color }};
    font-size: {{ section.settings.helpful_size }}px;
    margin-top: {{ section.settings.helpful_margin }}px;
    font-weight: 700 !important;
    letter-spacing: var(--letter-spacing-body);
  }

  .amazon-reviews-section-{{ section.id }} .review-actions {
    margin-top: {{ section.settings.action_buttons_margin }}px;
    display: flex;
    align-items: center;
    gap: {{ section.settings.action_buttons_spacing }}px;
  }

  .amazon-reviews-section-{{ section.id }} .helpful-button {
    background: none;
    border: none;
    color: {{ section.settings.helpful_button_color }};
    font-size: {{ section.settings.action_button_size }}px;
    cursor: pointer;
    padding: {{ section.settings.action_button_padding }};
    text-decoration: underline;
    transition: color 0.2s ease;
    letter-spacing: var(--letter-spacing-body);
  }

  .amazon-reviews-section-{{ section.id }} .report-button {
    background: none;
    border: none;
    color: {{ section.settings.report_button_color }};
    font-size: {{ section.settings.action_button_size }}px;
    cursor: default;
    padding: {{ section.settings.action_button_padding }};
    text-decoration: underline;
    transition: color 0.2s ease;
    letter-spacing: var(--letter-spacing-body);
  }

  .amazon-reviews-section-{{ section.id }} .helpful-button:hover {
    color: {{ section.settings.helpful_button_hover_color }};
  }

  .amazon-reviews-section-{{ section.id }} .report-button:hover {
    /* Hover effect disabled - button is non-functional */
    color: {{ section.settings.report_button_color }};
  }

  .amazon-reviews-section-{{ section.id }} .helpful-button.clicked {
    color: {{ section.settings.helpful_clicked_color }};
    font-weight: bold;
  }

  .amazon-reviews-section-{{ section.id }} .action-divider {
    color: {{ section.settings.divider_color }};
    font-size: {{ section.settings.action_button_size }}px;
    margin: 0 {{ section.settings.divider_spacing }}px;
  }

  @media (max-width: 768px) {
    .amazon-reviews-section-{{ section.id }} .amazon-reviews-container {
      padding: 0 20px;
    }

    .amazon-reviews-section-{{ section.id }} .amazon-reviews-heading {
      font-size: calc({{ section.settings.heading_size }}px * 0.55);
      line-height:1;
    }

    .amazon-reviews-section-{{ section.id }} .amazon-reviews-subheading {
      font-size: calc({{ section.settings.subheading_size }}px * 0.85);
      line-height: 1.3;
    }
  }
</style>

<div class="amazon-reviews-section-{{ section.id }}">
  <div class="amazon-reviews-container">
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="amazon-reviews-header">
        {% if section.settings.heading != blank %}
          <h2 class="amazon-reviews-heading">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="amazon-reviews-subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="amazon-reviews-list">
      {% for block in section.blocks %}
        <div class="amazon-review-item" {{ block.shopify_attributes }}>
          <div class="review-header">
            {% if block.settings.avatar != blank %}
              <img
                src="{{ block.settings.avatar | image_url: width: 100, height: 100 }}"
                alt="{{ block.settings.reviewer_name }}"
                width="100"
                height="100"
                class="reviewer-avatar"
              >
            {% else %}
              <div
                class="reviewer-avatar"
                style="background-color: {{ section.settings.avatar_placeholder_bg }}; display: flex; align-items: center; justify-content: center;"
              >
                <span style="font-size: {{ section.settings.avatar_size | divided_by: 2 }}px; color: {{ section.settings.avatar_placeholder_text }};">
                  {{ block.settings.reviewer_name | slice: 0 }}
                </span>
              </div>
            {% endif %}
            <div class="reviewer-info">
              <h3 class="review-title">
                <div class="reviewer-name">{{ block.settings.reviewer_name }}</div>
                {% if block.settings.show_review_title and block.settings.review_title != blank %}
                  - {{ block.settings.review_title -}}
                {%- endif %}
              </h3>
            </div>
          </div>

          <div class="review-meta">
            <div class="review-stars" role="img" aria-label="{{ block.settings.rating }} out of 5 stars">
              {% for i in (1..5) %}
                {% if i <= block.settings.rating %}
                  <svg class="amazon-review-star" fill="currentColor" viewBox="0 0 32 32">
                    <path d="M16 4.588l2.833 8.719H28l-7.416 5.387 2.832 8.719L16 22.023l-7.417 5.389 2.833-8.719L4 13.307h9.167L16 4.588z"/>
                  </svg>
                {% else %}
                  <svg class="amazon-review-star empty" fill="currentColor" viewBox="0 0 32 32">
                    <path d="M16 4.588l2.833 8.719H28l-7.416 5.387 2.832 8.719L16 22.023l-7.417 5.389 2.833-8.719L4 13.307h9.167L16 4.588z"/>
                  </svg>
                {% endif %}
              {% endfor %}
            </div>

            {% if block.settings.show_verified %}
              <div class="verified-badge">
                {% if block.settings.verified_badge_text != blank %}
                  {% liquid
                    assign verified_content = block.settings.verified_badge_text

                    if block.settings.highlight_words != blank
                      assign highlight_words = block.settings.highlight_words | split: ','
                      assign highlighted_content = verified_content

                      for word in highlight_words
                        assign clean_word = word | strip
                        if clean_word != blank
                          assign highlight_color = block.settings.highlight_color | default: '#C45500'
                          assign span_open = '<span class="highlight-word" style="color: ' | append: highlight_color | append: ' !important; font-weight: bold !important;">'
                          assign span_close = '</span>'
                          assign replacement = span_open | append: clean_word | append: span_close
                          assign highlighted_content = highlighted_content | replace: clean_word, replacement
                        endif
                      endfor

                      echo highlighted_content
                    else
                      echo verified_content
                    endif
                  %}
                {% else %}
                  <p>Verified Purchase</p>
                {% endif %}
              </div>
            {% endif %}
          </div>
          <div class="review-date">
            Reviewed
            {%- if block.settings.review_country != blank %}
              in the
              <div class="review-date">{{ block.settings.review_country }}</div>
            {% endif -%}
            {%- if block.settings.review_date != blank %}
              on
              <div class="review-date">{{ block.settings.review_date }}</div>
            {% endif %}
          </div>
          {% if block.settings.review_content != blank %}
            <div class="review-content">
              {{ block.settings.review_content }}
            </div>
          {% endif %}

          {% if block.settings.image_1 != blank
            or block.settings.image_2 != blank
            or block.settings.image_3 != blank
            or block.settings.image_4 != blank
          %}
            <div class="review-images">
              {% liquid
                assign aspect_ratio_class = ''
                assign img_width = 200
                assign img_height = 200

                if block.settings.image_aspect_ratio == '1/1'
                  assign aspect_ratio_class = ' aspect-ratio-square'
                  assign img_width = 200
                  assign img_height = 200
                elsif block.settings.image_aspect_ratio == '9/16'
                  assign aspect_ratio_class = ' aspect-ratio-portrait'
                  assign img_width = 180
                  assign img_height = 320
                endif
              %}
              {% if block.settings.image_1 != blank %}
                <img
                  src="{{ block.settings.image_1 | image_url: width: img_width, height: img_height }}"
                  alt="Review image 1"
                  width="{{ img_width }}"
                  height="{{ img_height }}"
                  class="review-image{{ aspect_ratio_class }}"
                >
              {% endif %}
              {% if block.settings.image_2 != blank %}
                <img
                  src="{{ block.settings.image_2 | image_url: width: img_width, height: img_height }}"
                  alt="Review image 2"
                  width="{{ img_width }}"
                  height="{{ img_height }}"
                  class="review-image{{ aspect_ratio_class }}"
                >
              {% endif %}
              {% if block.settings.image_3 != blank %}
                <img
                  src="{{ block.settings.image_3 | image_url: width: img_width, height: img_height }}"
                  alt="Review image 3"
                  width="{{ img_width }}"
                  height="{{ img_height }}"
                  class="review-image{{ aspect_ratio_class }}"
                >
              {% endif %}
              {% if block.settings.image_4 != blank %}
                <img
                  src="{{ block.settings.image_4 | image_url: width: img_width, height: img_height }}"
                  alt="Review image 4"
                  width="{{ img_width }}"
                  height="{{ img_height }}"
                  class="review-image{{ aspect_ratio_class }}"
                >
              {% endif %}
            </div>
          {% endif %}

          {% if block.settings.helpful_count > 0 %}
            <div class="review-helpful">
              {{ block.settings.helpful_count }}
              {{ block.settings.helpful_text }}
            </div>
          {% endif %}

          {% if block.settings.show_helpful_report_buttons %}
            <div class="review-actions">
              <button class="helpful-button" onclick="markHelpful(this)" data-review-id="{{ block.id }}">
                <span class="helpful-text">{{ block.settings.helpful_button_text | default: 'Helpful' }}</span>
              </button>
              <span class="action-divider">|</span>
              <button class="report-button" onclick="return false;" data-review-id="{{ block.id }}">
                <span class="report-text">{{ block.settings.report_button_text | default: 'Report' }}</span>
              </button>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  function markHelpful(button) {
    // Add clicked state
    button.classList.add('clicked');

    // Optional: Update text to show it was marked helpful
    const helpfulText = button.querySelector('.helpful-text');
    if (helpfulText) {
      helpfulText.textContent = 'Helpful âœ“';
    }

    // Disable the button to prevent multiple clicks
    button.disabled = true;

    // Here you could add AJAX call to save the helpful vote
    // Example:
    // const reviewId = button.dataset.reviewId;
    // fetch('/mark-helpful', { method: 'POST', body: JSON.stringify({reviewId}) });
  }

  // Report button functionality disabled - button does nothing when clicked
  function reportReview(button) {
    // Function disabled - no action taken
    return false;
  }
</script>

