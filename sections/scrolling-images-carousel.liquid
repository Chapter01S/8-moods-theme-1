{%- liquid
  assign section_id = 'scrolling-images-' | append: section.id
  assign top_scroll_speed = section.settings.top_scroll_speed | default: 30
  assign bottom_scroll_speed = section.settings.bottom_scroll_speed | default: 30
-%}

<style>
  #{{ section_id }} {
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.section_background }};
    overflow: hidden;
    position: relative;
  }

  #{{ section_id }} .scrolling-images-container {
    max-width: 100%;
    margin: 0 auto;
    text-align: center;
  }

  #{{ section_id }} .scrolling-images__header {
    margin-bottom: {{ section.settings.header_margin_bottom }}px;
  }

  #{{ section_id }} .scrolling-images__heading {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
    line-height: 1.2;
  }

  #{{ section_id }} .scrolling-images__subheading {
    color: {{ section.settings.subheading_color }};
    font-size: {{ section.settings.subheading_size }}px;
    font-weight: {{ section.settings.subheading_weight }};
    margin: 0;
    letter-spacing: var(--letter-spacing-body);
    line-height: 1.4;
  }

  #{{ section_id }} .scrolling-row {
    display: flex;
    width: max-content;
    gap: {{ section.settings.image_gap }}px;
    margin-bottom: {{ section.settings.row_gap }}px;
  }

  #{{ section_id }} .scrolling-row:last-child {
    margin-bottom: 0;
  }

  #{{ section_id }} .scrolling-row--top-left {
    animation: scrollLeft {{ top_scroll_speed }}s linear infinite;
  }

  #{{ section_id }} .scrolling-row--top-right {
    animation: scrollRight {{ top_scroll_speed }}s linear infinite;
  }

  #{{ section_id }} .scrolling-row--bottom-left {
    animation: scrollLeft {{ bottom_scroll_speed }}s linear infinite;
  }

  #{{ section_id }} .scrolling-row--bottom-right {
    animation: scrollRight {{ bottom_scroll_speed }}s linear infinite;
  }

  #{{ section_id }} .scrolling-image {
    height: {{ section.settings.image_height }}px;
    {% assign ratio_parts = section.settings.image_ratio | split: ':' %}
    {% assign width_ratio = ratio_parts[0] | times: 1.0 %}
    {% assign height_ratio = ratio_parts[1] | times: 1.0 %}
    {% assign calculated_width = section.settings.image_height | times: width_ratio | divided_by: height_ratio %}
    width: {{ calculated_width }}px;
    object-fit: cover;
    border-radius: {{ section.settings.image_border_radius }}px;
    flex-shrink: 0;
    transition: transform 0.3s ease;
    aspect-ratio: {{ section.settings.image_ratio | replace: ':', '/' }};
  }

  #{{ section_id }} .scrolling-image:hover {
    transform: scale({{ section.settings.hover_scale }});
  }

  @keyframes scrollLeft {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes scrollRight {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  /* Pause animation on hover */
  #{{ section_id }} .scrolling-row:hover {
    animation-play-state: {{ section.settings.pause_on_hover | default: 'paused' }};
  }

  @media screen and (max-width: 768px) {
    #{{ section_id }} .scrolling-images__heading {
      font-size: {{ section.settings.heading_size_mobile }}px;
    }
    
    #{{ section_id }} .scrolling-images__subheading {
      font-size: {{ section.settings.subheading_size | times: 0.9 }}px;
    }

    #{{ section_id }} .scrolling-image {
      height: {{ section.settings.mobile_image_height }}px;
      {% assign ratio_parts = section.settings.image_ratio | split: ':' %}
      {% assign width_ratio = ratio_parts[0] | times: 1.0 %}
      {% assign height_ratio = ratio_parts[1] | times: 1.0 %}
      {% assign mobile_calculated_width = section.settings.mobile_image_height | times: width_ratio | divided_by: height_ratio %}
      width: {{ mobile_calculated_width }}px;
    }
  }
</style>

<section id="{{ section_id }}" class="scrolling-images-section">
  <div class="scrolling-images-container">
    
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="scrolling-images__header">
        {% if section.settings.heading != blank %}
          <h2 class="scrolling-images__heading">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="scrolling-images__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="scrolling-images-wrapper">
      
      <!-- Top Row -->
      {% assign top_block = section.blocks | where: 'type', 'top_images' | first %}
      {% if top_block %}
        {% assign top_direction_class = 'scrolling-row--top-' | append: section.settings.top_scroll_direction %}
        <div class="scrolling-row {{ top_direction_class }}">
          {% for i in (1..section.settings.scroll_duplicates) %}
            {% for j in (1..10) %}
              {% assign image_key = 'image_' | append: j %}
              {% if top_block.settings[image_key] != blank %}
                <img 
                  src="{{ top_block.settings[image_key] | image_url: width: 600 }}" 
                  alt="{{ top_block.settings[image_key].alt | escape }}"
                  class="scrolling-image"
                  loading="lazy"
                >
              {% endif %}
            {% endfor %}
          {% endfor %}
        </div>
      {% endif %}

      <!-- Bottom Row -->
      {% assign bottom_block = section.blocks | where: 'type', 'bottom_images' | first %}
      {% if bottom_block %}
        {% assign bottom_direction_class = 'scrolling-row--bottom-' | append: section.settings.bottom_scroll_direction %}
        <div class="scrolling-row {{ bottom_direction_class }}">
          {% for i in (1..section.settings.scroll_duplicates) %}
            {% for j in (1..10) %}
              {% assign image_key = 'image_' | append: j %}
              {% if bottom_block.settings[image_key] != blank %}
                <img 
                  src="{{ bottom_block.settings[image_key] | image_url: width: 600 }}" 
                  alt="{{ bottom_block.settings[image_key].alt | escape }}"
                  class="scrolling-image"
                  loading="lazy"
                >
              {% endif %}
            {% endfor %}
          {% endfor %}
        </div>
      {% endif %}
      
    </div>
  </div>
</section>

