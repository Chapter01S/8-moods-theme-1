{% doc %}
  @prompt
    marquee with text going from left to write 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
  }

  .ai-marquee-wrapper-{{ ai_gen_id }} {
    display: flex;
    width: fit-content;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.animation_speed }}s linear infinite;
  }

  .ai-marquee-content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    white-space: nowrap;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-marquee-item-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
  }

  .ai-marquee-separator-{{ ai_gen_id }} {
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.font_size }}px;
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-marquee-container-{{ ai_gen_id }}:hover .ai-marquee-wrapper-{{ ai_gen_id }} {
    {% if block.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-item-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }
    
    .ai-marquee-separator-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<marquee-block-{{ ai_gen_id }} class="ai-marquee-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-marquee-wrapper-{{ ai_gen_id }}">
    <div class="ai-marquee-content-{{ ai_gen_id }}">
      {% if block.settings.text_1 != blank %}
        <span class="ai-marquee-item-{{ ai_gen_id }}">{{ block.settings.text_1 }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
      
      {% if block.settings.text_2 != blank %}
        <span class="ai-marquee-item-{{ ai_gen_id }}">{{ block.settings.text_2 }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
      
      {% if block.settings.text_3 != blank %}
        <span class="ai-marquee-item-{{ ai_gen_id }}">{{ block.settings.text_3 }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
      
      {% if block.settings.text_4 != blank %}
        <span class="ai-marquee-item-{{ ai_gen_id }}">{{ block.settings.text_4 }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
      
      {% if block.settings.text_5 != blank %}
        <span class="ai-marquee-item-{{ ai_gen_id }}">{{ block.settings.text_5 }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
    </div>
    
    <div class="ai-marquee-content-{{ ai_gen_id }}" aria-hidden="true">
      {% if block.settings.text_1 != blank %}
        <span class="ai-marquee-item-{{ ai_gen_id }}">{{ block.settings.text_1 }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
      
      {% if block.settings.text_2 != blank %}
        <span class="ai-marquee-item-{{ ai_gen_id }}">{{ block.settings.text_2 }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
      
      {% if block.settings.text_3 != blank %}
        <span class="ai-marquee-item-{{ ai_gen_id }}">{{ block.settings.text_3 }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
      
      {% if block.settings.text_4 != blank %}
        <span class="ai-marquee-item-{{ ai_gen_id }}">{{ block.settings.text_4 }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
      
      {% if block.settings.text_5 != blank %}
        <span class="ai-marquee-item-{{ ai_gen_id }}">{{ block.settings.text_5 }}</span>
        <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
      {% endif %}
    </div>
  </div>
</marquee-block-{{ ai_gen_id }}>

<script>
  (function() {
    class MarqueeBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.adjustAnimation();
      }

      adjustAnimation() {
        const wrapper = this.querySelector('.ai-marquee-wrapper-{{ ai_gen_id }}');
        if (!wrapper) return;

        const content = wrapper.querySelector('.ai-marquee-content-{{ ai_gen_id }}');
        if (!content) return;

        const contentWidth = content.offsetWidth;
        const containerWidth = this.offsetWidth;

        if (contentWidth < containerWidth) {
          wrapper.style.animation = 'none';
        }
      }
    }

    customElements.define('marquee-block-{{ ai_gen_id }}', MarqueeBlock{{ ai_gen_id }});
  })();
</script>

