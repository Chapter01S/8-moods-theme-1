{% comment %}
  Customer Review Card Snippet

  Accepts:
  - reviewer_name: Name of the reviewer
  - review_text: The review content
  - rating: Rating out of 5
  - avatar_url: URL to the reviewer's avatar image
  - background_color_start: Starting color for the gradient background
  - background_color_end: Ending color for the gradient background
  - text_color: Color for the review text
  - border_color: Color for the border
  - border_radius: Border radius in pixels (default: 8px)
  - border_style: Border style (default: dashed)
  - show_shadow: Whether to show drop shadow (default: true)
  - star_color: Color for filled stars
  - review_text_color: Color for the review text content
  - verified_icon_color: Color for the verified badge icon
  - reviewer_name_size: Font size for reviewer name in pixels (default: 16px)
  - review_text_size: Font size for review text in pixels (default: 14px)
  - star_size: Size for star rating icons in pixels (default: 16px)
  - avatar_size_desktop: Avatar image size on desktop in pixels (default: 75px)
  - avatar_size_mobile: Avatar image size on mobile in pixels (default: 65px)
  - margin_top: Top margin in pixels (default: 15px)
  - margin_right: Right margin in pixels (default: 0)
  - margin_bottom: Bottom margin in pixels (default: 15px)
  - margin_left: Left margin in pixels (default: 0)
  - block: Block object for Shopify attributes
{% endcomment %}

{%- assign reviewer_name = reviewer_name | default: 'Lauren J.' -%}
{%- assign review_text = review_text
  | default: "This is my favorite purchase ever! It came so fast!! Anyone who's like me needs this!"
-%}
{%- assign rating = rating | default: 5 -%}
{%- assign avatar_url = avatar_url -%}
{%- assign background_color_start = background_color_start | default: '#f8f8f8' -%}
{%- assign background_color_end = background_color_end | default: '#f2f2f2' -%}
{%- assign text_color = text_color | default: '#333' -%}
{%- assign review_text_color = review_text_color | default: '#4a4a4a' -%}
{%- assign verified_icon_color = verified_icon_color | default: '#1C274C' -%}
{%- assign border_color = border_color | default: '#dcdcdc' -%}
{%- assign border_radius = border_radius | default: 8 -%}
{%- assign border_style = border_style | default: 'dashed' -%}
{%- assign show_shadow = show_shadow | default: true -%}
{%- assign star_color = star_color | default: '#FFB800' -%}
{%- assign reviewer_name_size = reviewer_name_size | default: 16 -%}
{%- assign review_text_size = review_text_size | default: 14 -%}
{%- assign star_size = star_size | default: 16 -%}
{%- assign avatar_size_desktop = avatar_size_desktop | default: 75 -%}
{%- assign avatar_size_mobile = avatar_size_mobile | default: 65 -%}
{%- assign margin_top = margin_top | default: 15 | append: 'px' -%}
{%- assign margin_right = margin_right | default: 0 | append: 'px' -%}
{%- assign margin_bottom = margin_bottom | default: 15 | append: 'px' -%}
{%- assign margin_left = margin_left | default: 0 | append: 'px' -%}

{%- assign unique_id = block.id | default: 'default' -%}

<div
  class="customer-review-card customer-review-{{ unique_id }}"
  {{ block.shopify_attributes }}
  style="margin: {{ margin_top }} {{ margin_right }} {{ margin_bottom }} {{ margin_left }};"
>
  <div class="customer-review-avatar-container">
    <div class="customer-review-avatar">
      {% if avatar_url != blank %}
        {% comment %} Check if avatar_url is a Shopify image object or a URL string {% endcomment %}
        {% if avatar_url contains 'cdn.shopify.com' or avatar_url contains 'http' %}
          {% comment %} It's a URL string - use it directly {% endcomment %}
          <img 
            src="{{ avatar_url }}" 
            alt="{{ reviewer_name }}" 
            loading="lazy" 
            width="60" 
            height="60" 
            style="image-rendering: -webkit-optimize-contrast; image-rendering: crisp-edges; object-fit: cover;">
        {% else %}
          {% comment %} It's a Shopify image object - use image_url filter {% endcomment %}
        <img 
          src="{{ avatar_url | image_url: width: 120 }}" 
          srcset="{{ avatar_url | image_url: width: 60 }} 1x, 
                  {{ avatar_url | image_url: width: 120 }} 2x, 
                  {{ avatar_url | image_url: width: 180 }} 3x" 
          alt="{{ reviewer_name }}" 
          loading="lazy" 
          width="60" 
          height="60" 
          style="image-rendering: -webkit-optimize-contrast; image-rendering: crisp-edges; object-fit: cover;">
        {% endif %}
      {% endif %}
    </div>
  </div>
  <div class="customer-review-content">
    <div class="customer-review-header">
      <div class="customer-review-name">
        {{ reviewer_name }}
        <svg
          class="customer-review-verified"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
