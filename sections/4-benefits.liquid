    text-align: {{ section.settings.heading_alignment_mobile }} !important;
  }
  
  #benefits-{{ section.id }} .benefit-item {
    text-align: {{ section.settings.benefit_content_alignment_mobile }} !important;
  }
  
  #benefits-{{ section.id }} .benefit-item__icon {
    {% if section.settings.benefit_content_alignment_mobile == 'left' %}
      margin-left: 0 !important;
      margin-right: auto !important;
    {% else %}
      margin-left: auto !important;
      margin-right: auto !important;
  {% endif %}
    width: {{ section.settings.benefit_icon_container_size_mobile | default: 60 }}px !important;
    height: {{ section.settings.benefit_icon_container_size_mobile | default: 60 }}px !important;
  }
  
  #benefits-{{ section.id }} .benefit-item__icon-image,
  #benefits-{{ section.id }} .benefit-item__icon-svg {
    width: {{ section.settings.benefit_icon_size_mobile | default: 30 }}px !important;
    height: {{ section.settings.benefit_icon_size_mobile | default: 30 }}px !important;
  }
  
  #benefits-{{ section.id }} .benefit-item__title {
    color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.benefit_title_color }}{% endif %} !important;
    font-size: {{ section.settings.benefit_title_size_mobile }}px !important;
    text-align: {{ section.settings.benefit_content_alignment_mobile }} !important;
    {% if section.settings.benefit_content_alignment_mobile == 'left' %}
      display: block !important;
      width: 100% !important;
      margin-left: 0 !important;
      margin-right: auto !important;
    {% endif %}
    {% if section.settings.benefit_title_bold %}
      font-weight: 700 !important;
    {% endif %}
  }
  
  #benefits-{{ section.id }} .benefit-item__description {
    color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.benefit_description_color }}{% endif %} !important;
    font-size: {{ section.settings.benefit_description_size_mobile }}px !important;
    text-align: {{ section.settings.benefit_content_alignment_mobile }} !important;
  }
  
  #benefits-{{ section.id }} .benefit-item__icon {
    {% unless section.settings.hide_icon_background %}
      background: {% if section.settings.use_theme_colors %}{{ settings.global_accent_text_gradient_dark }}{% else %}{{ section.settings.icon_background | default: 'linear-gradient(135deg, #EF4A65, #FF6B9D)' }}{% endif %};
    {% endunless %}
    {% if section.settings.hide_icon_background %}
      background: transparent !important;
      border-radius: 0 !important;
    {% endif %}
    {% if section.settings.enable_icon_shadow %}
      {% assign shadow_color_rgb = section.settings.icon_shadow_color | color_to_rgb | remove: 'rgb(' | remove: ')' %}
      {% assign shadow_opacity = section.settings.icon_shadow_opacity | times: 0.01 %}
      box-shadow: {{ section.settings.icon_shadow_horizontal }}px {{ section.settings.icon_shadow_vertical }}px {{ section.settings.icon_shadow_blur }}px {{ section.settings.icon_shadow_spread }}px rgba({{ shadow_color_rgb }}, {{ shadow_opacity }}) !important;
    {% endif %}
  }

  @media screen and (min-width: 768px) {
    #benefits-{{ section.id }} {
      padding: {{ section.settings.padding_top_desktop }}px {{ section.settings.padding_left_desktop }}px 
               {{ section.settings.padding_bottom_desktop }}px {{ section.settings.padding_right_desktop }}px;
    }
    
    #benefits-{{ section.id }} .benefits-grid__container {
      max-width: {{ section.settings.section_width_desktop | default: 1200 }}px;
      margin: 0 auto;
    }
    
    #benefits-{{ section.id }} .benefits-grid__content-wrapper--no-image .benefits-grid__content {
      max-width: {{ section.settings.content_max_width_no_image | default: 600 }}px !important;
    }
    
    #benefits-{{ section.id }} .benefits-grid__heading {
      color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.heading_color }}{% endif %} !important;
      font-size: {{ section.settings.heading_size_desktop }}px !important;
      line-height: {{ section.settings.heading_line_height_desktop | default: 1.2 }} !important;
      text-align: {{ section.settings.heading_alignment_desktop }} !important;
    }
    
    #benefits-{{ section.id }} .benefits-grid__heading-accent {
      padding: 2px 4px !important;
      margin: -2px -4px !important;
      display: inline-block !important;
      margin-left: {{ section.settings.accent_text_margin_left }}px !important;
      
      {% comment %} Color and gradient styling {% endcomment %}
      {% if section.settings.use_accent_gradient %}
        background: {{ section.settings.accent_text_gradient | default: 'linear-gradient(135deg, #EF4A65, #FF6B9D)' }} !important;
        -webkit-background-clip: text !important;
        -webkit-text-fill-color: transparent !important;
        background-clip: text !important;
        color: transparent !important;
        line-height: 1.3 !important;
      {% else %}
        color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.accent_text_color | default: '#EF4A65' }}{% endif %} !important;
      {% endif %}
      
      {% comment %} Typography styling {% endcomment %}
      {% if section.settings.override_global_accent %}
        {% if section.settings.accent_font_family != 'inherit' %}
          {% case section.settings.accent_font_family %}
            {% when 'serif' %}
              font-family: serif !important;
            {% when 'Georgia Pro' %}
              font-family: 'Georgia Pro', Georgia, serif !important;
            {% when 'Bodoni Moda' %}
              font-family: 'Bodoni Moda', Georgia, serif !important;
            {% when 'Instrument Serif' %}
              font-family: 'Instrument Serif', Georgia, serif !important;
            {% when 'DM Serif Text' %}
              font-family: 'DM Serif Text', Georgia, serif !important;
            {% when 'Nothing You Could Do' %}
              font-family: 'Nothing You Could Do', cursive !important;
          {% endcase %}
        {% else %}
          font-family: var(--font-accent-family, var(--font-body-family)) !important;
        {% endif %}
        font-style: {{ section.settings.accent_font_style | default: 'normal' }} !important;
        font-weight: {% if section.settings.accent_font_weight != 'inherit' %}{{ section.settings.accent_font_weight }}{% else %}var(--font-accent-weight, inherit){% endif %} !important;
      {% else %}
        font-family: var(--font-accent-family, var(--font-body-family)) !important;
        font-style: var(--font-accent-style, normal) !important;
        font-weight: var(--font-accent-weight, inherit) !important;
        letter-spacing: var(--font-accent-letter-spacing, inherit) !important;
        text-transform: var(--font-accent-text-transform, none) !important;
      {% endif %}
    }

    #benefits-{{ section.id }} .benefits-grid__subtitle {
      color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.subtitle_color }}{% endif %} !important;
      font-size: {{ section.settings.subtitle_size_desktop }}px !important;
      text-align: {{ section.settings.heading_alignment_desktop }} !important;
    }
    
    #benefits-{{ section.id }} .benefit-item {
      text-align: {{ section.settings.benefit_content_alignment_desktop }} !important;
