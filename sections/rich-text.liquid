{%- style -%}
  /* Load-in Animation */
  .page-fade-in {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Staggered animation delays */
  .page-fade-in:nth-child(2) { animation-delay: 0.1s; }
  .page-fade-in:nth-child(3) { animation-delay: 0.2s; }
  .page-fade-in:nth-child(4) { animation-delay: 0.3s; }

  #shopify-section-{{ section.id }} {
    {% if section.settings.enable_top_border %}
      border-top: {{ section.settings.top_border_width }}px {{ section.settings.top_border_style }} {{ section.settings.top_border_color }} !important;
    {% endif %}
    {% if section.settings.enable_bottom_border %}
      border-bottom: {{ section.settings.bottom_border_width }}px {{ section.settings.bottom_border_style }} {{ section.settings.bottom_border_color }} !important;
    {% endif %}
  }

  .rich-text-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: {{ section.settings.padding_horizontal }}px;
    padding-right: {{ section.settings.padding_horizontal }}px;
    background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.section_bg_color }}{% endif %};
    {% if section.settings.section_border_radius > 0 %}
      border-radius: {{ section.settings.section_border_radius }}px;
    {% endif %}
  }

  .rich-text-section-{{ section.id }} .rich-text-title {
    color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.title_color }}{% endif %} !important;
    font-family: var(--font-heading-family) !important;
    font-weight: var(--font-weight-bold) !important;
    letter-spacing: var(--letter-spacing-heading) !important;
    font-size: {{ section.settings.title_font_size }}px;
    line-height: {{ section.settings.title_line_height }};
    margin-bottom: {{ section.settings.title_margin_bottom }}px;
  }

  .rich-text-section-{{ section.id }} .rich-text-title .accent {
    {% if section.settings.use_accent_gradient %}
      background: linear-gradient({{ section.settings.accent_gradient_angle }}deg, {{ section.settings.accent_gradient_start }}, {{ section.settings.accent_gradient_end }});
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      text-fill-color: transparent;
    {% elsif section.settings.use_theme_colors %}
      color: {{ settings.global_section_accent_1_color | default: '#ef4a65' }} !important;
    {% else %}
      color: {{ section.settings.accent_color | default: '#ef4a65' }} !important;
    {% endif %}
    display: inline-block;
  }

  .rich-text-section-{{ section.id }} .rich-text-subtitle {
    color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.subtitle_color }}{% endif %} !important;
    font-size: {{ section.settings.subtitle_font_size }}px;
    line-height: {{ section.settings.subtitle_line_height }};
    letter-spacing: var(--letter-spacing-body);
    margin-bottom: {{ section.settings.subtitle_margin_bottom }}px;
    max-width: {{ section.settings.subtitle_max_width }}px;
    {% if section.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
      text-align: center;
    {% elsif section.settings.text_alignment == 'right' %}
      margin-left: auto;
      margin-right: 0;
      text-align: right;
    {% else %}
      margin-left: 0;
      margin-right: auto;
      text-align: left;
    {% endif %}
  }

  .rich-text-section-{{ section.id }} .rich-text-subtitle p {
    margin: 0 0 1rem 0;
    color: inherit !important;
  }

  .rich-text-section-{{ section.id }} .rich-text-subtitle p:last-child {
    margin-bottom: 0;
    color: inherit !important;
  }

  /* Remove default page-width padding - use only section padding */
  .rich-text-section-{{ section.id }} .page-width {
    padding: 0 !important;
    margin-left: auto !important;
    margin-right: auto !important;
  }

  {% for block in section.blocks %}
    {% if block.type == 'button' %}
      .rich-text-section-{{ section.id }} .rich-text-button-wrapper[data-block-id="{{ block.id }}"] .rich-text-button,
      .rich-text-section-{{ section.id }} .rich-text-button-wrapper[data-block-id="{{ block.id }}"] .rich-text-button.button-gradient-effect,
      .rich-text-section-{{ section.id }} .rich-text-button-wrapper[data-block-id="{{ block.id }}"] .rich-text-button.gradient-shine-enabled {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: all 0.3s ease;
        text-align: center;
        margin-top: 24px;

        {% if section.settings.use_global_button_styling %}
          /* Use Global Button Styling System */
          padding: var(--global-button-padding-y, 12px) 20px !important;
          font-size: {{ section.settings.button_font_size | default: 16 }}px !important;
          font-weight: var(--global-button-font-weight, 700) !important;
          letter-spacing: var(--global-button-letter-spacing, 1px) !important;
          text-transform: var(--global-button-text-transform, none) !important;
          {% if settings.enable_button_gradient %}
            background: linear-gradient({{ settings.button_gradient_direction }}, {{ settings.button_gradient_start }}, {{ settings.button_gradient_end }}) !important;
          {% else %}
            background-color: var(--global-button-bg-color) !important;
          {% endif %}
          color: var(--global-button-text-color) !important;
          border-radius: var(--global-button-radius, 4px) !important;
          min-width: 120px;
          /* Border styles are applied by global-button-fix.liquid */
        {% else %}
          /* Use Simple Default Styling */
          padding: 12px 24px !important;
          background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.button_bg_color }}{% endif %} !important;
          background: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.button_bg_color }}{% endif %} !important;
          background-image: none !important;
          color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}#ffffff{% endif %} !important;
          font-weight: var(--font-weight-bold) !important;
          letter-spacing: var(--letter-spacing-body) !important;
          text-transform: none !important;
          min-width: 120px !important;
          font-size: {{ section.settings.button_font_size | default: 16 }}px !important;
          border-radius: 4px !important;
          border: none !important;
        {% endif %}
      }
    {% endif %}
  {% endfor %}

  {% for block in section.blocks %}
    {% if block.type == 'button' %}
      .rich-text-section-{{ section.id }} .rich-text-button-wrapper[data-block-id="{{ block.id }}"] .rich-text-button:hover,
      .rich-text-section-{{ section.id }} .rich-text-button-wrapper[data-block-id="{{ block.id }}"] .rich-text-button.button-gradient-effect:hover,
      .rich-text-section-{{ section.id }} .rich-text-button-wrapper[data-block-id="{{ block.id }}"] .rich-text-button.gradient-shine-enabled:hover {
        {% if section.settings.use_global_button_styling %}
          /* Use Global Button Hover Styling */
          {% if settings.enable_button_gradient %}
            background: linear-gradient({{ settings.button_gradient_direction }}, {{ settings.button_gradient_hover_start }}, {{ settings.button_gradient_hover_end }}) !important;
          {% else %}
            background-color: var(--global-button-hover-bg-color) !important;
          {% endif %}
          color: var(--global-button-hover-text-color) !important;
          /* Border styles are applied by global-button-fix.liquid */
        {% else %}
          /* Use Simple Default Hover Styling */
          {% if section.settings.use_theme_colors %}
            background-color: {{ settings.global_section_accent_1_color | color_darken: 10 }} !important;
            background: {{ settings.global_section_accent_1_color | color_darken: 10 }} !important;
          {% else %}
            background-color: #333333 !important;
            background: #333333 !important;
          {% endif %}
          background-image: none !important;
        {% endif %}
        transform: translateY(-2px);
      }
    {% endif %}
  {% endfor %}

  /* Image Block Styling */
  {% for block in section.blocks %}
    {% if block.type == 'image' %}
      .rich-text-section-{{ section.id }} .rich-text-image-wrapper[data-block-id="{{ block.id }}"] {
        margin: {{ block.settings.image_margin_top }}px auto {{ block.settings.image_margin_bottom }}px auto;
        text-align: {{ section.settings.text_alignment }};
        max-width: {{ block.settings.image_max_width }}px;
      }

      .rich-text-section-{{ section.id }} .rich-text-image-wrapper[data-block-id="{{ block.id }}"] img {
        width: 100%;
        height: auto;
        border-radius: {{ block.settings.image_border_radius }}px;
        {% if block.settings.image_border_width > 0 %}
          border: {{ block.settings.image_border_width }}px solid {{ block.settings.image_border_color }};
        {% endif %}
        transition: transform 0.3s ease;
      }

      {% if block.settings.enable_image_hover %}
        .rich-text-section-{{ section.id }} .rich-text-image-wrapper[data-block-id="{{ block.id }}"] img:hover {
          transform: scale({{ block.settings.image_hover_scale }});
        }
      {% endif %}
    {% endif %}
  {% endfor %}

  /* Mobile Responsive */
  @media screen and (max-width: 768px) {
    .rich-text-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    .rich-text-section-{{ section.id }} .rich-text-title {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      margin-bottom: {{ section.settings.title_margin_bottom | times: 0.75 | round: 0 }}px;
    }

    .rich-text-section-{{ section.id }} .rich-text-subtitle {
      font-size: {{ section.settings.subtitle_font_size_mobile }}px;
      margin-bottom: {{ section.settings.subtitle_margin_bottom | times: 0.75 | round: 0 }}px;
      max-width: 100%;
      {% if section.settings.mobile_text_alignment == 'center' %}
        margin-left: auto;
        margin-right: auto;
        text-align: center;
      {% elsif section.settings.mobile_text_alignment == 'right' %}
        margin-left: auto;
        margin-right: 0;
        text-align: right;
      {% else %}
        margin-left: 0;
        margin-right: auto;
        text-align: left;
      {% endif %}
    }

    .rich-text-section-{{ section.id }} .rich-text-button {
      margin-top: 18px;
      /* Mobile font size always uses section setting */
      font-size: {{ section.settings.button_font_size_mobile | default: 14 }}px !important;
    }
    
    /* Only apply custom padding when NOT using global button styling */
    {% unless section.settings.use_global_button_styling %}
    .rich-text-section-{{ section.id }} .rich-text-button {
      padding: 10px 20px;
    }
    {% endunless %}

    /* Mobile Image Styling */
    {% for block in section.blocks %}
      {% if block.type == 'image' %}
        .rich-text-section-{{ section.id }} .rich-text-image-wrapper[data-block-id="{{ block.id }}"] {
          text-align: {{ section.settings.mobile_text_alignment }};
          max-width: {{ block.settings.image_max_width_mobile }}px;
          margin: {{ block.settings.image_margin_top | times: 0.75 | round: 0 }}px auto {{ block.settings.image_margin_bottom | times: 0.75 | round: 0 }}px auto;
        }
      {% endif %}
    {% endfor %}
  }
{%- endstyle -%}

<div class="rich-text-section-{{ section.id }} page-fade-in">
  {% assign text_alignment = section.settings.text_alignment %}
  {% assign mobile_text_alignment = section.settings.mobile_text_alignment %}

  <div
    class="
      page-width flex flex-col text-{{ mobile_text_alignment }} md:text-{{ text_alignment }}
      {% case mobile_text_alignment %}
       {% when 'left' %}
         items-start
       {% when 'center' %}
         items-center
       {% when 'right' %}
         items-end
      {% endcase %}
      {% case text_alignment %}
       {% when 'left' %}
         md:items-start
       {% when 'center' %}
         md:items-center
       {% when 'right' %}
         md:items-end
      {% endcase %}
    "
  >
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'title' %}
          <h2 class="rich-text-title" {{ block.shopify_attributes }}>
            {% if block.settings.title != blank %}{{ block.settings.title }}{% endif %}
            {% if block.settings.accent_text != blank %}
              <span class="accent">{{ block.settings.accent_text }}</span>
            {% endif %}
          </h2>

        {% when 'subtitle' %}
          <div class="rich-text-subtitle rte" {{ block.shopify_attributes }}>
            {{ block.settings.subtitle }}
          </div>

        {% when 'button' %}
          {% if block.settings.button_text != blank %}
            <div class="rich-text-button-wrapper" data-block-id="{{ block.id }}" {{ block.shopify_attributes }}>
              <a
                href="{{ block.settings.button_link | default: '#' }}"
                class="rich-text-button"
                {% if block.settings.button_open_new_tab %}
                  target="_blank" rel="noopener"
                {% endif %}
              >
                {{ block.settings.button_text }}
              </a>
            </div>
          {% endif %}

        {% when 'image' %}
          {% if block.settings.image != blank %}
            <div class="rich-text-image-wrapper" data-block-id="{{ block.id }}" {{ block.shopify_attributes }}>
              {% if block.settings.image_link != blank %}
                <a href="{{ block.settings.image_link }}" 
                   {% if block.settings.image_open_new_tab %}target="_blank" rel="noopener"{% endif %}>
                  {{ block.settings.image | image_url: width: block.settings.image_max_width | image_tag: 
                     alt: block.settings.image_alt_text, 
                     loading: 'lazy' }}
                </a>
              {% else %}
                {{ block.settings.image | image_url: width: block.settings.image_max_width | image_tag: 
                   alt: block.settings.image_alt_text, 
                   loading: 'lazy' }}
              {% endif %}
            </div>
          {% endif %}
      {% endcase %}
    {% endfor %}
  </div>
</div>

