{% comment %}
  Moved styles to CSS + scoped with classes.
  Scripts defer optimization
  Used global button styling to reduce duplication.
  Conditional rendering (skip empty DOM).
  lazyload for images, Optimized tags
  Reusable variables for colors & spacing.
  Lightweight hover effects (opacity/transform).
  Fixed image/swatch borders for consistency.
  Blocks render only when enabled.
{% endcomment %}
{{ 'shop-product-details.css' | asset_url | stylesheet_tag }}

{% style %}
  .featured-product-section {
      /* Paint only when needed; reserve space for CLS */
      content-visibility: auto;
      contain-intrinsic-size: 800px 600px; /* rough fallback; adjust if needed */
      letter-spacing: var(--letter-spacing-body);
      background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.section_bg_color }}{% endif %};
      color: {{ section.settings.text_color }};
      --accent-color: {{ section.settings.accent_color }};
      padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  /* Added container class to handle the margin without affecting other sections */
  .shop-product-inner-container {
      padding-left: {{ section.settings.padding_left }}px;
      padding-right: {{ section.settings.padding_right }}px;
  }

  /* .shop-product-info {
      gap: {{ section.settings.blocks_spacing }}px;
      color: {{ section.settings.text_color }};
  } */

  .shop-main-image-wrapper {
      background-color: {{ section.settings.main_image_bg_color }};
  }

  .shop-thumbnail {
      border: 1px solid {{ section.settings.thumbnail_border_color }};
  }
  .shop-thumbnail.active {
      border-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_accent_1_color }}{% else %}{{ section.settings.thumbnail_active_border_color }}{% endif %};
  }

  .shop-indicator-dot { background-color: {{ section.settings.indicator_color }}; }
  .shop-indicator-dot.active { background-color: {{ section.settings.indicator_active_color }}; }

  .shop-nav-arrow {
      background-color: {{ section.settings.arrow_bg_color }};
      border: 1px solid {{ section.settings.arrow_border_color }};
  }

  .shop-product-title { color: {{ section.settings.title_color }}; }
  .shop-product-price { color: {{ section.settings.price_color }} !important; }
  .shop-compare-price { color: {{ section.settings.compare_price_color }} !important; }
  .shop-save-price {
      background-color: {{ section.settings.sale_badge_bg_color }} !important;
      color: {{ section.settings.sale_badge_text_color }} !important;
  }
  .shop-product-description { color: {{ section.settings.description_color }}; }
  .shop-read-more, .shop-read-less { color: {{ section.settings.accent_color }}; }
  .shop-custom-content { color: {{ section.settings.custom_content_color }}; }

  /* Add to cart button */
  {% for block in section.blocks %}
    {% if block.type == 'add_to_cart' %}
      .shop-add-to-cart-button {
        {% if settings.enable_global_button_styling and block.settings.use_global_button_styling %}
          padding: var(--global-button-padding-y, 12px) 20px !important;
          font-size: var(--global-button-font-size, 14px) !important;
          font-weight: var(--global-button-font-weight, 700) !important;
          letter-spacing: var(--global-button-letter-spacing, 1px) !important;
          text-transform: var(--global-button-text-transform, none) !important;
          border-radius: var(--global-button-radius, 8px) !important;
          {% unless settings.enable_button_gradient %}
          /* Only apply solid color if gradient is disabled */
          background-color: var(--global-button-bg-color, #EF4A65) !important;
          background: var(--global-button-bg-color, #EF4A65) !important;
          {% endunless %}
          color: var(--global-button-text-color, #FFFFFF) !important;
          border: var(--global-button-border-width, 0px) solid var(--global-button-border-color, #EF4A65) !important;
        {% else %}
          padding: {{ block.settings.custom_button_padding_y | default: 12 }}px 20px !important;
          font-size: {{ block.settings.custom_button_font_size | default: 14 }}px !important;
          letter-spacing: var(--global-button-letter-spacing, 1px) !important;
          font-weight: var(--global-button-font-weight, 700) !important;
          background-color: {% if section.settings.use_theme_colors %}
                               {% if settings.use_dedicated_button_colors %}
                                 {% if settings.global_section_button_color != blank %}
                                   {{ settings.global_section_button_color }}
                                 {% else %}
                                   {{ settings.global_section_accent_1_color }}
                                 {% endif %}
                               {% else %}
                                 {{ settings.global_section_accent_1_color }}
                               {% endif %}
                             {% else %}
                               {{ section.settings.button_color }}
                             {% endif %} !important;
          color: {% if section.settings.use_theme_colors %}
                   {% if settings.use_dedicated_button_colors %}
                     {% if settings.global_section_button_text_color != blank %}
                       {{ settings.global_section_button_text_color }}
                     {% else %}
                       {{ settings.global_section_background_color }}
                     {% endif %}
                   {% else %}
                     {{ settings.global_section_background_color }}
                   {% endif %}
                 {% else %}
                   {{ section.settings.button_text_color }}
                 {% endif %} !important;
        {% endif %}
        transition: transform .15s ease, box-shadow .15s ease, opacity .15s ease;
        will-change: transform;
      }

      .shop-add-to-cart-button .button-text {
        {% if settings.enable_global_button_styling and block.settings.use_global_button_styling %}
          font-size: var(--global-button-font-size, 14px) !important;
          font-weight: var(--global-button-font-weight, 700) !important;
          letter-spacing: var(--global-button-letter-spacing, 1px) !important;
          text-transform: var(--global-button-text-transform, none) !important;
        {% else %}
          font-size: {{ block.settings.custom_button_font_size | default: 14 }}px !important;
          font-weight: var(--global-button-font-weight, 700) !important;
          letter-spacing: var(--global-button-letter-spacing, 1px) !important;
          text-transform: var(--global-button-text-transform, none) !important;
        {% endif %}
      }

      .shop-add-to-cart-button:hover {
        {% if settings.enable_global_button_styling and block.settings.use_global_button_styling %}
          {% unless settings.enable_button_gradient %}
          /* Only apply solid color if gradient is disabled */
          background-color: var(--global-button-hover-bg-color, #D63953) !important;
          background: var(--global-button-hover-bg-color, #D63953) !important;
          {% endunless %}
          color: var(--global-button-hover-text-color, #FFFFFF) !important;
          transform: translateY(-1px);
          box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1) !important;
        {% else %}
          opacity: 0.9;
          transform: translateY(-1px);
        {% endif %}
      }

      /* Respect reduced motion for PSI & a11y */
      @media (prefers-reduced-motion: reduce) {
        .shop-add-to-cart-button,
        .shop-add-to-cart-button:hover {
          transition: none;
          transform: none;
          box-shadow: none;
        }
      }
    {% endif %}
  {% endfor %}

  /* Fix for white color swatches (kept as-is) */
  .simple-variant-picker__color-swatch[data-white-swatch="true"],
  .simple-variant-picker__color-swatch[style*="background-color: #fff"],
  .simple-variant-picker__color-swatch[style*="background-color: #ffffff"],
  .simple-variant-picker__color-swatch[style*="background-color: #FFFFFF"] {
    border: 1px solid #e0e0e0 !important;
  }

  /* Social Media Badge Styles */
  .featured-product-social-badge {
    display: inline-flex !important;
    align-items: center !important;
    padding: 1.7px 10px !important;
    background-color: #f8f9fa !important;
    border-radius: 999px !important;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif !important;
    font-size: 11px !important;
    color: #262626 !important;
    position: relative !important;
    border: 1px solid transparent !important;
    background-clip: padding-box !important;
    margin-bottom: 10px !important;
    gap: 7px !important;
  }

  .featured-product-social-badge.tiktok-views-badge::before {
    content: '' !important;
    position: absolute !important;
    top: -1px !important;
    right: -1px !important;
    bottom: -1px !important;
    left: -1px !important;
    z-index: -1 !important;
    border-radius: 999px !important;
    background: linear-gradient(45deg, #00f2ea, #ff0050) !important;
  }

  .featured-product-social-badge.instagram-views-badge::before {
    content: '' !important;
    position: absolute !important;
    top: -1px !important;
    right: -1px !important;
    bottom: -1px !important;
    left: -1px !important;
    z-index: -1 !important;
    border-radius: 999px !important;
    background: linear-gradient(45deg, #833ab4, #fd1d1d, #fcb045) !important;
  }

  .featured-product-social-badge.facebook-views-badge::before {
    content: '' !important;
    position: absolute !important;
    top: -1px !important;
    right: -1px !important;
    bottom: -1px !important;
    left: -1px !important;
    z-index: -1 !important;
    border-radius: 999px !important;
    background: #1877F2 !important;
  }

  .featured-product-social-badge .tiktok-icon,
  .featured-product-social-badge .instagram-icon,
  .featured-product-social-badge .facebook-icon {
    width: 9.8px !important;
    height: 9.8px !important;
    flex-shrink: 0 !important;
  }

  .featured-product-social-badge .tiktok-text,
  .featured-product-social-badge .instagram-text,
  .featured-product-social-badge .facebook-text {
    letter-spacing: -0.3px !important;
    font-weight: 500 !important;
  }

  @media (max-width: 768px) {
    .featured-product-social-badge {
      font-size: 11px !important;
      padding: 1.7px 12px !important;
    }

    .featured-product-social-badge .tiktok-icon,
    .featured-product-social-badge .instagram-icon,
    .featured-product-social-badge .facebook-icon {
      width: 11.7px !important;
      height: 11.7px !important;
    }
  }
{% endstyle %}

<div
