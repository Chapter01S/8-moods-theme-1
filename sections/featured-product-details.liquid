  style="
    background-color: {% if section.settings.use_theme_color %}var(--color-{{ section.settings.background_color }}){% else %}{{ section.settings.custom_background_color }}{% endif %};
    color: {% if section.settings.use_theme_color %}var(--color-{{ section.settings.text_color }}){% else %}{{ section.settings.custom_text_color }}{% endif %};
    padding-top: {{ section.settings.top_spacing }}px;
    padding-bottom: {{ section.settings.bottom_spacing }}px;
    padding-left: {{ section.settings.left_padding }}px;
    padding-right: {{ section.settings.right_padding }}px;
  "
  id="section-{{ section.id }}"
>
  <div class="shop-product-inner-container">
    {% if section.settings.featured_product != blank %}
      {% assign product = all_products[section.settings.featured_product] %}

      {% if product != blank %}
        <div class="shop-product-layout">
          {%- render 'product-gallary',
            product: product,
            show_product_variants: false,
            current_variant: false,
            enable_image_zoom: section.settings.enable_image_zoom
          -%}

          {% if section.settings.show_product_info %}
            <div class="shop-product-info">
              {% comment %} Social Media Badge {% endcomment %}
              {% if section.settings.show_social_badge %}
                {% if section.settings.social_platform == 'tiktok' %}
                  <div
                    class="featured-product-social-badge tiktok-views-badge"
                    style="background-color: #f8f9fa !important; color: #262626 !important;"
                  >
                    <img
                      class="tiktok-icon"
                      src="https://cdn4.iconfinder.com/data/icons/social-media-flat-7/64/Social-media_Tiktok-512.png"
                      width="9.8"
                      height="9.8"
                      alt="TikTok"
                    >
                    <span class="tiktok-text">
                      {{- section.settings.badge_text | default: 'Over ' }}
                      {{ section.settings.view_count -}}
                      {{- section.settings.badge_suffix | default: 'M Views On TikTok' -}}
                    </span>
                  </div>
                {% elsif section.settings.social_platform == 'instagram' %}
                  <div
                    class="featured-product-social-badge instagram-views-badge"
                    style="background-color: #f8f9fa !important; color: #262626 !important;"
                  >
                    <svg
                      class="instagram-icon"
                      width="9.8"
                      height="9.8"
                      viewBox="0 0 24 24"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <defs>
                        <linearGradient id="instagramGradientFeatured{{ section.id }}" x1="0%" y1="0%" x2="100%" y2="100%">
                          <stop offset="0%" stop-color="#833ab4" />
                          <stop offset="50%" stop-color="#fd1d1d" />
                          <stop offset="100%" stop-color="#fcb045" />
