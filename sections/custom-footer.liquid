  "class": "section-custom-footer",
  "max_blocks": 10,
  "settings": [
    {
      "type": "checkbox",
      "id": "use_theme_colors",
      "label": "Use Theme Colors",
      "default": false,
      "info": "Apply the global theme colors to this section"
    },
    {
      "type": "header",
      "content": "Newsletter Section"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter title",
      "default": "Subscribe to Our Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_subtitle",
      "label": "Newsletter subtitle",
      "default": "Stay updated with our latest news and exclusive offers."
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Email placeholder text",
      "default": "Enter your email address"
    },
    {
      "type": "text",
      "id": "newsletter_button_text",
      "label": "Button text",
      "default": "Subscribe"
    },
    {
      "type": "header",
