   <h2 class="reviews-subtitle section-title heading h1">
     {{ section.settings.title_text }} <span class="{% if section.settings.override_global_accent %}custom-accent-text{% else %}global-accent-text{% endif %}">{{ section.settings.accent_text }}</span>
   </h2>
   {% if section.settings.show_description %}
     <p class="reviews-description">
       {{ section.settings.description_text }}
     </p>
   {% endif %}
 </div>

