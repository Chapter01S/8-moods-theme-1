<!-- Apply mobile fonts immediately on page load -->
<script>
  (function () {
    if (window.innerWidth < 750) {
      document.documentElement.classList.add('faq-mobile-view');
    }
  })();
</script>

<div
  class="store-faq-section page-fade-in"
  style="
    {% unless section.settings.image_full_height %}
    padding-top: {{ section.settings.section_padding }}px;
    padding-bottom: {{ section.settings.section_padding }}px;
    {% endunless %}
    
    {% if section.settings.use_background_image and section.settings.header_image != blank %}
      {% comment %} Background Image Mode {% endcomment %}
      {% if section.settings.use_theme_colors %}
        {% if settings.global_section_use_gradient_background %}
          background-image: url('{{ section.settings.header_image | image_url: width: 2560 }}'), var(--gradient-background) !important;
        {% else %}
          background-image: url('{{ section.settings.header_image | image_url: width: 2560 }}') !important;
          background-color: {{ settings.global_section_background_color }} !important;
        {% endif %}
      {% else %}
        background-image: url('{{ section.settings.header_image | image_url: width: 2560 }}') !important;
        background-color: {{ section.settings.section_bg_color }} !important;
      {% endif %}
      background-size: {{ section.settings.background_image_size | default: 'cover' }} !important;
      background-position: {{ section.settings.background_image_position | default: 'center center' }} !important;
      background-repeat: no-repeat !important;
      background-attachment: {{ section.settings.background_image_attachment | default: 'scroll' }} !important;
      {% if section.settings.background_overlay_enable %}
        position: relative;
      {% endif %}
    {% else %}
      {% comment %} Regular Background Color {% endcomment %}
      background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.section_bg_color }}{% endif %} !important;
    {% endif %}
    
    {% if section.settings.enable_section_top_border %}
      border-top: {{ section.settings.section_top_border_width | default: 1 }}px {{ section.settings.section_top_border_style | default: 'solid' }} {{ section.settings.section_top_border_color | default: '#E5E5E5' }};
    {% endif %}
    
    {% if section.settings.enable_section_bottom_border %}
      border-bottom: {{ section.settings.section_bottom_border_width | default: 1 }}px {{ section.settings.section_bottom_border_style | default: 'solid' }} {{ section.settings.section_bottom_border_color | default: '#E5E5E5' }};
    {% endif %}
  "
>
  <div
    class="store-faq-container"
    style="
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
    "
  >
    <div class="page-width faq-flex-container {% if section.settings.center_when_no_image and section.settings.header_image == blank %}center-no-image{% endif %} {% if section.settings.two_column_desktop %}two-column-desktop{% endif %}">
      <div class="faq-header-column">
        {% if section.settings.heading != blank %}
          <h2
            class="store-faq-heading"
            style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.heading_color }}{% endif %} !important; font-size: {{ section.settings.heading_font_size }}px;"
          >
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.subtitle != blank %}
          <div
            class="store-faq-subtitle"
            style="color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.subtitle_color }}{% endif %} !important; font-size: {{ section.settings.subtitle_font_size }}px;"
          >
            {{ section.settings.subtitle }}
          </div>
        {% endif %}

        <div
          class="store-faq"
          id="store-faq-{{ section.id }}"
          style="
            width: 100%;
            margin: 0 auto;
          "
        >
          {% if section.settings.two_column_desktop %}
            <!-- Two Column Layout -->
            <div class="faq-two-columns">
              <!-- Column 1 -->
              <div
                class="faq-container faq-column-1{% if section.settings.border_style == 'bottom_only' %} border-bottom-only{% endif %}{% if section.settings.individual_item_borders %} individual-borders{% endif %}"
                style="border-radius: {{ section.settings.border_radius }}px;"
                data-accordion="{{ section.settings.accordion_mode }}"
              >
                {% for block in section.blocks %}
                  {% assign modulo = forloop.index | modulo: 2 %}
                  {% case block.type %}
                    {% when 'faq_item' %}
                      {% comment %} Show odd items (1, 3, 5...) in column 1, or all items on mobile {% endcomment %}
                      {% if modulo == 1 %}
                        {% comment %} Calculate if this is the last odd item for column 1 {% endcomment %}
                        {% assign is_last_in_column_1 = true %}
                        {% assign current_index = forloop.index %}
                        {% for future_block in section.blocks %}
                          {% assign future_index = forloop.index %}
                          {% if future_index > current_index %}
                            {% assign future_modulo = future_index | modulo: 2 %}
                            {% if future_modulo == 1 and future_block.type == 'faq_item' %}
                              {% assign is_last_in_column_1 = false %}
                              {% break %}
                            {% endif %}
                          {% endif %}
                        {% endfor %}

                        <div
                          class="faq-item"
                          {{ block.shopify_attributes }}
                          style="{% unless is_last_in_column_1 %}border-bottom: 1px solid {% if section.settings.use_theme_colors %}#E5E5E5{% else %}{{ section.settings.divider_color }}{% endif %} !important;{% endunless %}"
                        >
                          <div
                            class="faq-question"
                            style="
                              color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.question_color }}{% endif %} !important;
                              background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.question_bg_color }}{% endif %} !important;
                              --question-padding-top: {{ section.settings.question_padding_top | default: 15 }}px;
                              --question-padding-bottom: {{ section.settings.question_padding_bottom | default: 15 }}px;
                              --question-padding-left: {{ section.settings.question_padding_left | default: 20 }}px;
                              --question-padding-right: {{ section.settings.question_padding_right | default: 20 }}px;
                            "
                          >
                            <span>{{ block.settings.question }}</span>
                            <span class="faq-toggle">+</span>
                          </div>
                          <div
                            class="faq-answer"
                            style="
                              color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.answer_color }}{% endif %} !important;
                              background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.answer_bg_color }}{% endif %} !important;
                              --answer-padding-top: {{ section.settings.answer_padding_top | default: 15 }}px;
                              --answer-padding-bottom: {{ section.settings.answer_padding_bottom | default: 15 }}px;
                              --answer-padding-left: {{ section.settings.answer_padding_left | default: 10 }}px;
                              --answer-padding-right: {{ section.settings.answer_padding_right | default: 10 }}px;
                            "
                          >
                            {{ block.settings.answer }}
                          </div>
                        </div>
                      {% endif %}
                      {% comment %} Show even items (2, 4, 6...) in column 1 on mobile only {% endcomment %}
                      {% if modulo == 0 %}
                        {% comment %} Calculate if this is the last even item for mobile {% endcomment %}
                        {% assign is_last_even_item = true %}
                        {% assign current_index = forloop.index %}
                        {% for future_block in section.blocks %}
                          {% assign future_index = forloop.index %}
                          {% if future_index > current_index %}
                            {% assign future_modulo = future_index | modulo: 2 %}
                            {% if future_modulo == 0 and future_block.type == 'faq_item' %}
                              {% assign is_last_even_item = false %}
                              {% break %}
                            {% endif %}
                          {% endif %}
                        {% endfor %}

                        <div
                          class="faq-item mobile-only-item"
                          {{ block.shopify_attributes }}
                          style="{% unless is_last_even_item %}border-bottom: 1px solid {% if section.settings.use_theme_colors %}#E5E5E5{% else %}{{ section.settings.divider_color }}{% endif %} !important;{% endunless %}"
                        >
                          <div
                            class="faq-question"
                            style="
                              color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.question_color }}{% endif %} !important;
                              background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.question_bg_color }}{% endif %} !important;
                              --question-padding-top: {{ section.settings.question_padding_top | default: 15 }}px;
                              --question-padding-bottom: {{ section.settings.question_padding_bottom | default: 15 }}px;
                              --question-padding-left: {{ section.settings.question_padding_left | default: 20 }}px;
                              --question-padding-right: {{ section.settings.question_padding_right | default: 20 }}px;
                            "
                          >
                            <span>{{ block.settings.question }}</span>
                            <span class="faq-toggle">+</span>
                          </div>
                          <div
                            class="faq-answer"
                            style="
                              color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.answer_color }}{% endif %} !important;
                              background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.answer_bg_color }}{% endif %} !important;
                              --answer-padding-top: {{ section.settings.answer_padding_top | default: 15 }}px;
                              --answer-padding-bottom: {{ section.settings.answer_padding_bottom | default: 15 }}px;
                              --answer-padding-left: {{ section.settings.answer_padding_left | default: 10 }}px;
                              --answer-padding-right: {{ section.settings.answer_padding_right | default: 10 }}px;
                            "
                          >
                            {{ block.settings.answer }}
                          </div>
                        </div>
                      {% endif %}
                  {% endcase %}
                {% endfor %}
              </div>

              <!-- Column 2 -->
              <div
                class="faq-container faq-column-2{% if section.settings.border_style == 'bottom_only' %} border-bottom-only{% endif %}{% if section.settings.individual_item_borders %} individual-borders{% endif %}"
                style="border-radius: {{ section.settings.border_radius }}px;"
                data-accordion="{{ section.settings.accordion_mode }}"
              >
                {% for block in section.blocks %}
                  {% assign modulo = forloop.index | modulo: 2 %}
                  {% case block.type %}
                    {% when 'faq_item' %}
                      {% if modulo == 0 %}
                        {% comment %} Calculate if this is the last even item for column 2 {% endcomment %}
                        {% assign is_last_in_column_2 = true %}
                        {% assign current_index = forloop.index %}
                        {% for future_block in section.blocks %}
                          {% assign future_index = forloop.index %}
                          {% if future_index > current_index %}
                            {% assign future_modulo = future_index | modulo: 2 %}
                            {% if future_modulo == 0 and future_block.type == 'faq_item' %}
                              {% assign is_last_in_column_2 = false %}
                              {% break %}
                            {% endif %}
                          {% endif %}
                        {% endfor %}

                        <div
                          class="faq-item"
                          {{ block.shopify_attributes }}
                          style="{% unless is_last_in_column_2 %}border-bottom: 1px solid {% if section.settings.use_theme_colors %}#E5E5E5{% else %}{{ section.settings.divider_color }}{% endif %} !important;{% endunless %}"
                        >
                          <div
                            class="faq-question"
                            style="
                              color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.question_color }}{% endif %} !important;
                              background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.question_bg_color }}{% endif %} !important;
                              --question-padding-top: {{ section.settings.question_padding_top | default: 15 }}px;
                              --question-padding-bottom: {{ section.settings.question_padding_bottom | default: 15 }}px;
                              --question-padding-left: {{ section.settings.question_padding_left | default: 20 }}px;
                              --question-padding-right: {{ section.settings.question_padding_right | default: 20 }}px;
                            "
                          >
                            <span>{{ block.settings.question }}</span>
                            <span class="faq-toggle">+</span>
                          </div>
                          <div
                            class="faq-answer"
                            style="
                              color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.answer_color }}{% endif %} !important;
                              background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.answer_bg_color }}{% endif %} !important;
                              --answer-padding-top: {{ section.settings.answer_padding_top | default: 15 }}px;
                              --answer-padding-bottom: {{ section.settings.answer_padding_bottom | default: 15 }}px;
                              --answer-padding-left: {{ section.settings.answer_padding_left | default: 10 }}px;
                              --answer-padding-right: {{ section.settings.answer_padding_right | default: 10 }}px;
                            "
                          >
                            {{ block.settings.answer }}
                          </div>
                        </div>
                      {% endif %}
                  {% endcase %}
                {% endfor %}
              </div>
            </div>
          {% else %}
            <!-- Single Column Layout (Default) -->
            <div
              class="faq-container{% if section.settings.border_style == 'bottom_only' %} border-bottom-only{% endif %}{% if section.settings.individual_item_borders %} individual-borders{% endif %}"
              style="border-radius: {{ section.settings.border_radius }}px;"
              data-accordion="{{ section.settings.accordion_mode }}"
            >
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'faq_item' %}
                    {% comment %} Check if this is the last FAQ item {% endcomment %}
                    {% assign is_last_item = true %}
                    {% assign current_index = forloop.index %}
                    {% for future_block in section.blocks %}
                      {% assign future_index = forloop.index %}
                      {% if future_index > current_index and future_block.type == 'faq_item' %}
                        {% assign is_last_item = false %}
                        {% break %}
                      {% endif %}
                    {% endfor %}
                    <div
                      class="faq-item"
                      {{ block.shopify_attributes }}
                      style="{% unless is_last_item %}border-bottom: 1px solid {% if section.settings.use_theme_colors %}#E5E5E5{% else %}{{ section.settings.divider_color }}{% endif %} !important;{% endunless %}"
                    >
                      <div
                        class="faq-question"
                        style="
                          color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.question_color }}{% endif %} !important;
                          background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.question_bg_color }}{% endif %} !important;
                          --question-padding-top: {{ section.settings.question_padding_top | default: 15 }}px;
                          --question-padding-bottom: {{ section.settings.question_padding_bottom | default: 15 }}px;
                          --question-padding-left: {{ section.settings.question_padding_left | default: 20 }}px;
                          --question-padding-right: {{ section.settings.question_padding_right | default: 20 }}px;
                        "
                      >
                        <span>{{ block.settings.question }}</span>
                        <span class="faq-toggle">+</span>
                      </div>
                      <div
                        class="faq-answer"
                        style="
                          color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.answer_color }}{% endif %} !important;
                          background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.answer_bg_color }}{% endif %} !important;
                          --answer-padding-top: {{ section.settings.answer_padding_top | default: 15 }}px;
                          --answer-padding-bottom: {{ section.settings.answer_padding_bottom | default: 15 }}px;
                          --answer-padding-left: {{ section.settings.answer_padding_left | default: 10 }}px;
                          --answer-padding-right: {{ section.settings.answer_padding_right | default: 10 }}px;
                        "
                      >
                        {{ block.settings.answer }}
                      </div>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>

      <div class="faq-content-column{% if section.settings.image_full_height %} full-height-image{% endif %}">
        {% comment %} Only show inline image if NOT using background image mode {% endcomment %}
        {% unless section.settings.use_background_image %}
          {% if section.settings.header_image != blank %}
            <div class="faq-header-image desktop-only{% if section.settings.image_full_height %} full-height{% endif %}">
              <img
                src="{{ section.settings.header_image | image_url: width: 600 }}"
                alt="{{ section.settings.header_image.alt | default: section.settings.heading }}"
                style="
                  {% unless section.settings.image_full_height %}
                    max-width: 100%;
                    height: auto;
                  {% endunless %}
                  border-radius: {{ section.settings.image_border_radius }}px;
                "
                width=""
                height=""
              >
            </div>
          {% endif %}
        {% endunless %}
      </div>
    </div>
  </div>
</div>

<style>
  /* Load-in Animation */
  .page-fade-in {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Staggered animation delays */
  .page-fade-in:nth-child(2) { animation-delay: 0.1s; }
  .page-fade-in:nth-child(3) { animation-delay: 0.2s; }
  .page-fade-in:nth-child(4) { animation-delay: 0.3s; }

  .store-faq-section {
    {% if section.settings.image_full_height %}
    padding: 0; /* Remove padding when full height image is enabled */
    position: relative; /* For absolute positioning of full-height image */
    {% else %}
    padding: {{ section.settings.section_padding }}px 0;
    {% endif %}
    overflow-x: hidden; /* Prevent horizontal overflow at section level */
  }

  {% comment %} Background Image Overlay {% endcomment %}
  {% if section.settings.use_background_image and section.settings.header_image != blank and section.settings.background_overlay_enable %}
  .store-faq-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: {{ section.settings.background_overlay_color | default: 'rgba(0,0,0,0.3)' }};
    opacity: {{ section.settings.background_overlay_opacity | default: 30 | divided_by: 100.0 }};
    z-index: 0;
    pointer-events: none;
  }

  .store-faq-container {
    position: relative;
    z-index: 1;
  }
  {% endif %}

  {% comment %} Mobile Background Image {% endcomment %}
  @media screen and (max-width: 767px) {
    .store-faq-section {
      {% if section.settings.use_background_image and section.settings.header_image != blank %}
        {% if section.settings.mobile_background_image != blank %}
          {% comment %} Mobile-specific background image {% endcomment %}
          {% if section.settings.use_theme_colors %}
            {% if settings.global_section_use_gradient_background %}
              background-image: url('{{ section.settings.mobile_background_image | image_url: width: 1024 }}'), var(--gradient-background) !important;
            {% else %}
              background-image: url('{{ section.settings.mobile_background_image | image_url: width: 1024 }}') !important;
              background-color: {{ settings.global_section_background_color }} !important;
            {% endif %}
          {% else %}
            background-image: url('{{ section.settings.mobile_background_image | image_url: width: 1024 }}') !important;
            background-color: {{ section.settings.section_bg_color }} !important;
          {% endif %}
        {% endif %}
      {% endif %}
    }
  }

  .store-faq-container {
    width: 100%;
    max-width: 1200px; /* Set max-width here instead of inline */
    margin: 0 auto;
    padding-left: {{ section.settings.container_padding_mobile | default: 15 }}px;
    padding-right: {{ section.settings.container_padding_mobile | default: 15 }}px;
    box-sizing: border-box;
  }

  .faq-container.border-bottom-only {
    border: none !important;
  }
  .faq-container.border-bottom-only .faq-question {
    padding-right: var(--question-padding-right, 20px) !important;
    padding-left: var(--question-padding-left, 20px) !important;
  }
  .faq-container.border-bottom-only .faq-answer {
    padding-right: var(--answer-padding-right, 20px) !important;
    padding-left: var(--answer-padding-left, 20px) !important;
  }

  .faq-flex-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 100%;
  }

  .faq-header-column {
    margin-bottom: 30px;
    width: 100%;
    max-width: 100%;
  }

  .faq-content-column {
    width: 100%;
    max-width: 100%;
  }

  .store-faq-heading {
    margin-bottom: 15px;
    letter-spacing: var(--letter-spacing-heading);
    font-size: {{ section.settings.heading_font_size }}px;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .store-faq-subtitle {
    line-height: 1.5;
    max-width: 100%;
    font-weight: var(--font-weight-regular);
    letter-spacing: var(--letter-spacing-body);
    word-wrap: break-word;
    overflow-wrap: break-word;
    margin-bottom: 24px;
  }

  .faq-header-image {
    margin-top: 20px;
  }

  .faq-header-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Full height image styling - base styles */
  .faq-header-image.full-height {
    margin: 0;
    height: 100%;
    overflow: hidden;
  }

  .faq-header-image.full-height img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  /* Hide image on mobile */
  .desktop-only {
    display: none;
  }

  .store-faq {
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
  }

  #store-faq-{{ section.id }} .faq-container {
    overflow: hidden !important;
    width: 100% !important;
    max-width: 100% !important;
    box-sizing: border-box !important;
    border: 1px solid {% if section.settings.use_theme_colors %}#E5E5E5{% else %}{{ section.settings.border_color }}{% endif %} !important;
    border-radius: {{ section.settings.border_radius }}px !important;
  }

  .store-faq .faq-item {
    width: 100%;
    box-sizing: border-box;
  }

  /* Single column layout - remove bottom border from last item only when container has border */
  .store-faq .faq-container:not(.individual-borders) .faq-item:last-child {
    border-bottom: none !important;
    margin-bottom: 0 !important;
  }

  /* Two column layout - keep bottom border on last items in columns for visual consistency */
  .faq-flex-container.two-column-desktop .faq-container:not(.individual-borders) .faq-item:last-child {
    border-bottom: none !important;
    margin-bottom: 0 !important;
  }

  /* Container border handles the bottom border, avoid double border */
  .faq-flex-container.two-column-desktop .faq-container:not(.individual-borders):not(.border-bottom-only) {
    border-bottom: 1px solid {% if section.settings.use_theme_colors %}#E5E5E5{% else %}{{ section.settings.divider_color }}{% endif %} !important;
  }

  /* Border-bottom-only style - ensure last item has border */
  .faq-container.border-bottom-only .faq-item:last-child {
    border-bottom: 1px solid {% if section.settings.use_theme_colors %}#E5E5E5{% else %}{{ section.settings.divider_color }}{% endif %} !important;
  }

  .store-faq .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--question-padding-top, 15px) var(--question-padding-right, 20px) var(--question-padding-bottom, 15px) var(--question-padding-left, 20px);
    cursor: pointer;
    font-weight: var(--font-weight-semibold);
    letter-spacing: var(--letter-spacing-body);
    position: relative;
    font-size: {{ section.settings.question_font_size }}px;
    width: 100%;
    box-sizing: border-box;
    word-wrap: break-word;
    overflow-wrap: break-word;
    border-radius: {{ section.settings.border_radius }}px {{ section.settings.border_radius }}px 0 0 !important;
  }
  
  .faq-item.active .faq-question {
    border-radius: 0 !important;
  }
  
  .faq-container.individual-borders .faq-item:first-child .faq-question {
    border-radius: {{ section.settings.border_radius }}px {{ section.settings.border_radius }}px 0 0 !important;
  }
  
  .faq-container.individual-borders .faq-item:last-child .faq-answer {
