{% doc %}
  @prompt
    marquee with text going from left to write. But give me the option to make some text bold and some not
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-container-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    display: block;
  }

  .ai-marquee-wrapper-{{ ai_gen_id }} {
    display: flex;
    width: fit-content;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  .ai-marquee-content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    white-space: nowrap;
    padding-right: {{ block.settings.text_spacing }}px;
  }

  .ai-marquee-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: {{ block.settings.font_weight }};
  }

  .ai-marquee-text-{{ ai_gen_id }} strong {
    font-weight: {{ block.settings.bold_font_weight }};
  }

  .ai-marquee-separator-{{ ai_gen_id }} {
    margin: 0 {{ block.settings.separator_spacing }}px;
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.font_size }}px;
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-marquee-container-{{ ai_gen_id }}:hover .ai-marquee-wrapper-{{ ai_gen_id }} {
    {% if block.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }

    .ai-marquee-separator-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<marquee-block-{{ ai_gen_id }}
  class="ai-marquee-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-marquee-wrapper-{{ ai_gen_id }}">
    {% for i in (1..2) %}
      <div class="ai-marquee-content-{{ ai_gen_id }}">
        {% if block.settings.text_1 != blank %}
          <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.text_1 }}</span>
          {% if block.settings.show_separator %}
            <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator_symbol }}</span>
          {% endif %}
        {% endif %}

        {% if block.settings.text_2 != blank %}
          <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.text_2 }}</span>
          {% if block.settings.show_separator %}
            <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator_symbol }}</span>
          {% endif %}
        {% endif %}

        {% if block.settings.text_3 != blank %}
          <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.text_3 }}</span>
          {% if block.settings.show_separator %}
            <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator_symbol }}</span>
          {% endif %}
        {% endif %}

        {% if block.settings.text_4 != blank %}
          <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.text_4 }}</span>
          {% if block.settings.show_separator %}
            <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator_symbol }}</span>
          {% endif %}
        {% endif %}

        {% if block.settings.text_5 != blank %}
          <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.text_5 }}</span>
          {% if block.settings.show_separator %}
            <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator_symbol }}</span>
          {% endif %}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</marquee-block-{{ ai_gen_id }}>

<script>
  (function() {
    class MarqueeBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.adjustSpeed();
      }

      adjustSpeed() {
        const wrapper = this.querySelector('.ai-marquee-wrapper-{{ ai_gen_id }}');
        if (wrapper) {
          const contentWidth = wrapper.scrollWidth / 2;
          const speed = {{ block.settings.scroll_speed }};
          wrapper.style.animationDuration = speed + 's';
        }
      }
    }

    customElements.define('marquee-block-{{ ai_gen_id }}', MarqueeBlock{{ ai_gen_id }});
  })();
</script>

